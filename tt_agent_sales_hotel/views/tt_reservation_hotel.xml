<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tt_reservation_hotel_sales_form_view" model="ir.ui.view">
        <field name="name">tt.reservation.hotel.sales.form.view</field>
        <field name="model">tt.reservation.hotel</field>
        <field name="inherit_id" ref="tt_reservation_hotel.tt_reservation_hotel_form_views"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='prices']" position="after">
                <page string="HO Invoice" name="agent_invoice">
                    <field name="ho_invoice_line_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="invoice_id"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="total"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
                <page string="Agent Invoice" name="agent_invoice">
                    <group>
                        <group>
                            <field name="state_invoice"/>
                        </group>
                    </group>
                    <field name="invoice_line_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="invoice_id"/>
                            <field name="state"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="total"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>