<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="tt_frequent_flyer_airline_form_view" model="ir.ui.view">
            <field name="name">tt.frequent.flyer.airline.form.view</field>
            <field name="model">tt.frequent.flyer.airline</field>
            <field name="arch" type="xml">
                <form string="Frequent Flyer Airline">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Name"/>
                            <h1>
                                <field name="name" required="True"/>
                            </h1>
                        </div>
                        <field name="sequence"/>
                        <separator string="Providers"/>
                        <group>
                            <field name="provider_access_type"/>
                        </group>
                        <field name="provider_ids"/>
                        <separator string="Carriers"/>
                        <group>
                            <field name="carrier_access_type"/>
                        </group>
                        <field name="carrier_ids"/>
                        <separator string="Loyalty Programs"/>
                        <field name="loyalty_program_ids"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tt_frequent_flyer_airline_tree_view" model="ir.ui.view">
            <field name="name">tt.frequent.flyer.airline.tree.view</field>
            <field name="model">tt.frequent.flyer.airline</field>
            <field name="arch" type="xml">
                <tree string="Frequent Flyer Airline">
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="provider_access_type"/>
                    <field name="display_providers"/>
                    <field name="carrier_access_type"/>
                    <field name="display_carriers"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="tt_frequent_flyer_airline_view_search" model="ir.ui.view">
            <field name="name">tt.frequent.flyer.airline.view.search</field>
            <field name="model">tt.frequent.flyer.airline</field>
            <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="display_providers"/>
                <field name="display_carriers"/>
                <filter name="inactive" string="Archived" domain="[('active','=',False)]"/>
            </search>
            </field>
        </record>

        <record id="tt_frequent_flyer_airline_action_view" model="ir.actions.act_window">
            <field name="name">Frequent Flyer Airline</field>
            <field name="view_type">form</field>
            <field name="res_model">tt.frequent.flyer.airline</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
            </field>
            <field name="context">
                {
                'form_view_ref': 'tt_base.tt_frequent_flyer_airline_form_view',
                'tree_view_ref': 'tt_base.tt_frequent_flyer_airline_tree_view'
                }
            </field>
        </record>

        <menuitem id="sub_menu_tour_travel_frequent_flyer_airline"
                  parent="tt_base.menu_tour_travel_loyalty_program"
                  groups="base.group_user"
                  name="Frequent Flyer Airline"
                  sequence="20"
                  action="tt_frequent_flyer_airline_action_view"/>
    </data>
</odoo>