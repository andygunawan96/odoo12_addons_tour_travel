<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="tt_ff_passenger_airline_form_view" model="ir.ui.view">
        <field name="name">tt.ff.passenger.airline.form.view</field>
        <field name="model">tt.ff.passenger.airline</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="ff_number"/>
                            <field name="ff_code"/>
                            <field name="schedule_id"/>
                            <field name="provider_sequence"/>
                        </group>
                        <group>
                            <field name="passenger_id"/>
                            <field name="loyalty_program_id"/>
                            <field name="provider_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="tt_ff_passenger_airline_tree_view" model="ir.ui.view">
        <field name="name">tt.ff.passenger.airline.tree.view</field>
        <field name="model">tt.ff.passenger.airline</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="passenger_id"/>
                <field name="provider_id"/>
                <field name="loyalty_program_id"/>
                <field name="ff_number"/>
            </tree>
        </field>
    </record>
</odoo>