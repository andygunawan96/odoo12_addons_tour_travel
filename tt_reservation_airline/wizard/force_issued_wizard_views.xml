<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="force_issued_wizard_form_view" model="ir.ui.view">
        <field name="name">Force Issued Wizard</field>
        <field name="model">force.issued.wizard</field>
        <field name="arch" type="xml">
            <form string="Force Issued Wizard">
                <group>
                    <field name="provider_id" invisible="1"/>
                    <field name="agent_id"/>
                    <field name="agent_type_id"/>
                    <field name="cor_membership"/>
                    <field name="customer_parent_id" attrs="{'invisible': [('cor_membership', '!=', 'member')], 'required': [('cor_membership', '=', 'member')]}"/>
                    <field name="customer_parent_type_id" attrs="{'invisible': [('cor_membership', '!=', 'member')]}"/>
                    <field name="acquirer_id" attrs="{'invisible': [('cor_membership', '!=', 'non_member')], 'required': [('cor_membership', '=', 'non_member')]}"/>
                </group>
                <footer>
                    <button name="submit_force_issued" string="Force Issued (Create Ledger)" type="object" default_focus="1" class="oe_highlight"/>
                    <button name="submit_set_to_issued" string="Set To Issued (No Create Ledger)" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="force_issued_wizard_action_view" model="ir.actions.act_window">
        <field name="name">force.issued.wizard.action.view</field>
        <field name="res_model">force.issued.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>