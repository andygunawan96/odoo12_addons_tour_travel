<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tt_reservation_passport_sales_form_view" model="ir.ui.view">
        <field name="name">tt.reservation.passport.sales.form.view</field>
        <field name="model">tt.reservation.passport</field>
        <field name="inherit_id" ref="tt_reservation_passport.tt_reservation_passport_view_form"/>
        <field name="arch" type="xml">

            <field name="contact_id" position="after">
                <field name="state_invoice"/>
            </field>
            <xpath expr="//page[@name='ledger_page']" position="after">
                <page string="HO Invoice" name="ho_invoice" groups="tt_base.group_tt_agent_user,tt_base.group_tt_tour_travel,base.group_erp_manager">
                    <field name="ho_invoice_line_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="invoice_id"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="total"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
                <page string="Agent Invoice" name="agent_invoice">
                    <field name="invoice_line_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="invoice_id"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="total"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>