<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_agent_report_balance_wz" model="ir.actions.act_window">
            <field name="name">Report Balance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tt.agent.report.balance.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="detail_balance_report_form"/>
            <field name="target">new</field>
        </record>

        <record id="tt_log_agent_balance_report_action_views" model="ir.actions.act_window">
            <field name="name">Log Agent Balance Report</field>
            <field name="res_model">tt.ledger</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">
                {
                'form_view_ref': 'tt_accounting.tt_ledger_form_view',
                'tree_view_ref': 'tt_accounting.tt_ledger_tree_view'
                }
            </field>
        </record>

        <menuitem
                id="menu_tour_travel_report_balance"
                name="Agent Balance"
                parent="tt_base.top_tour_travel_report"
                sequence="1"
        />
        <menuitem
                id="sub_menu_tour_travel_report_log_balance"
                name="Agent Balance Log"
                parent="tt_agent_report_balance.menu_tour_travel_report_balance"
                sequence="10"
        />
    </data>
</odoo>