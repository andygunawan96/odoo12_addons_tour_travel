<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tt_reservation_visa_sales_form_view" model="ir.ui.view">
        <field name="name">tt.reservation.visa.sales.form.view</field>
        <field name="model">tt.reservation.visa</field>
        <field name="inherit_id" ref="tt_reservation_visa.tt_reservation_visa_view_form"/>
        <field name="arch" type="xml">

            <field name="contact_id" position="after">
                <field name="state_invoice"/>
            </field>
            <xpath expr="//page[@name='ledger_page']" position="after">
                <page string="Agent Invoice" name="agent_invoice">
                    <field name="invoice_line_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="state"/>
                            <field name="total"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>