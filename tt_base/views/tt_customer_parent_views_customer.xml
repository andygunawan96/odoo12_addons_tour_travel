<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tt_customer_parent_form_view_customer" model="ir.ui.view">
        <field name="name">tt.customer.parent.form.view.customer</field>
        <field name="model">tt.customer.parent</field>
        <field name="priority">30</field>
        <field name="arch" type="xml">
            <form create="false">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" groups="tt_base.group_tt_agent_finance_operator,tt_base.group_tt_agent_user_operator,base.user_admin" attrs="{'invisible':[('state','!=', 'draft')]}"/>
                    <button name="action_request" string="Submit Request" type="object" groups="tt_base.group_tt_agent_finance_operator,tt_base.group_tt_agent_user_supervisor,base.user_admin" attrs="{'invisible':[('state','!=', 'confirm')]}"/>
                    <button name="action_validate" string="Validate" type="object" groups="tt_base.group_tt_agent_finance_operator,base.user_admin" attrs="{'invisible':[('state','!=', 'request')]}"/>
                    <button name="action_done" string="Approve" type="object" groups="tt_base.group_tt_agent_finance_manager,base.user_admin" attrs="{'invisible':[('state','!=', 'validate')]}"/>
                    <button name="action_reject" string="Reject" type="object" groups="tt_base.group_tt_agent_user_operator,base.user_admin" attrs="{'invisible':[('state','=','done')]}"/>
                    <button name="set_to_done" string="Set to Done" type="object" groups="base.user_admin"/>
                    <button name="set_to_draft" string="Set to Draft" type="object" groups="tt_base.group_tt_agent_user_operator,base.user_admin" attrs="{'invisible':[('state','!=','reject')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,request,validate,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <field name="logo" widget='image' class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Agent's Name" required="True"/><br/>
                            <field name="seq_id"/>
                        </h1>
                    </div>
                    <group>
                        <group name="ctp_info">
                            <field name="customer_parent_type_id" readonly="1"/>
                            <field name="parent_agent_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="actual_balance"/>
                            <field name="balance"/>
                            <field name="credit_limit" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="currency_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="tax_identity_number"/>
                        </group>
                        <group>
                            <field name="company_bank_data"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Customer">
                            <field name="customer_ids"
                                   domain="[('agent_id', '=', parent_agent_id)]"
                                   context="{'tree_view_ref': 'tt_base.tt_customer_customer_tree_view', 'default_agent_id': parent_agent_id}"/>
                        </page>
                        <page string="Addresses">
                            <field name="address_ids"/>
                        </page>
                        <page string="Phones">
                            <field name="phone_ids"/>
                        </page>
                        <page string="Social Media">
                            <field name="social_media_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="tt_customer_parent_form_view_customer_finance" model="ir.ui.view">
        <field name="name">tt.customer.parent.form.view.customer.finance</field>
        <field name="model">tt.customer.parent</field>
        <field name="inherit_id" ref="tt_base.tt_customer_parent_form_view_customer"/>
        <field name="groups_id" eval="[(6, 0, [ref('tt_base.group_tt_agent_finance_operator') ])]" />
        <field name="priority">40</field>
        <field name="arch" type="xml">
            <field name="parent_agent_id" position="replace">
                <field name="parent_agent_id" readonly="0"/>
            </field>
            <field name="credit_limit" position="replace">
                <field name="credit_limit" readonly="0"/>
            </field>
        </field>
    </record>

    <record id="tt_customer_parent_form_view_customer_admin" model="ir.ui.view">
        <field name="name">tt.customer.parent.form.view.customer.admin</field>
        <field name="model">tt.customer.parent</field>
        <field name="inherit_id" ref="tt_base.tt_customer_parent_form_view_customer"/>
        <field name="groups_id" eval="[(6, 0, [ref('base.user_admin') ])]" />
        <field name="priority">40</field>
        <field name="arch" type="xml">
            <field name="customer_parent_type_id" position="replace">
                <field name="customer_parent_type_id" readonly="0"/>
            </field>
            <field name="parent_agent_id" position="replace">
                <field name="parent_agent_id" readonly="0"/>
            </field>
            <field name="credit_limit" position="replace">
                <field name="credit_limit" readonly="0"/>
            </field>
        </field>
    </record>

    <record id="tt_customer_parent_tree_view_customer" model="ir.ui.view">
        <field name="name">tt.customer.parent.tree.view.customer</field>
        <field name="model">tt.customer.parent</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name"/>
                <field name="customer_parent_type_id"/>
                <field name="parent_agent_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

