            </field>
            <field name="btc_agent_type_id" position="replace">
                <field name="btc_agent_type_id" readonly="0" groups="tt_base.group_tt_tour_travel,base.group_erp_manager" attrs="{'invisible': [('is_ho_agent','!=',True)]}"/>
