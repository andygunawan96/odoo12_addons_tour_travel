<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="tt_customer_job_position_form_view" model="ir.ui.view">
            <field name="name">tt.customer.job.position.form.view</field>
            <field name="model">tt.customer.job.position</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Name"/>
                            <h1>
                                <field name="name" required="True"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="sequence"/>
                                <field name="hierarchy_id"/>
                                <field name="is_request_required"/>
                            </group>
                            <group>
                                <field name="customer_parent_id" invisible="1"/>
                            </group>
                        </group>
                        <separator string="Rules"/>
                        <group>
                            <field name="carrier_access_type"/>
                            <field name="carrier_ids"/>
                        </group>
                        <group>
                            <group>
                                <field name="currency_id"/>
                                <field name="max_price"/>
                            </group>
                            <group>
                                <field name="max_hotel_stars"/>
                                <field name="max_cabin_class"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="tt_customer_job_position_tree_view" model="ir.ui.view">
            <field name="name">tt.customer.job.position.tree.view</field>
            <field name="model">tt.customer.job.position</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="hierarchy_id"/>
                    <field name="is_request_required"/>
                    <field name="customer_parent_id" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="tt_customer_job_position_action_view" model="ir.actions.act_window">
            <field name="name">Customer Job Position</field>
            <field name="view_type">form</field>
            <field name="res_model">tt.customer.job.position</field>
            <field name="view_mode">tree,form</field>
            <field name="context">
                {
                'form_view_ref': 'tt_base.tt_customer_job_position_form_view',
                'tree_view_ref': 'tt_base.tt_customer_job_position_tree_view'
                }
            </field>
        </record>

        <record id="tt_customer_job_hierarchy_form_view" model="ir.ui.view">
            <field name="name">tt.customer.job.hierarchy.form.view</field>
            <field name="model">tt.customer.job.hierarchy</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="sequence"/>
                                <field name="min_approve_amt"/>
                            </group>
                            <group>
                                <field name="customer_parent_id" readonly="1"/>
                            </group>
                        </group>
                        <separator string="Job Positions"/>
                        <group>
                            <field name="job_position_ids" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tt_customer_job_hierarchy_tree_view" model="ir.ui.view">
            <field name="name">tt.customer.job.hierarchy.tree.view</field>
            <field name="model">tt.customer.job.hierarchy</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="min_approve_amt"/>
                    <field name="customer_parent_id" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="tt_customer_job_hierarchy_action_view" model="ir.actions.act_window">
            <field name="name">Customer Job Hierarchy</field>
            <field name="view_type">form</field>
            <field name="res_model">tt.customer.job.hierarchy</field>
            <field name="view_mode">tree,form</field>
            <field name="context">
                {
                'form_view_ref': 'tt_base.tt_customer_job_hierarchy_form_view',
                'tree_view_ref': 'tt_base.tt_customer_job_hierarchy_tree_view'
                }
            </field>
        </record>
    </data>
</odoo>