    <!--              parent="tt_base.menu_transaction_accounting_reconcile"-->
    <!--              name="Reconcile Lines"-->
    <!--              action="tt_monthly_fee_rule_action"-->
    <!--              groups="base.group_system"-->
    <!--              sequence="20"/>-->
</odoo>