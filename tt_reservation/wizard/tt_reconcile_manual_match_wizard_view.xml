<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tt_reconcile_manual_match_wizard_form_view" model="ir.ui.view">
        <field name="name">Reconcile Manual Match Wizard</field>
        <field name="model">tt.reconcile.manual.match.wizard</field>
        <field name="arch" type="xml">
            <form string="Reconcile Manual Match Wizard">
                <group>
                    <field name="current_record_pnr"/>
                    <field name="current_total_price"/>
                    <field name="provider_selection"/>
<!--                    <button name="open_reference" type="object" string="Open Reference"/>-->
                </group>
                <footer>
                    <button name="match_data" string="Submit" type="object" default_focus="1" class="oe_highlight"/>
                    <!--                    <button name="dummy_send_recon" string="Dummy Send" type="object"/>-->
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="tt_reconcile_manual_match_wizard_action_view" model="ir.actions.act_window">
        <field name="name">Reconcile Manual Match Wizard</field>
        <field name="res_model">tt.reconcile.manual.match.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

