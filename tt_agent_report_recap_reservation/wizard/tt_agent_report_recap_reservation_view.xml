<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="detail_recap_reservation_form">
            <field name="name">Detail Recap Reservation Form</field>
            <field name="model">tt.agent.report.recap.reservation.wizard</field>
            <field name="inherit_id" ref="tt_agent_report.agent_common_report_view"/>
            <field name="arch" type="xml">
                <field name="all_ho" position="before">
                    <field name="provider_type"/>
                    <field name="state" required="1"/>
                </field>
            </field>
        </record>

        <record id="action_agent_report_recap_reservation_wz" model="ir.actions.act_window">
            <field name="name">Recap Reservation Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tt.agent.report.recap.reservation.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="detail_recap_reservation_form"/>
            <field name="target">new</field>
        </record>

        <menuitem
            id="menu_agent_report_recap_reservation"
            name="Recap Reservation Report"
            parent="tt_agent_report_recap_reservation.top_reservations_reports"
            action="action_agent_report_recap_reservation_wz"
            sequence="15"
            groups="tt_base.group_tt_tour_travel"
        />
    </data>
</odoo>