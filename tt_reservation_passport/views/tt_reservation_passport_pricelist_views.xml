<odoo>
    <record model="ir.ui.view" id="tt_reservation_passport_pricelist_view_form">
        <field name="name">tt.reservation.passport.pricelist.view.form</field>
        <field name="model">tt.reservation.passport.pricelist</field>
        <field name="arch" type="xml">
            <form string="">
<!--                <header>-->
<!--                    <button type="object" string="Search API" name="search_api"/>-->
<!--                    <button type="object" string="Config API" name="get_config_api"/>-->
<!--                </header>-->
                <sheet>
                    <div class="oe_button_box" name="button_box">
                            <button name="%(tt_base.tt_upload_center_wizard_action_view)d" string="Upload Document" type="action"
                                    class="oe_stat_button" icon="fa-upload" groups="tt_base.group_tt_tour_travel_operator"
                                    context="{'default_target_field_name': 'attachments_ids'}"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Document Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Document Type">
                            <field name="passport_type"/>
                            <field name="apply_type"/>
                            <field name="process_type"/>
                            <field name="reference_code"/>
                            <field name="provider_id"/>
                        </group>
                        <group string="Document Information">
                            <field name="country_id"/>
                            <field name="duration"/>
                            <field name="description" string="Immigration"/>
                            <field name="immigration_consulate" string="City (Immigration)"/>
                        </group>
                    </group>
                    <group>
                        <group string="NTA Calculation">
                            <field name="passport_nta_price" groups="tt_base.group_tt_tour_travel_operator"/>
                            <field name="delivery_nta_price" groups="tt_base.group_tt_tour_travel_operator"/>
                        </group>
                    </group>
                    <group>
                        <group string="Pricing">
                            <field name="currency_id" invisible="1"/>
                            <field name="nta_price"/>  <!--groups="tt_base.group_tt_tour_travel_operator"-->
                            <field name="cost_price"/>  <!--groups="tt_base.group_tt_tour_travel_operator"-->
                            <field name="sale_price"/>
                            <field name="commission_price"/>  <!--groups="tt_base.group_tt_tour_travel_operator"-->
                        </group>
                    </group>
                    <separator string="Requirements"/>
                    <field name="requirement_ids" string="Requirements">
                        <tree>
                            <field name="type_id"/>
                            <field name="required"/>
                        </tree>
                        <form>
                            <sheet>
                                <div class="oe_title">
                                    <h1>
                                        <field name="type_id" default_focus="1" placeholder="Choose Requirement"/>
                                    </h1>
                                </div>
                                <group>
                                    <field name="required" string="Required"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                    <group string="Attachments">
                        <field name="attachments_ids">
                            <tree>
                                <field name="filename"/>
                                <field name="url"/>
                            </tree>
                        </field>
                    </group>
                    <notebook colspan="4">
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="tt_reservation_passport_pricelist_view_tree">
        <field name="name">tt.reservation.passport.pricelist.view.tree</field>
        <field name="model">tt.reservation.passport.pricelist</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="passport_type"/>
                <field name="apply_type"/>
                <field name="immigration_consulate"/>
                <field name="commercial_duration"/>
                <field name="sale_price"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="tt_reservation_passport_pricelist_view_action">
        <field name="name">Passport Pricelist</field>
        <field name="res_model">tt.reservation.passport.pricelist</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain"/>
        <field name="context">
            {
                'form_view_ref': 'tt_reservation_passport.tt_reservation_passport_pricelist_view_form',
                'tree_view_ref': 'tt_reservation_passport.tt_reservation_passport_pricelist_view_tree',
            }
        </field>
    </record>

    <menuitem id="submenu_passport_pricelist" parent="menu_tour_travel_passport_master"
              name="Passport" action="tt_reservation_passport.tt_reservation_passport_pricelist_view_action"
              groups="tt_base.group_tt_tour_travel_operator" sequence="1"/>
</odoo>