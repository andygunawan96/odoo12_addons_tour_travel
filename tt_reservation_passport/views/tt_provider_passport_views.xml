<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tt_provider_passport_form_view" model="ir.ui.view">
        <field name="name">tt.provider.passport.form.view</field>
        <field name="model">tt.provider.passport</field>
        <field name="arch" type="xml">
            <form>
                <field name="state"/>
                <sheet>
                    <group>
                        <group>
                            <field name="is_ledger_created"/>
                            <field name="booking_id"/>
                            <field name="pnr"/>
                            <field name="provider_id"/>
                        </group>
                        <group>
                            <field name="booked_uid"/>
                            <field name="booked_date"/>
                            <field name="issued_uid"/>
                            <field name="issued_date"/>
<!--                            <field name="expired_date"/>-->
                        </group>
                    </group>
                    <group string="Passport Information">
                        <group>
                            <field name="country_id"/>
                        </group>
                        <group>
                            <field name="departure_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tt_provider_passport_tree_view" model="ir.ui.view">
        <field name="name">tt.provider.passport.tree.view</field>
        <field name="model">tt.provider.passport</field>
        <field name="arch" type="xml">
            <tree>
                <field name="pnr"/>
                <field name="provider_id"/>
                <field name="departure_date"/>
                <field name="state" string="Status"/>
            </tree>
        </field>
    </record>
</odoo>