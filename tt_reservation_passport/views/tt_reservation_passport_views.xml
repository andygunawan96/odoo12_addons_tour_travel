<odoo>

    <!--Passport Document Filter-->
    <record id="tt_reservation_passport_view_filter" model="ir.ui.view">
        <field name="name">tt.reservation.passport.view.filter</field>
        <field name="model">tt.reservation.passport</field>
        <field name="arch" type="xml">
            <search string="Search Passport Booking">
                <field name="name"/>
                <field name="agent_id" groups="tt_base.group_tt_tour_travel_operator"/>
<!--                <field name="sub_agent_id" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>-->
                <field name="contact_id"/>
                <field name="country_id"/>
                <group>
                    <filter string="All" name="all"/>
                    <filter string="Open" name="draft" domain="[('state_passport','=','draft')]"/>
                    <filter string="Confirm to HO/Validated by HO" name="confirm_validate" domain="['|', ('state_passport','=','confirm'),('state_passport','=','validate')]"/>
                    <filter string="Send to Vendor/Proceed by Vendor" name="to_vendor_vendor_process" domain="['|', ('state_passport','=','to_vendor'),('state_passport','=','vendor_process')]"/>
                    <filter string="In Process/Payment" name="in_process_payment" domain="['|', ('state_passport','=','in_process'),('state_passport','=','payment')]"/>
                    <filter string="Partial Proceed/Proceed" name="partial_proceed" domain="['|', ('state_passport','=','partial_proceed'),('state_passport','=','proceed')]"/>
                    <filter string="Delivered/Ready" name="delivered_ready" domain="['|', ('state_passport','=','delivered'),('state_passport','=','ready')]"/>
                    <filter string="Done" name="done" domain="[('state_passport','=','done')]"/>
                    <filter string="Canceled" name="cancel" domain="[('state_passport','=','cancel')]"/>
                </group>
                <separator/>
                <filter name="today" string="Today" domain="[('date','&gt;=',time.strftime('%%Y-%%m-%%d'))]"/>
                <filter name="yesterday" string="Yesterday"
                        domain="[
                                ('date', '&lt;', (context_today()).strftime('%Y-%m-%d')),
                                ('date', '&gt;=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d'))
                        ]"/>
                <filter name="week" string="This Week"
                        domain="[
                                '&amp;',
                                ('date', '>=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),
                                ('date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d')),
                            ]"/>
                <filter string="This Month" name="thismonth" domain="[('date','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                <filter string="This Year" name="thisyear" domain="[('date','&gt;=',time.strftime('%%Y-01-01'))]"/>

                <group expand="0" string="Group By">
                    <filter string="Agent" name="agent" domain="[]" context="{'group_by':'agent_id'}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <filter string="Agent Type" name="agent_type" domain="[]" context="{'group_by':'agent_type_id'}" groups="tt_base.group_tt_tour_travel_operator"/>
<!--                    <filter string="Sub Agent" name="sub_agent" domain="[]" context="{'group_by':'sub_agent_id'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>-->
<!--                    <filter string="Sub Agent Type" name="sub_agent_type" domain="[]" context="{'group_by':'sub_agent_type_id'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>-->
                    <filter string="State" name="state" domain="[]" context="{'group_by':'state_passport'}"/>
                </group>
            </search>
        </field>
    </record>

    <!--Passport Document Form-->
    <record model="ir.ui.view" id="tt_reservation_passport_view_form">
        <field name="name">tt.reservation.passport.view.form</field>
        <field name="model">tt.reservation.passport</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="tt_reservation.tt_reservation_form_views"/>
        <field name="arch" type="xml">
            <field name="state" position="replace">
                <field name="state" invisible="1"/>
                <field name="commercial_state" invisible="1"/>
                <field name="can_refund" invisible="1"/>
                <field name="state_passport" widget="statusbar" statusbar_visible="draft,confirm,validate,in_process,process_by_consulate,proceed,delivered,done"/>
            </field>
            <xpath expr="//button[@name='action_set_as_draft']" position="replace"/>
            <xpath expr="//button[@name='action_set_as_booked']" position="replace"/>
            <xpath expr="//button[@name='action_set_as_issued']" position="replace"/>
            <xpath expr="//button[@name='action_check_provider_state']" position="replace"/>
            <xpath expr="//button[@name='%(tt_accounting.tt_refund_wizard_action_view)d']" position="attributes">
                <attribute name="attrs">{'invisible': [('can_refund', '!=', True)]}</attribute>
            </xpath>
            <button name="action_cancel" position="replace">
                <button string="Set to Draft" name="action_draft_passport" type="object" attrs="{'invisible': ['|',('state_passport', '!=', 'cancel'), ('commercial_state', '=', 'Paid')]}" groups="tt_base.group_tt_tour_travel_manager"/>
                <button string="Confirm to HO" name="action_confirm_passport" type="object" attrs="{'invisible': [('state_passport', '!=', 'draft')]}" groups="tt_base.group_tt_agent_user_operator"/>
                <button string="Validate" name="action_validate_passport" type="object" attrs="{'invisible': [('state_passport', 'not in', ['confirm','partial_validate'])]}" groups="tt_base.group_tt_tour_travel_operator"/>
                <button string="In Process" name="action_in_process_passport" type="object" attrs="{'invisible': [('state_passport', 'not in', ['validate'])]}" groups="tt_base.group_tt_tour_travel_operator"/>
                <button string="Cancel All" name="action_cancel_passport" type="object" attrs="{'invisible': [('state_passport', 'in', ['cancel','process_by_consulate','partial_proceed','proceed','delivered','ready','done'])]}" groups="tt_base.group_tt_tour_travel_operator"/>
                <button string="Calc. Expenses" name="action_calc_expenses_passport" type="object" groups="tt_base.group_tt_tour_travel_operator" state="issued" attrs="{'invisible': [('state_passport', 'in', ['delivered','ready','done'])]}"/>
            </button>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="do_print_out_passport_ho"
                            string="HO"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-print"
                            groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                    <button name="do_print_out_passport_cust"
                            string="Customer"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-print"/>
                </div>
            </xpath>
            <field name="carrier_name" position="replace">
                <field name="document_to_ho_date"/>
                <field name="ho_validate_date"/>
                <field name="use_vendor"/>
                <field name="can_refund"/>
            </field>
            <field name="date" position="before">
                <field name="state" string="Status" readonly="1"/>
                <field name="commercial_state"/>
            </field>
            <xpath expr="//label[@for='issued_uid']" position="before">
                <label for="confirmed_uid" string="Confirmed"/>
                <div>
                    <field name="confirmed_uid" readonly="1" class="oe_inline"/> -
                    <field name="confirmed_date" readonly="1" class="oe_inline"/>
                </div>

                <label for="validate_uid" string="Validated"/>
                <div>
                    <field name="validate_uid" readonly="1" class="oe_inline"/> -
                    <field name="validate_date" readonly="1" class="oe_inline"/>
                </div>
            </xpath>
            <xpath expr="//label[@for='issued_uid']" position="before">
                <field name="to_vendor_date" readonly="1" attrs="{'invisible': [('use_vendor', '!=', True)]}"/>
                <field name="vendor_process_date" readonly="1" attrs="{'invisible': [('use_vendor', '!=', True)]}"/>
            </xpath>
            <field name="sid_booked" position="replace">
                <field name="in_process_date"/>
                <field name="estimate_date"/>
                <field name="done_date"/>
            </field>
            <xpath expr="//group[@name='paxgroup']" position="before">
                <group>
                    <group>
<!--                        <field name="country_id" readonly="1"/>-->
                        <field name="immigration_consulate" string="Consulate"/>
                    </group>
                    <group>
                        <field name="departure_date" readonly="1"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//page[@name='anchor']" position="before">
                <page string="Passengers">
                    <field name="passenger_ids" readonly="0">
                        <tree create="true">
                            <field name="title"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                            <field name="nationality_id"/>
                            <field name="process_status"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//page[@name='anchor']" position="before">
                <page string="Prices" name="prices" >
                    <field name="sale_service_charge_ids" context="{'form_view_ref': 'tt_reservation_passport.tt_service_charge_passport_inherit_form_view'}" readonly="1">
                        <tree>
                            <field name="charge_code"/>
                            <field name="charge_type"/>
                            <field name="pax_type"/>
                            <field name="pax_count"/>
                            <field name="amount"/>
                            <field name="total"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="description"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//page[@name='anchor']" position="before">
                <page string="Vendor" name="vendor" groups="tt_base.group_tt_tour_travel_operator">
                    <field name="provider_booking_ids">
                        <tree create="true">
                            <field name="provider_id"/>
                            <field name="pnr"/>
                            <field name="departure_date"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <field name="total_fare" position="replace"/>
            <field name="total_tax" position="replace"/>
        </field>
    </record>

    <!--Passport Document Tree-->
    <record model="ir.ui.view" id="tt_reservation_passport_view_tree">
        <field name="name">tt.reservation.passport.view.tree</field>
        <field name="model">tt.reservation.passport</field>
        <field name="arch" type="xml">
            <tree create="true">
                <field name="name"/>
                <field name="agent_id" groups="tt_base.group_tt_tour_travel_operator"/>
                <field name="agent_type_id" groups="tt_base.group_tt_tour_travel_operator"/>
<!--                <field name="sub_agent_id" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>-->
<!--                <field name="sub_agent_type_id" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>-->
                <field name="contact_id"/>
                <field name="country_id"/>
                <field name="issued_uid"/>
                <field name="issued_date"/>
                <field name="state_passport"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>

