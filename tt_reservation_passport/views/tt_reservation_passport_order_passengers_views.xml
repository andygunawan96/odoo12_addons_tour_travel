<odoo>
    <record model="ir.ui.view" id="tt_reservation_passport_order_passengers_view_form">
        <field name="name">tt.reservation.passport.order.passengers.view.form</field>
        <field name="model">tt.reservation.passport.order.passengers</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="validate,in_process,add_payment,in_process2,ready,done"/>
                    <button string="Draft" name="action_draft" type="object" attrs="{'invisible': [('state', '!=', 'cancel')]}" groups="tt_base.group_tt_tour_travel_manager"/>
                    <button string="Confirm" name="action_confirm" type="object" attrs="{'invisible': [('state', '!=', 'draft')]}" groups="tt_base.group_tt_agent_user_operator"/>
                    <button string="Reject" name="action_draft" type="object" attrs="{'invisible': [('state', '!=', 'confirm')]}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <button string="Validate" name="action_validate" type="object" attrs="{'invisible': [('state', '!=', 'confirm')]}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <button string="Re Validate Document" name="action_re_validate" type="object" attrs="{'invisible': [('state', 'not in', ['in_process','re_confirm','confirm_payment'])]}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <button string="Re Confirm Document" name="action_re_confirm" type="object" attrs="{'invisible': [('state', '!=', 're_validate')]}" groups="tt_base.group_tt_agent_user_operator"/>
                    <button string="Payment" name="action_add_payment" type="object" attrs="{'invisible': [('state', 'not in', ['in_process','re_confirm','confirm_payment'])]}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <button string="Confirm Payment" name="action_confirm_payment" type="object" attrs="{'invisible': [('state', 'not in', ['add_payment',])]}" groups="account.group_account_invoice"/>
                    <button string="Waiting Call" name="action_waiting" type="object" attrs="{'invisible': [('state', 'not in', ['in_process2'])]}" groups="tt_base.group_tt_tour_travel_operator"/>
<!--                    <button string="Send Email Interview" name="action_send_email_interview" type="object" groups="tt_base.group_tt_tour_travel_operator"/>  &lt;!&ndash; attrs="{'invisible': [('state', 'not in', ['in_process2'])]}"&ndash;&gt;-->
                    <button string="Proceed" name="action_proceed" type="object" attrs="{'invisible': [('state', '!=', 'waiting')]}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <button string="Reject" name="action_reject" type="object" attrs="{'invisible': [('state', '!=', 'proceed')]}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <button string="Accept" name="action_accept" type="object" attrs="{'invisible': [('state', '!=', 'proceed')]}" groups="tt_base.group_tt_tour_travel_operator"/>
<!--                    <button string="Send to HO" name="action_to_HO" type="object" attrs="{'invisible': ['|', ('state', 'not in', ['rejected','accepted']), '&amp;', ('state', 'in', ['rejected','accepted'])]}" groups="tt_base.group_tt_tour_travel_operator"/>  &lt;!&ndash;, ('use_vendor', '=', False)&ndash;&gt;-->
                    <button string="Send to Agent" name="action_to_agent" type="object" attrs="{'invisible': ['|',('state', 'not in', ['rejected','accepted'])]}" groups="tt_base.group_tt_tour_travel_operator"/>  <!--,('use_vendor', '!=', False)-->
                    <button string="Send to Agent" name="action_to_agent" type="object" attrs="{'invisible': ['|',('state', '!=', 'to_HO')]}" groups="tt_base.group_tt_tour_travel_operator"/>  <!--,('use_vendor', '!=', True)-->
<!--                    <button string="Ready" name="action_ready" type="object" attrs="{'invisible': [('state', 'not in', ['to_agent'])]}" groups="tt_base.group_tt_agent_user_operator"/>-->
                    <button string="Done" name="action_done" type="object" attrs="{'invisible': [('state', 'not in', ['to_agent'])]}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                    <button string="Sync Requirements" name="action_sync_requirements" type="object" groups="tt_base.group_tt_tour_travel_operator"/>
                    <button string="Cancel" name="action_cancel" type="object" attrs="{'invisible': [('state', 'not in', ['draft','confirm','validate','re_validate','re_confirm'])]}" groups="tt_base.group_tt_tour_travel_operator"/>
                </header>
                <sheet>
                    <group>
                        <group>
<!--                            <field name="use_vendor"/>-->
                            <field name="passport_id"/>
                            <field name="title" readonly="1"/>  <!--readonly="1"-->
                            <field name="first_name" readonly="1"/>  <!--readonly="1"-->
                            <field name="gender" readonly="1"/>  <!--readonly="1"-->
                            <field name="passport_number" readonly="1"/>  <!--readonly="1"-->
                            <field name="passport_expdate" readonly="1"/>  <!--readonly="1"-->
                        </group>
                        <group>
                            <field name="customer_id" readonly="1"/>  <!--readonly="1"-->
                            <field name="name" readonly="1"/>  <!--readonly="1"-->
                            <field name="last_name" readonly="1"/>  <!--readonly="1"-->
                            <field name="birth_date" readonly="1"/>  <!--readonly="1"-->
                            <field name="age" readonly="1"/>  <!--readonly="1"-->
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="booking_state"/>
                            <field name="passenger_type"/>
                            <field name="pricelist_id"/>
                            <field name="sequence" readonly="1"/>
                        </group>
                        <group>
                            <field name="process_status"/>
                            <field name="payment_uid" groups="tt_base.group_tt_tour_travel_operator"/>
                            <field name="payment_date" groups="tt_base.group_tt_tour_travel_operator"/>
                            <field name="in_process_date" groups="tt_base.group_tt_tour_travel_operator"/>
<!--                            <field name="call_date" groups="tt_base.group_tt_tour_travel_operator" attrs="{'readonly': [('state', 'not in', ['in_process', 'waiting'])], 'required': [('state', 'in', ['waiting'])]}"/>-->
                            <field name="out_process_date" groups="tt_base.group_tt_tour_travel_operator"/>
<!--                            <field name="to_HO_date" groups="tt_base.group_tt_tour_travel_operator"/>  &lt;!&ndash; attrs="{'invisible': [('use_vendor', '=', False)]}"&ndash;&gt;-->
                            <field name="to_agent_date" groups="tt_base.group_tt_tour_travel_operator"/>
                            <field name="done_date" groups="tt_base.group_tt_tour_travel_operator"/>
                        </group>
                    </group>
                    <group>
                        <group string="Interview">
                            <field name="interview"/>  <!-- attrs="{'readonly': [('state', 'not in', ['in_process', 'confirm_payment', 'add_payment', 'in_process2'])]}"-->
<!--                            <button string="Send Email Interview" name="action_send_email_interview" type="object" groups="tt_base.group_tt_tour_travel_operator" attrs="{'invisible': [('interview', '=', False)]}"/>  &lt;!&ndash; attrs="{'invisible': [('state', 'not in', ['in_process2'])]}"&ndash;&gt;-->
                            <field name="interview_ids" attrs="{'invisible': [('interview', '=', False)], 'readonly': [('state', 'not in', ['in_process', 'waiting'])]}">
                                <tree editable="bottom">
                                    <field name="pricelist_interview_id" invisible="1"/>
                                    <field name="datetime" required="1"/>
                                    <field name="ho_employee"/>
                                    <field name="meeting_point"/>
    <!--                                <field name="location_id" domain="[('pricelist_ids', 'in', pricelist_interview_id), ('location_type', '=', 'interview')]"/>-->
                                    <field name="location_interview_id"/>
                                    <field name="description"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="passenger_interview_id"/>
                                            <field name="location_interview_id"/>
                                            <field name="ho_employee"/>
                                        </group>
                                        <group>
                                            <field name="pricelist_interview_id"/>
                                            <field name="datetime" required="1"/>
                                            <field name="meeting_point"/>
                                        </group>
                                    </group>
                                    <group>
                                        <field name="description"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </group>
                    <group>
                        <field name="to_requirement_ids" string="Requirements">  <!-- attrs="{'readonly': [('state', 'not in', ['draft','re_validate','confirm'])]}"-->
                            <tree editable="bottom" create="0">
                                <field name="requirement_id"/>
                                <field name="passenger_state" invisible="1"/>
                                <field name="is_ori" readonly="1" groups="tt_base.group_tt_tour_travel_operator"/>
                                <field name="is_ori" attrs="{'readonly': [('passenger_state', 'not in', ['draft','Draft'])]}" groups="tt_base.group_tt_agent_user_operator"/>
                                <field name="is_copy" readonly="1" groups="tt_base.group_tt_tour_travel_operator"/>
                                <field name="is_copy" attrs="{'readonly': [('passenger_state', 'not in', ['draft','Draft'])]}" groups="tt_base.group_tt_agent_user_operator"/>
                                <field name="check_uid" attrs="{'readonly': [('check_uid', '!=', 'False')]}"/>
                                <field name="check_uid" invisible="1"/>
                                <field name="check_date" attrs="{'readonly': [('check_date', '!=', 'False')]}"/>
                                <field name="check_date" invisible="1"/>
                                <field name="validate_HO" readonly="1" groups="tt_base.group_tt_agent_user_operator"/>
                                <field name="validate_HO" attrs="{'readonly': [('passenger_state', 'not in', ['confirm','Confirm'])]}" groups="tt_base.group_tt_tour_travel_operator"/>
                                <field name="check_uid_HO" groups="tt_base.group_tt_tour_travel_operator, tt_base.group_tt_agent_user_operator" attrs="{'readonly': [('check_uid_HO', '!=', 'False')]}"/>
                                <field name="check_uid_HO" groups="tt_base.group_tt_tour_travel_operator, tt_base.group_tt_agent_user_operator" invisible="1"/>
                                <field name="check_date_HO" groups="tt_base.group_tt_tour_travel_operator, tt_base.group_tt_agent_user_operator" attrs="{'readonly': [('check_date_HO', '!=', 'False')]}"/>
                                <field name="check_date_HO" groups="tt_base.group_tt_tour_travel_operator, tt_base.group_tt_agent_user_operator" invisible="1"/>
                            </tree>
                        </field>
                        <field name="cost_service_charge_ids" string="Cost Service Charges"/>
                        <field name="channel_service_charge_ids" string="Channel Service Charges" attrs="{'readonly': [('state', 'not in', ['draft','confirm','validate'])]}"/>
                    </group>
                    <group>
                        <field name="notes"/>
                        <field name="notes" groups="tt_base.group_tt_tour_travel_operator, tt_base.group_tt_agent_user_operator"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="tt_reservation_passport_order_passengers_view_tree" >
        <field name="name">tt.reservation.passport.order.passengers.view.tree</field>
        <field name="model">tt.reservation.passport.order.passengers</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="passenger_id"/>
                <field name="passenger_type"/>
                <field name="pricelist_id"/>
                <field name="in_process_date"/>
                <field name="call_date"/>
                <field name="out_process_date"/>
                <field name="to_HO_date"/>
                <field name="to_agent_date"/>
                <field name="ready_date"/>
                <field name="process_status"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="tt_reservation_passport_order_passengers_view_action">
        <field name="name">Passport Order Passengers</field>
        <field name="res_model">tt.reservation.passport.order.passengers</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {
                'form_view_ref': 'tt_reservation_passport.tt_reservation_passport_order_passengers_view_form',
                'tree_view_ref': 'tt_reservation_passport.tt_reservation_passport_order_passengers_view_tree',
            }
        </field>
    </record>
</odoo>