<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="tt_reschedule_filter_view" model="ir.ui.view">
        <field name="name">tt.reschedule.filter.view</field>
        <field name="model">tt.reschedule</field>
        <field name="arch" type="xml">
            <search string="Search Reschedule">
                <field name="name"/>
                <field name="referenced_document"/>
                <field name="notes"/>
                <field name="agent_id" groups="tt_base.group_tt_tour_travel_operator"/>
                <separator/>
                <filter string="All" name='all'/>
                <filter string="Draft" name='draft' domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name='confirm' domain="[('state', '=', 'confirm')]"/>
                <filter string="Sent to Agent" name='sent' domain="[('state', '=', 'sent')]"/>
                <filter string="Validated" name='validate' domain="[('state', '=', 'validate')]"/>
                <filter string="Approved" name='approve' domain="[('state', '=', 'approve')]"/>
                <filter string="Done" name='done' domain="[('state', '=', 'done')]"/>
                <filter string="Cancelled" name='cancel' domain="[('state', '=', 'cancel')]"/>
                <filter string="Expired" name='expired' domain="[('state', '=', 'expired')]"/>
                <separator/>
                <filter name="today" string="Today" domain="[('create_date','&gt;=',time.strftime('%%Y-%%m-%%d'))]"/>
                <filter name="yesterday" string="Yesterday"
                        domain="[
                                ('create_date', '&lt;', (context_today()).strftime('%Y-%m-%d')),
                                ('create_date', '&gt;=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d'))
                        ]"/>
                <filter name="week" string="This Week"
                        domain="[
                                '&amp;',
                                ('create_date', '>=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),
                                ('create_date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d')),
                            ]"/>
                <filter string="This Month" name="thismonth" domain="[('create_date','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                <filter string="This Year" name="thisyear" domain="[('create_date','&gt;=',time.strftime('%%Y-01-01'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_agent_id" string="Agent" domain="[]" context="{'group_by':'agent_id'}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_agent_type_id" string="Agent Type" domain="[]" context="{'group_by':'agent_type_id'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_service_type" string="Service Type" domain="[]" context="{'group_by':'service_type'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_reschedule_type" string="Reschedule Type" domain="[]" context="{'group_by':'reschedule_type'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_state" string="State" domain="[]" context="{'group_by':'state'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                </group>
            </search>
        </field>
    </record>

    <record id="tt_reschedule_form_view" model="ir.ui.view">
        <field name="name">tt.reschedule.form.view</field>
        <field name="model">tt.reschedule</field>
        <field name="arch" type="xml">
            <form create="false">
                <header>
                    <button name="confirm_reschedule_from_button" string="Confirm" type="object" attrs="{'invisible':[('state','!=', 'draft')]}"/>
                    <button name="send_reschedule_from_button" string="Send to Agent" type="object" groups="tt_base.group_tt_tour_travel_operator" attrs="{'invisible':[('state','!=', 'confirm')]}"/>
                    <button name="validate_reschedule_from_button" string="Validate" type="object" attrs="{'invisible':[('state','!=', 'sent')]}"/>
                    <button name="approve_reschedule_from_button" string="Approve" type="object" groups="tt_base.group_tt_accounting_manager" attrs="{'invisible':[('state','!=', 'validate')]}"/>
                    <button name="action_done" string="Done" type="object" groups="tt_base.group_tt_accounting_manager" attrs="{'invisible':[('state','!=', 'approve')]}"/>
                    <button name="set_to_confirm" string="Set to Confirm" type="object" groups="tt_base.group_tt_accounting_manager" attrs="{'invisible':[('state','not in', ['sent', 'validate'])]}"/>
                    <button name="cancel_reschedule_from_button" string="Cancel" type="object" attrs="{'invisible':[('state','in', ['done', 'cancel'])]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="Name" class="oe_edit_only" string="Name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="agent_id" attrs="{'invisible':[('agent_id','=', False)]}"/>
                            <field name="agent_type_id" attrs="{'invisible':[('agent_id','=', False)]}"/>
                            <field name="customer_parent_id" attrs="{'invisible':[('customer_parent_id','=', False)]}"/>
                            <field name="customer_parent_type_id" attrs="{'invisible':[('customer_parent_id','=', False)]}"/>
                            <field name="currency_id"/>
                            <field name="admin_fee"/>
                            <field name="total_amount"/>
                            <field name="service_type"/>
                            <field name="reschedule_type"/>
                            <field name="notes"/>
                            <field name="referenced_document"/>
                            <field name="res_model"/>
                            <field name="res_id"/>
                        </group>
                        <group>
                            <field name="hold_date" readonly="1" class="oe_inline"/>
                            <label for="confirm_uid" string="Confirmed by"/>
                            <div>
                                <field name="confirm_uid" readonly="1" class="oe_inline"/> -
                                <field name="confirm_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="sent_uid" string="Sent by"/>
                            <div>
                                <field name="sent_uid" readonly="1" class="oe_inline"/> -
                                <field name="sent_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="validate_uid" string="Validated by"/>
                            <div>
                                <field name="validate_uid" readonly="1" class="oe_inline"/> -
                                <field name="validate_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="approve_uid" string="Approved by"/>
                            <div>
                                <field name="approve_uid" readonly="1" class="oe_inline"/> -
                                <field name="approve_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="done_uid" string="Done by"/>
                            <div>
                                <field name="done_uid" readonly="1" class="oe_inline"/> -
                                <field name="done_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="cancel_uid" string="Cancelled by"/>
                            <div>
                                <field name="cancel_uid" readonly="1" class="oe_inline"/> -
                                <field name="cancel_date" readonly="1" class="oe_inline"/>
                            </div>
                            <field name="cancel_message"/>
                        </group>
                    </group>
                    <notebook colspan="4" name="notebooks">
                        <page string="Segments" name="segment_page">
                            <separator string="Old Segments"/>
                            <field name="old_segment_ids">
                                <tree create="false">
                                    <field name="name"/>
                                    <field name="pnr"/>
                                    <field name="provider_id" groups="tt_base.group_tt_tour_travel_operator"/>
                                    <field name="origin_id"/>
                                    <field name="destination_id"/>
                                    <field name="departure_date"/>
                                </tree>
                            </field>
                            <separator string="New Segments"/>
                            <field name="new_segment_ids">
                                <tree create="false">
                                    <field name="name"/>
                                    <field name="pnr"/>
                                    <field name="provider_id" groups="tt_base.group_tt_tour_travel_operator"/>
                                    <field name="origin_id"/>
                                    <field name="destination_id"/>
                                    <field name="departure_date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Ledger" name="ledger_page">
                            <field name="ledger_ids"
                                   context="{'tree_view_ref': 'tt_accounting.tt_ledger_adj_tree_view'}"/>
                        </page>
                        <page string="Invoice" name="invoice_page">
                            <field name="invoice_line_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="tt_reschedule_tree_view_page" model="ir.ui.view">
        <field name="name">tt.reschedule.tree.view.page</field>
        <field name="model">tt.reschedule</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="create_date"/>
                <field name="name"/>
                <field name="agent_id"/>
                <field name="customer_parent_id"/>
                <field name="admin_fee"/>
                <field name="total_amount"/>
                <field name="service_type"/>
                <field name="reschedule_type"/>
                <field name="hold_date"/>
                <field name="done_uid"/>
                <field name="done_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="tt_reschedule_action" model="ir.actions.act_window">
        <field name="name">Reschedule</field>
        <field name="res_model">tt.reschedule</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {
            'form_view_ref': 'tt_reschedule.tt_reschedule_form_view',
            'tree_view_ref': 'tt_reschedule.tt_reschedule_tree_view_page'
            }
        </field>
    </record>

    <menuitem id="menu_transaction_reschedule" parent="tt_base.top_transaction_aftersales"
              name="Reschedule" action="tt_reschedule_action" sequence="11"/>

</odoo>
