<odoo>
    <record id="tt_analyst_periksain_form_view" model="ir.ui.view">
        <field name="name">tt.analyst.periksain.form.view</field>
        <field name="model">tt.analyst.periksain</field>
        <field name="priority">5</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" groups="tt_base.group_master_data_periksain_level_3"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <h1>
                        <field name="name" placeholder="Name"/>
                    </h1>
                    <group name="analyst_info">
                        <field name="analyst_id"/>
                        <field name="analyst_phone_number"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tt_analyst_periksain_form_inh_view" model="ir.ui.view">
        <field name="name">tt.analyst.periksain.form.view</field>
        <field name="model">tt.analyst.periksain</field>
        <field name="priority">30</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="tt_reservation_periksain.tt_analyst_periksain_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='analyst_info']" position="after">
                <separator string="Booking(s)"/>
                <field name="booking_ids"/>
            </xpath>
        </field>
    </record>

    <record id="tt_analyst_periksain_tree_view" model="ir.ui.view">
        <field name="name">tt.analyst.periksain.tree.view</field>
        <field name="model">tt.analyst.periksain</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="analyst_id"/>
                <field name="analyst_phone_number"/>
            </tree>
        </field>
    </record>

    <record id="tt_analyst_periksain_action_views" model="ir.actions.act_window" >
        <field name="name">Analyst Periksain</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tt.analyst.periksain</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">
            {
            'form_view_ref': 'tt_reservation_periksain.tt_analyst_periksain_form_inh_view',
            'tree_view_ref': 'tt_reservation_periksain.tt_analyst_periksain_tree_view'
            }
        </field>
    </record>

    <menuitem id="submenu_reservations_periksain_analyst"
              parent="tt_reservation_periksain.menu_master_data_periksain"
              name="Analyst"
              sequence="10"
              groups="tt_base.group_tt_tour_travel_operator"
              action="tt_reservation_periksain.tt_analyst_periksain_action_views"/>

    <menuitem id="menu_vendor_master_data_periksain_analyst"
              parent="tt_base.top_external_vendor_master_product"
              name="Periksain Analyst"
              sequence="30"
              groups="tt_base.group_master_data_periksain_level_1"
              action="tt_reservation_periksain.tt_analyst_periksain_action_views"
    />

</odoo>
