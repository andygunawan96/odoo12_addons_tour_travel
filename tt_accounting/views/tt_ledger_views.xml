                <field name="name"/>
                <field name="agent_id"/>
                <field name="description"/>
                <field name="transaction_type"/>
                <field name="currency_id" invisible="1"/>
                <field name="debit" sum="Total Debit"/>
                <field name="credit" sum="Total Credit"/>
                <field name="balance"/>
            </tree>
        </field>
    </record>

