<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tt_ledger_filter_views" model="ir.ui.view">
        <field name="name">tt.ledger.filter.view</field>
        <field name="model">tt.ledger</field>
        <field name="arch" type="xml">
            <search string="Search Ledger">
                <field name="name"/>
                <field name="pnr"/>
                <field name="ref"/>
                <field name="transaction_type" groups="tt_base.group_tt_tour_travel_operator"/>
                <field name="agent_id" groups="tt_base.group_tt_tour_travel_operator"/>
                <field name="customer_parent_id" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                <separator/>
                <filter name="today" string="Today" domain="[('date','&gt;=',time.strftime('%%Y-%%m-%%d'))]"/>
                <filter name="yesterday" string="Yesterday"
                        domain="[
                                ('date', '&lt;', (context_today()).strftime('%Y-%m-%d')),
                                ('date', '&gt;=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d'))
                        ]"/>
                <filter name="week" string="This Week"
                        domain="[
                                '&amp;',
                                ('date', '>=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),
                                ('date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d')),
                            ]"/>
                <filter string="This Month" name="thismonth" domain="[('date','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                <filter string="This Year" name="thisyear" domain="[('date','&gt;=',time.strftime('%%Y-01-01'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_agent_id" string="Agent" domain="[]" context="{'group_by':'agent_id'}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_agent_type_id" string="Agent Type" domain="[]" context="{'group_by':'agent_type_id'}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_customer_parent_id" string="Customer Parent" domain="[]" context="{'group_by':'customer_parent_id'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_customer_parent_type_id" string="Customer Parent Type" domain="[]" context="{'group_by':'customer_parent_type_id'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_transaction_type" string="Transaction Type" domain="[]" context="{'group_by':'transaction_type'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                </group>
            </search>
        </field>
    </record>

    <record id="tt_ledger_form_view" model="ir.ui.view">
        <field name="name">tt.ledger.form.view</field>
        <field name="model">tt.ledger</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <header>
                    <!-- JNGAN di SYNC -->
                    <!-- Trial Reverse -->
                    <button string="Reverse Ledger" name="reverse_ledger" type="object" groups="tt_base.group_tt_tour_travel_manager" attrs="{'invisible':[('is_reversed','=',True)]}" confirm="Are you sure you want to reverse this ledger?"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="Name" class="oe_edit_only" string="Name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="agent_id"/>
                            <field name="agent_type_id"/>
                            <field name="customer_parent_id"/>
                            <field name="customer_parent_type_id"/>
                            <field name="currency_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="transaction_type"/>
                            <field name="ref"/>
                            <field name="res_model" invisible="1"/>
                            <field name="res_id" invisible="1"/>
                            <button name="open_reference" string="Go to reference" type="object"
                                    attrs="{'invisible':['|',('res_model','=',False),('res_id','=',0)]}"/>
                        </group>
                    </group>
                    <separator string="Information"/>
                    <group>
                        <group>
                            <field name="debit"/>
                            <field name="credit"/>
                            <field name="balance"/>
                        </group>
                        <group name="transaction_references">
                            <field name="pnr"/>
                            <field name="display_provider_name"/>
                            <field name="is_reversed"/>
                            <field name="reverse_id"/>
                            <field name="adjustment_id"/>
                            <field name="refund_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Page ada Current Balance agent nya-->
