<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="tt_refund_filter_view" model="ir.ui.view">
        <field name="name">tt.refund.filter.view</field>
        <field name="model">tt.refund</field>
        <field name="arch" type="xml">
            <search string="Search Refund">
                <field name="name"/>
                <field name="referenced_document"/>
                <field name="referenced_pnr"/>
                <field name="notes"/>
                <field name="booking_desc"/>
                <field name="agent_id" groups="tt_base.group_tt_tour_travel_operator"/>
                <separator/>
                <filter string="All" name='all'/>
                <filter string="Draft" name='draft' domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name='confirm' domain="[('state', '=', 'confirm')]"/>
                <filter string="Sent to Agent" name='sent' domain="[('state', '=', 'sent')]"/>
                <filter string="Validated" name='validate' domain="[('state', '=', 'validate')]"/>
                <filter string="Finalized" name='final' domain="[('state', '=', 'final')]"/>
                <filter string="Approved" name='approve' domain="[('state', '=', 'approve')]"/>
                <filter string="Payment" name='payment' domain="[('state', '=', 'payment')]"/>
                <filter string="Approved (Cust Payment)" name='approve_cust' domain="[('state', '=', 'approve_cust')]"/>
                <filter string="Done" name='done' domain="[('state', '=', 'done')]"/>
                <filter string="Cancelled" name='cancel' domain="[('state', '=', 'cancel')]"/>
                <filter string="Expired" name='expired' domain="[('state', '=', 'expired')]"/>
                <separator/>
                <filter name="today" string="Today" domain="[('create_date','&gt;=',time.strftime('%%Y-%%m-%%d'))]"/>
                <filter name="yesterday" string="Yesterday"
                        domain="[
                                ('create_date', '&lt;', (context_today()).strftime('%Y-%m-%d')),
                                ('create_date', '&gt;=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d'))
                        ]"/>
                <filter name="week" string="This Week"
                        domain="[
                                '&amp;',
                                ('create_date', '>=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),
                                ('create_date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d')),
                            ]"/>
                <filter string="This Month" name="thismonth" domain="[('create_date','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                <filter string="This Year" name="thisyear" domain="[('create_date','&gt;=',time.strftime('%%Y-01-01'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_agent_id" string="Agent" domain="[]" context="{'group_by':'agent_id'}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_agent_type_id" string="Agent Type" domain="[]" context="{'group_by':'agent_type_id'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_service_type" string="Service Type" domain="[]" context="{'group_by':'service_type'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_refund_type" string="Refund Type" domain="[]" context="{'group_by':'refund_type'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_state" string="State" domain="[]" context="{'group_by':'state'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                </group>
            </search>
        </field>
    </record>

    <record id="tt_refund_form_view" model="ir.ui.view">
        <field name="name">tt.refund.form.view</field>
        <field name="model">tt.refund</field>
        <field name="arch" type="xml">
            <form create="false">
                <header>
                    <button name="confirm_refund_from_button" string="Confirm" type="object" groups="tt_base.group_tt_agent_user_operator" attrs="{'invisible':[('state','!=', 'draft')]}"/>
                    <button name="send_refund_from_button" string="Send to Agent" type="object" groups="tt_base.group_tt_tour_travel_operator" attrs="{'invisible':[('state','!=', 'confirm')]}"/>
                    <button name="validate_refund_from_button" string="Validate" type="object" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator" attrs="{'invisible':[('state','!=', 'sent')]}"/>
                    <button name="finalize_refund_from_button" string="Finalize" type="object" groups="tt_base.group_tt_accounting_operator" attrs="{'invisible':[('state','!=', 'validate')]}"/>
                    <button name="action_approve" string="Force Approve" type="object" groups="tt_base.group_tt_accounting_manager" attrs="{'invisible':[('state','!=', 'final')]}" confirm="Are you sure you want to force approve?"/>
                    <button name="action_payment" string="Customer Payment" type="object" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_accounting_operator" attrs="{'invisible':[('state','!=', 'approve')]}"/>
                    <button name="action_approve_cust" string="Approve Cust Payment" type="object" groups="tt_base.group_tt_agent_user_manager,tt_base.group_tt_agent_finance_operator,base.user_admin" attrs="{'invisible':[('state','!=', 'payment')]}"/>
                    <button name="action_done" string="Done" type="object" groups="tt_base.group_tt_agent_user_supervisor,tt_base.group_tt_tour_travel_operator" attrs="{'invisible':[('state','not in', ['approve', 'approve_cust'])]}"/>
                    <button name="set_to_confirm" string="Set to Confirm" type="object" groups="tt_base.group_tt_accounting_manager" attrs="{'invisible':[('state','not in', ['sent', 'validate', 'final'])]}"/>
                    <button name="set_to_approve" string="Set to Approved" type="object" groups="tt_base.group_tt_accounting_manager" attrs="{'invisible':[('state','!=', 'payment')]}"/>
                    <button name="cancel_refund_from_button" string="Cancel" type="object" attrs="{'invisible':[('state','in', ['approve', 'done', 'cancel', 'payment', 'approve_cust'])]}" confirm="Are you sure you want to cancel?"/>
                    <button name="create_profit_loss_ledger" string="Create Profit Loss" type="object" groups="tt_base.group_tt_accounting_operator" attrs="{'invisible':[('state','not in', ['approve', 'done', 'payment', 'approve_cust'])]}"/>
                    <button string="Adjustment" name="%(tt_accounting.tt_adjustment_wizard_action_view)d" type="action"
                            groups="tt_base.group_tt_accounting_operator"
                            context="{
                        'default_res_model': 'tt.refund',
                        'default_res_id': id,
                        'default_agent_id': agent_id,
                        'default_referenced_document': name,
                        'default_currency_id': currency_id,
                        'default_adj_type': -3,
                        'hide_component_type': True
                   }"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,sent,validate,final,approve,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_refund_to_agent"
                                class="oe_stat_button" states="final,approve,payment,approve_cust,done"
                                string="Refund to Agent" type="object" icon="fa-print"
                                groups="tt_base.group_tt_tour_travel_operator"/>
                        <button name="print_refund_to_cust"
                                class="oe_stat_button" states="approve_cust,done"
                                string="Refund to Customer" type="object" icon="fa-print"
                                groups="tt_base.group_tt_agent_user_operator"
                                attrs="{'invisible':[('refund_line_cust_ids','=', [])]}"/>
                        <button name="print_refund_to_cust_est"
                                class="oe_stat_button"
                                string="To Customer Est." type="object" icon="fa-print"
                                groups="tt_base.group_tt_agent_user_operator"/>
                    </div>
                    <div class="oe_title">
                        <label for="Name" class="oe_edit_only" string="Name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="agent_id" attrs="{'invisible':[('agent_id','=', False)]}"/>
                            <field name="agent_type_id" attrs="{'invisible':[('agent_id','=', False)]}"/>
                            <field name="customer_parent_id" attrs="{'invisible':[('customer_parent_id','=', False)]}"/>
                            <field name="customer_parent_type_id" attrs="{'invisible':[('customer_parent_id','=', False)]}"/>
                            <field name="booker_id"/>
                            <field name="currency_id"/>
                            <field name="service_type"/>
                            <field name="referenced_pnr"/>
                            <field name="referenced_document"/>
                            <field name="res_model" groups="base.user_admin"/>
                            <field name="res_id" groups="base.user_admin"/>
                            <button name="open_reference" string="Go to reference" type="object"
                                    attrs="{'invisible':['|',('res_model','=',False),('res_id','=',0)]}"/>
                        </group>
                        <group>
                            <field name="hold_date" readonly="1" class="oe_inline"/>
                            <label for="confirm_uid" string="Confirmed by"/>
                            <div>
                                <field name="confirm_uid" readonly="1" class="oe_inline"/> -
                                <field name="confirm_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="sent_uid" string="Sent by"/>
                            <div>
                                <field name="sent_uid" readonly="1" class="oe_inline"/> -
                                <field name="sent_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="validate_uid" string="Validated by"/>
                            <div>
                                <field name="validate_uid" readonly="1" class="oe_inline"/> -
                                <field name="validate_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="final_uid" string="Finalized by"/>
                            <div>
                                <field name="final_uid" readonly="1" class="oe_inline"/> -
                                <field name="final_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="approve_uid" string="Approved by"/>
                            <div>
                                <field name="approve_uid" readonly="1" class="oe_inline"/> -
                                <field name="approve_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="payment_uid" string="Set to Payment by"/>
                            <div>
                                <field name="payment_uid" readonly="1" class="oe_inline"/> -
                                <field name="payment_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="approve2_uid" string="Agent Approved by"/>
                            <div>
                                <field name="approve2_uid" readonly="1" class="oe_inline"/> -
                                <field name="approve2_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="done_uid" string="Done by"/>
                            <div>
                                <field name="done_uid" readonly="1" class="oe_inline"/> -
                                <field name="done_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="cancel_uid" string="Cancelled by"/>
                            <div>
                                <field name="cancel_uid" readonly="1" class="oe_inline"/> -
                                <field name="cancel_date" readonly="1" class="oe_inline"/>
                            </div>
                            <field name="cancel_message"/>
                        </group>
                    </group>
                    <separator string="Refund"/>
                    <group>
                        <group>
                            <field name="refund_amount"/>
                            <field name="real_refund_amount" groups="tt_base.group_tt_tour_travel_operator"/>
                            <field name="admin_fee_id" groups="tt_base.group_tt_tour_travel_operator" attrs="{'readonly':[('state','!=','confirm')]}" required="1"/>
                            <field name="admin_fee"/>
                            <field name="total_amount"/>
                            <field name="total_amount_cust" attrs="{'invisible':[('refund_line_cust_ids','=', [])]}"/>
                            <field name="refund_type"/>
                            <field name="notes"/>
                        </group>
                        <group>
                            <field name="refund_date" groups="tt_base.group_tt_agent_user_operator" attrs="{'invisible':[('state','=', 'draft')]}"/>
                            <field name="refund_date_ho" groups="tt_base.group_tt_tour_travel_operator"/>
                            <field name="cust_refund_date"/>
                            <field name="real_refund_date" groups="tt_base.group_tt_tour_travel_operator"/>
                        </group>
                    </group>
                    <group>
                        <field name="booking_desc"/>
                    </group>
                    <notebook colspan="4" name="notebooks">
                        <page string="Refund Line(s)" name="line_page">
                            <field name="refund_line_ids">
                                <tree create="false">
                                    <field name="name"/>
                                    <field name="birth_date"/>
                                    <field name="currency_id"/>
                                    <field name="pax_price"/>
                                    <field name="charge_fee"/>
                                    <field name="commission_fee"/>
                                    <field name="refund_amount"/>
                                    <field name="real_refund_amount" groups="tt_base.group_tt_tour_travel_operator" attrs="{'invisible':[('state','not in', ['final','approve','payment','approve_cust','done'])]}"/>
                                    <field name="state" invisible="1"/>
                                </tree>
                                <form>
                                    <header>
                                        <button name="set_to_draft" string="Set to Draft" type="object" groups="base.user_admin" attrs="{'invisible':[('state','=', 'draft')]}"/>
                                        <button name="set_to_confirm" string="Set to Confirm" type="object" groups="base.user_admin" attrs="{'invisible':[('state','=', 'confirm')]}"/>
                                        <button name="set_to_done" string="Set to Done" type="object" groups="base.user_admin" attrs="{'invisible':[('state','=', 'done')]}"/>
                                        <field name="state" invisible="1"/>
                                    </header>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                                <field name="birth_date"/>
                                                <field name="currency_id"/>
                                            </group>
                                            <group>
                                                <field name="pax_price"/>
                                                <field name="charge_fee"/>
                                                <field name="commission_fee"/>
                                                <field name="refund_amount"/>
                                                <field name="real_refund_amount" groups="tt_base.group_tt_tour_travel_operator" attrs="{'invisible':[('state','not in', ['final','approve','payment','approve_cust','done'])]}"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                            <footer>
                                <group string="Total Information" class="oe_subtotal_footer oe_right">
                                    <field name="refund_amount" class="oe_subtotal_footer_separator"/>
                                    <field name="admin_fee" class="oe_subtotal_footer_separator"/>
                                    <field name="total_amount" class="oe_subtotal_footer_separator"/>
                                </group>
                                <group>

                                </group>
                            </footer>
                        </page>
                        <page string="Payment to Customer(s)" name="payment_cust_page">
                            <field name="refund_line_cust_ids">
                                <tree create="false">
                                    <field name="name"/>
                                    <field name="birth_date"/>
                                    <field name="currency_id"/>
                                    <field name="method"/>
                                    <field name="acquirer_id"/>
                                    <field name="refund_amount"/>
                                    <field name="citra_fee"/>
                                    <field name="total_amount"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="refund_id" invisible="1"/>
                                            <field name="agent_id" invisible="1"/>
                                            <field name="name"/>
                                            <field name="birth_date"/>
                                            <field name="currency_id"/>
                                            <field name="method"/>
                                            <field name="acquirer_id"/>
                                            <field name="bank_id" attrs="{'invisible':[('method','!=', 'transfer')]}"/>
                                        </group>
                                        <group>
                                            <field name="refund_amount"/>
                                            <field name="citra_fee"/>
                                            <field name="total_amount"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                            <footer>
                                <group string="Total Information" class="oe_subtotal_footer oe_right">
                                    <field name="total_amount_cust" class="oe_subtotal_footer_separator"/>
                                </group>
                                <group>

                                </group>
                            </footer>
                        </page>
                        <page string="Ledger" name="ledger_page">
                            <field name="ledger_ids"
                                   context="{'tree_view_ref': 'tt_accounting.tt_ledger_adj_tree_view'}"/>
                        </page>
                        <page string="Adjustment">
                            <field name="adjustment_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="tt_refund_tree_view_page" model="ir.ui.view">
        <field name="name">tt.refund.tree.view.page</field>
        <field name="model">tt.refund</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="create_date"/>
                <field name="name"/>
                <field name="agent_id"/>
                <field name="customer_parent_id"/>
                <field name="referenced_pnr"/>
                <field name="refund_date"/>
                <field name="refund_amount"/>
                <field name="admin_fee"/>
                <field name="total_amount"/>
                <field name="service_type"/>
                <field name="refund_type"/>
                <field name="hold_date"/>
                <field name="done_uid"/>
                <field name="done_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="tt_refund_action" model="ir.actions.act_window">
        <field name="name">Refund</field>
        <field name="res_model">tt.refund</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {
            'form_view_ref': 'tt_accounting.tt_refund_form_view',
            'tree_view_ref': 'tt_accounting.tt_refund_tree_view_page'
            }
        </field>
    </record>

    <menuitem id="menu_transaction_refund" parent="tt_base.top_transaction_aftersales"
              name="Refund" action="tt_refund_action" sequence="10"/>

</odoo>
