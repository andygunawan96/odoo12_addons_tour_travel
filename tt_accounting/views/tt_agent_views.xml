<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tt_agent_form_view_inherit" model="ir.ui.view">
        <field name="name">tt.agent.form.view.inherit</field>
        <field name="model">tt.agent</field>
        <field name="inherit_id" ref="tt_base.tt_agent_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Adjustment" name="%(tt_accounting.tt_adjustment_wizard_action_view)d" type="action"
                        groups="tt_base.group_adjustment_level_3"
                        context="{
                        'default_res_model': 'tt.agent',
                        'default_res_id': id,
                        'default_agent_id': id,
                        'default_referenced_document': name,
                        'default_currency_id': currency_id,
                        'default_adj_type': -1,
                        'hide_component_type': True
                   }"/>
            </xpath>

            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_view_ledgers" type="object"
                        class="oe_stat_button" icon="fa-money">
                    <field name="ledger_ids" widget="statinfo" string="Ledger(s)"/>
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Adjustment Balance">
                    <field name="adjustment_ids"/>
                </page>
            </xpath>
            <field name="currency_id" position="after">
                <field name="balance" groups="tt_base.group_tt_tour_travel,tt_base.group_tt_agent_user"/>
                <field name="point_reward" groups="tt_base.group_tt_tour_travel,tt_base.group_tt_agent_user"/>
                <field name="actual_point_reward" groups="tt_base.group_tt_tour_travel,tt_base.group_tt_agent_user"/>
                <field name="unprocessed_point_reward" groups="tt_base.group_tt_tour_travel,tt_base.group_tt_agent_user"/>
            </field>
            <field name="credit_limit" position="after">
                <field name="actual_credit_balance" groups="tt_base.group_tt_tour_travel,tt_base.group_tt_agent_user"/>
                <field name="balance_credit_limit" groups="tt_base.group_tt_tour_travel,tt_base.group_tt_agent_user"/>
                <field name="unprocessed_amount" groups="tt_base.group_tt_tour_travel,tt_base.group_tt_agent_user"/>
                <field name="limit_usage_notif" groups="tt_base.group_tt_tour_travel,tt_base.group_tt_agent_user"/>
            </field>
        </field>
    </record>

    <record id="tt_agent_form_view_customer_inherit" model="ir.ui.view">
        <field name="name">tt.agent.form.view.inherit</field>
        <field name="model">tt.agent</field>
        <field name="inherit_id" ref="tt_base.tt_agent_form_view_customer"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button string="Adjustment" name="%(tt_accounting.tt_adjustment_wizard_action_view)d" type="action"
                        groups="tt_base.group_adjustment_level_3"
                        context="{
                        'default_res_model': 'tt.agent',
                        'default_res_id': id,
                        'default_agent_id': id,
                        'default_referenced_document': name,
                        'default_currency_id': currency_id,
                        'default_adj_type': -1,
                        'hide_component_type': True
                   }"/>
            </xpath>

            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_view_ledgers" type="object"
                        class="oe_stat_button" icon="fa-money">
                    <field name="ledger_ids" widget="statinfo" string="Ledger(s)"/>
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Adjustment Balance">
                    <field name="adjustment_ids"/>
                </page>
            </xpath>
            <field name="currency_id" position="after">
                <field name="balance" groups="tt_base.group_tt_tour_travel,tt_base.group_tt_agent_user"/>
            </field>
        </field>
    </record>

    <record id="tt_agent_kanban_view_inherit" model="ir.ui.view">
        <field name="name">tt.agent.kanban.view.inherit</field>
        <field name="model">tt.agent</field>
        <field name="inherit_id" ref="tt_base.tt_agent_kanban_view"/>
        <field name="arch" type="xml">
            <field name="email" position="after">
                <field name="balance" groups="tt_base.group_tt_tour_travel,tt_base.group_tt_agent_user"/>
            </field>
            <xpath expr="//span[@name='email_for_inh']" position="after">
                <span class="o_kanban_record_subtitle">Balance: <field name="balance" widget="float"/></span>
            </xpath>
        </field>
    </record>

    <record id="tt_agent_kanban_view_customer_inherit" model="ir.ui.view">
        <field name="name">tt.agent.kanban.view.inherit</field>
        <field name="model">tt.agent</field>
        <field name="inherit_id" ref="tt_base.tt_agent_kanban_view_customer"/>
        <field name="arch" type="xml">
            <field name="email" position="after">
                <field name="balance" groups="tt_base.group_tt_tour_travel,tt_base.group_tt_agent_user"/>
            </field>
            <xpath expr="//span[@name='email_for_inh']" position="after">
                <span class="o_kanban_record_subtitle">Balance: <field name="balance" widget="float"/></span>
            </xpath>
        </field>
    </record>
</odoo>