<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tt_tour_booking_view_form_concept" model="ir.ui.view">
        <field name="name">tt.tour.booking.view.form.concept</field>
        <field name="model">tt.tour.booking</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="tt_reservation.tt_reservation_form_views"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='paxgroup']" position="before">
                <separator string="Trip Information"/>
                <group>
                    <field name="arrival_date"/>
                </group>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="tt_tour_booking_view_tree_concept">
        <field name="name">tt.tour.booking.view.tree.concept</field>
        <field name="model">tt.tour.booking</field>
        <field name="arch" type="xml">
            <tree create="true">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="tt_tour_booking_view_action_all_concept">
        <field name="name">Tour Booking Concept</field>
        <field name="res_model">tt.tour.booking</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">
            {
            'form_view_ref': 'tt_tour.tt_tour_booking_view_form_concept',
            'tree_view_ref': 'tt_tour.tt_tour_booking_view_tree_concept',
            }
        </field>
    </record>

    <menuitem id="submenu_tour_booking_all_concept" parent="tt_tour.menu_tour_booking_concept" sequence="1"
              name="ALL" action="tt_tour.tt_tour_booking_view_action_all_concept"/>
</odoo>