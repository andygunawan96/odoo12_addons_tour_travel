<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="tt_agent_registration_form_view" model="ir.ui.view">
            <field name="name">tt.agent.registration.form.view</field>
            <field name="model">tt.agent.registration</field>
            <field name="arch" type="xml">
                <form string="Agent Registration">
                    <header>
                        <button string="Confirm" name="action_confirm" attrs="{'invisible': [('state', '!=', 'draft')]}" type="object"/>
                        <button string="Progress" name="action_progress" attrs="{'invisible': [('state', '!=', 'confirm')]}" type="object"/>
                        <button string="Payment" name="action_payment" attrs="{'invisible': [('state', '!=', 'progress')]}" type="object"/>
                        <button string="Validate" name="action_validate" attrs="{'invisible': [('state', '!=', 'payment')]}" type="object"/>
                        <button string="Done" name="action_done" attrs="{'invisible': [('state', '!=', 'validate')]}" type="object"/>
<!--                        <button string="Cancel" name="action_cancel" attrs="{'invisible': [('state', '!=', ['confirm','progress','payment','validate'])]}" type="object"/>-->
                         <button string="Cancel" name="action_cancel" type="object" states="confirm,progress,payment,validate"/>
                        <button string="Set to Draft" name="action_draft" attrs="{'invisible': [('state', '!=', 'cancel')]}" type="object" confirm="All data will be deleted. Proceed?"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,progress,payment,validate,done"/>
                    </header>
                    <sheet>
                        <button name="print_report_printout_invoice"
                                class="oe_stat_button"
                                string="Invoice (HO-AGENT)" type="object" icon="fa-print"
                                states="validate,done"/>
<!--                        groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"-->
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object"
                                    class="oe_stat_button" icon="fa-archive">
<!--                                groups="tt_base.group_tt_tour_travel_operator"-->
                                <field name="active" widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <field name="image" widget='image' class="oe_avatar"
                               options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                        <div class="oe_title">
                            <field name="company_type" widget="radio"
                               class="oe_edit_only"
                               options="{'horizontal': true}"/>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="create_uid"/>
                                <field name="partner_id"/>
                            </group>
                            <group string="Registration">
                                <field name="registration_num"/>
                                <field name="registration_fee"/>
                                <field name="discount"/>
                                <field name="opening_balance"/>
                                <field name="total_fee"/>
                                <field name="registration_date"/>
                                <field name="expired_date"/>
                                <field name="social_media_ids"/>
                            </group>
                        </group>
                        <group string="Company Details" attrs="{'invisible': [('company_type','!=', 'company')]}">
                            <group>
                                <field name="business_license"/>
                            </group>
                            <group>
                                <field name="tax_identity_number"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="agent_type_id" domain="[('name','in',['Citra','Japro','BTBR','BTBO','Fipro'])]"/>
                                <field name="reference_id"/>
                                <field name="parent_agent_id"/>
                                <field name="agent_level"/>
                            </group>
                        </group>
                        <group string="Address &amp; Contact">
                            <notebook>
                                <page string="Address">
                                    <field name="address_ids">
                                        <tree create="true">
                                            <field name="address"/>
                                            <field name="rt"/>
                                            <field name="rw"/>
                                            <field name="city_id"/>
                                            <field name="district_id"/>
                                            <field name="sub_district_id"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Contact Information">
                                    <field name="contact_ids">
                                        <tree create="true">
                                            <field name="name" string="PIC Name"/>
                                            <field name="birth_date"/>
                                            <field name="title"/>
                                            <field name="phone_ids"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                        <group string="Documents">
                            <notebook>
                                <page string="Registration Document">
                                    <field name="registration_document_ids">
                                        <tree editable="bottom" create="false">
                                            <field name="document_id"/>
                                            <field name="schedule_date"/>
                                            <field name="receive_date"/>
                                            <field name="attachment_ids" widget="many2many_binary" string="Attach a File" class="oe_inline"/>
                                            <field name="qty"/>
                                            <field name="description"/>
                                            <field name="state"/>
                                        </tree>
                                        <form>
                                            <group>
                                                <field name="description"/>
                                                <field name="attachment_ids" string="Attachments"/>
                                            </group>
                                            <group>
                                                <group>
                                                    <field name="registration_document_id"/>
                                                    <field name="state"/>
                                                    <field name="schedule_date"/>
                                                </group>
                                                <group>
                                                    <field name="qty"/>
                                                    <field name="receive_qty"/>
                                                    <field name="receive_date"/>
                                                    <field name="document_id"/>
                                                </group>
                                            </group>
                                        </form>
                                    </field>
                                </page>
                                <page string="Payment Terms">
                                    <field name="payment_ids">
                                        <tree editable="bottom">
                                            <field name="description"/>
                                            <field name="schedule_date"/>
                                            <field name="due_date"/>
                                            <field name="amount" sum="Amount"/>
                                            <field name="percentage" sum="Percentage"/>
                                            <field name="payment_type"/>
                                            <field name="state"/>
                                        </tree>
                                        <form>
                                            <group>
                                                <group>
                                                    <field name="due_date"/>
                                                    <field name="currency_id"/>
                                                    <field name="agent_registration_id"/>
                                                </group>
                                                <group>
                                                    <field name="description"/>
                                                    <field name="state"/>
                                                    <field name="amount"/>
                                                    <field name="payment_type"/>
                                                    <field name="schedule_date"/>
                                                    <field name="percentage"/>
                                                </group>
                                            </group>
                                        </form>
                                    </field>
                                </page>
                                <page string="Opening Document">
                                    <field name="open_document_ids">
                                        <tree create="true">
                                            <field name="document_id"/>
                                            <field name="schedule_date"/>
                                            <field name="receive_date"/>
                                            <field name="attachment_ids" string="Attach a File"/>
                                            <field name="qty"/>
                                            <field name="receive_qty"/>
                                            <field name="description"/>
                                            <field name="state"/>
                                        </tree>
                                        <form>
                                            <group>
                                                <field name="description"/>
                                                <field name="attachment_ids" string="Attachments"/>
                                            </group>
                                            <group>
                                                <group>
                                                    <field name="opening_document_id"/>
                                                    <field name="state"/>
                                                    <field name="schedule_date"/>
                                                </group>
                                                <group>
                                                    <field name="qty"/>
                                                    <field name="receive_qty"/>
                                                    <field name="receive_date"/>
                                                    <field name="document_id"/>
                                                </group>
                                            </group>
                                        </form>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                        <group string="Ledger">
                            <notebook>
                                <page string="Ledger">
                                    <field name="ledger_ids">
                                        <tree>
                                            <field name="date"/>
                                            <field name="ref"/>
                                            <field name="name"/>
                                            <field name="agent_id"/>
                                            <field name="description"/>
                                            <field name="transaction_type"/>
                                            <field name="debit"/>
                                            <field name="credit"/>
                                            <field name="state"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                        <group>
                            <field name="tac"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tt_agent_registration_tree_view" model="ir.ui.view">
            <field name="name">tt.agent.registration.tree.view</field>
            <field name="model">tt.agent.registration</field>
            <field name="arch" type="xml">
                <tree string="Agent Registration">
                    <field name="name"/>
                    <field name="registration_num"/>
                    <field name="agent_type_id"/>
                    <field name="parent_agent_id"/>
                    <field name="create_uid"/>
                    <field name="registration_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="tt_agent_registration_action_view" model="ir.actions.act_window">
            <field name="name">Agent Registration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tt.agent.registration</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">
                {
                    'form_view_ref': 'tt_agent_registration.tt_agent_registration_form_view',
                    'tree_view_ref': 'tt_agent_registration.tt_agent_registration_tree_view'
                }
            </field>
        </record>

        <menuitem id="top_transaction_registration" parent="tt_base.main_transaction"
              name="Registration" sequence="20"/>

            <menuitem id="menu_transaction_agent" parent="top_transaction_registration"
                  name="Agent" sequence="2"/>

                <menuitem id="submenu_transaction_request" parent="menu_transaction_agent"
                      name="Request" action="tt_agent_registration_action_view" sequence="1"/>

    </data>
</odoo>