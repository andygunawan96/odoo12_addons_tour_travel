<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tt_hotel_reservation_filter" model="ir.ui.view">
        <field name="name">tt.reservation.hotel.filter</field>
        <field name="model">tt.reservation.hotel</field>
        <field name="arch" type="xml">
            <search string="Search Hotel Reservation">
                <field name="name"/>
                <field name="pnr"/>
                <field name="hotel_name"/>
                <field name="provider_name" groups="tt_base.group_tt_tour_travel_operator"/>
                <field name="agent_id" groups="tt_base.group_tt_tour_travel_operator"/>
                <field name="agent_type_id" groups="tt_base.group_tt_tour_travel_operator"/>
                <field name="customer_parent_id" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                <field name="customer_parent_type_id" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                <field name="contact_id"/>
                <newline/>
                <group>
                    <filter string="All" name="all"/>
                    <filter string="Draft" name="new" domain="[('state','=','draft')]" help="Draft Reservation"/>
                    <filter string="Booked" name="book" domain="[('state','in',['confirm','wait'])]" help="Book  Reservation"/>
                    <filter string="Issued " name="issued" domain="[('state','in',['issued', 'approved'])]" help="Issued  Reservation"/>
                    <filter string="Cancel" name="cancel" domain="[('state','=','cancel')]" help="Cancel  Reservation"/>
                </group>
                <separator/>
                <group>
                    <filter string="Not Reconciled" name="reconciled" domain="[('reconcile_state','=','not_reconciled')]"/>
                    <filter string="Partial Reconciled" name="reconciled" domain="[('reconcile_state','=','partial')]"/>
                    <filter string="Reconciled" name="reconciled" domain="[('reconcile_state','=','reconciled')]"/>
                </group>
                <separator/>
                <group>
                    <filter string="Hotel Name" name="group_by_hotel_name" domain="" context="{'group_by':'hotel_name'}"/>
                    <filter string="City" name="group_by_city" domain="" context="{'group_by':'hotel_city'}"/>
                </group>
                <separator/>
                <filter string="Sale Today" name="sale_today" domain="[('date','&gt;=',time.strftime('%%Y-%%m-%%d'))]"/>
                <filter name="sale_week" string="Sale This Week"
                        domain="['&amp;',
                                ('date', '>=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),
                                ('date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d')),
                            ]"/>
                <filter string="Sale This Month" name="sale_this_month" domain="[('date','&gt;=',time.strftime('%%Y-%%m-01'))]"/>

                <separator/>
                <filter string="Check In Today" name="today" domain="[('checkin_date','&gt;=',time.strftime('%%Y-%%m-%%d'))]"/>
                <filter name="week" string="Check In This Week"
                        domain="['&amp;',
                                ('checkin_date', '>=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),
                                ('checkin_date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d')),
                            ]"/>
                <filter string="Check In This Month" name="thismonth" domain="[('checkin_date','&gt;=',time.strftime('%%Y-%%m-01'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_hotel" string="Hotel" domain="[]" context="{'group_by':'hotel_name'}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_city" string="City" domain="[]" context="{'group_by':'hotel_city'}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_agent_id" string="Agent" domain="[]" context="{'group_by':'agent_id'}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_agent_type_id" string="Agent Type" domain="[]" context="{'group_by':'agent_type_id'}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_customer_parent_id" string="Customer Parent" domain="[]" context="{'group_by':'customer_parent_id'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_customer_parent_type_id" string="Customer Parent Type" domain="[]" context="{'group_by':'customer_parent_type_id'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_state" string="State" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
