                    </field>
                    <group>
                        <field name="provider_data" states="confirm" groups="tt_base.group_tt_agent_user_operator"/>
                        <field name="cancellation_policy_str"/>
                        <field name="special_req"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//page[@name='anchor']" position="before">
                <page string="Passengers">
                    <field name="passenger_ids" readonly="1">
                        <tree>
                            <field name="title"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                            <field name="nationality_id"/>
