            <field name="search_view_id" ref="issued_offline_view_search"/>
            <field name="context">
                {
                    'form_view_ref': 'tt_reservation_offline.issued_offline_view_form',
                    'tree_view_ref': 'tt_reservation_offline.issued_offline_view_tree',
