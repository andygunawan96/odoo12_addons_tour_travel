<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tt_agent_invoice_form_view" model="ir.ui.view">
        <field name="name">tt.agent.invoice.form.view</field>
        <field name="model">tt.agent.invoice</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm_agent_invoice" string="Confirm" type="object" states="draft" class="btn-primary"/>
                    <button name="set_to_bill" string="Bill" type="object"/>

                    <button name="create_ledger" string="Create Ledger" type="object" groups="base.group_no_one"/>
                    <button name="%(tt_agent_invoice_wizard_action_view)d" string="Move" type="action" context = "{'default_invoice_id1': id}"/>
                    <button name="set_as_confirm" string="Confirm" type="object" groups="tt_base.group_tt_tour_travel_operator"/>
                    <button name="set_as_paid" string="Paid" type="object" groups="tt_base.group_tt_tour_travel_operator"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,issued"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="print_invoice"
                                class="oe_stat_button" states="draft,confirm,bill,bill2,paid"
                                string="Print" type="object" icon="fa-print"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" nolabel='1' placeholder="Name" readonly="True"/>
                        </h1>
                    </div>
                    <group name="invoice_info">
                        <group>
                            <field name="date_invoice"/>
                            <field name="booker_id"/>
                            <field name="customer_parent_id"/>
                            <field name="customer_parent_type_id" string="Customer Type"/>
                        </group>
                        <group>
                            <field name="agent_id"/>
                            <field name="confirmed_uid"/>
                            <field name="confirmed_date"/>
                        </group>
                    </group>

                    <group name="billing_info">
                        <group>
                            <field name="bill_name"/>
                            <field name="bill_address"/>
                        </group>
                    </group>
                    <group>
                        <notebook>
                            <page string="Line">
                                <field name="invoice_line_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="desc"/>
                                        <field name="model_type_id"/>
                                        <field name="total"/>
                                        <button string="Go to Reservation" name="open_reservation" type="object"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Payments">
                                <field name="payment_ids" context="{'tree_view_ref':'tt_agent_sales.tt_payment_invoice_rel_invoice_tree_view'}"/>
                            </page>
                            <page string="Ledgers">
                                <field name="ledger_ids" context="{'tree_view_ref': 'tt_accounting.tt_ledger_tree_view'}"/>
                            </page>
                        </notebook>
                    </group>

                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                            <label for="total" string="Grand Total"/>
                        </div>
                        <field name="total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                        <field name="paid_amount" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tt_agent_invoice_tree_view" model="ir.ui.view">
        <field name="name">tt.agent.invoice.tree.view</field>
        <field name="model">tt.agent.invoice</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false">
                <field name="name"/>
                <field name="state"/>
                <field name="agent_id"/>
                <field name="customer_parent_id"/>
                <field name="total"/>
                <field name="paid_amount"/>
            </tree>
        </field>
    </record>

    <record id="tt_agent_invoice_action_view" model="ir.actions.act_window" >
        <field name="name">Agent Invoice</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tt.agent.invoice</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
<!--        <field name="domain">[]</field>-->
        <field name="context">
            {
            'form_view_ref': 'tt_agent_sales.tt_agent_invoice_form_view',
            'tree_view_ref': 'tt_agent_sales.tt_agent_invoice_tree_view',
            }
        </field>
    </record>

    <menuitem id="sub_menu_agent_invoice_all"
              parent="tt_agent_sales.menu_agent_invoice"
              action="tt_agent_sales.tt_agent_invoice_action_view"
              name="Agent Invoice ALL"
              sequence="1"
              groups="base.group_user"/>
</odoo>