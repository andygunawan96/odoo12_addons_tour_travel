<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tt_agent_invoice_line_form_view" model="ir.ui.view">
        <field name="name">tt.agent.invoice.line.form.view</field>
        <field name="model">tt.agent.invoice.line</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Go to Reservation" name="open_reservation" type="object"/>
                    <button string="Compute all Tax" name="fixing_compute_tax" type="object"/>
                    <button name="open_split_wizard" string="Split" type="object"
                            context = "{'default_reservation_model': res_model_resv,'default_reservation_id': res_id_resv }"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" nolabel='1' placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="invoice_id"/>
                        <field name="res_model_resv" groups="base.user_admin"/>
                        <field name="res_id_resv" groups="base.user_admin"/>
                        <field name="desc"/>
                    </group>
                    <group>
                        <field name="invoice_line_detail_ids">
                            <tree>
                                <field name="desc"/>
                                <field name="price_unit"/>
                                <field name="quantity"/>
                                <field name="price_subtotal"/>
                            </tree>
                        </field>
                    </group>
                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                            <label for="total" string="Grand Total"/>
                        </div>
                        <field name="total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                        <field name="total_after_tax" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

