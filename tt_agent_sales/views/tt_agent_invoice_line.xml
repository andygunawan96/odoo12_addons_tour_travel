<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tt_agent_invoice_line_form_view" model="ir.ui.view">
        <field name="name">tt.agent.invoice.line.form.view</field>
        <field name="model">tt.agent.invoice.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="total"/>
                        <field name="desc"/>
                        <field name="invoice_id"/>
                    </group>
                    <group>
                        <field name="res_model_resv" invisible="1"/>
                        <field name="res_id_resv" invisible="1"/>
                        <button name="open_split_wizard" string="Split" type="object"
                                context = "{'default_reservation_model': res_model_resv,
                                            'default_reservation_id': res_id_resv }"/>

                    </group>
                    <group>
                        <field name="invoice_line_detail_ids">
                            <tree>
                                <field name="desc"/>
                                <field name="price_unit"/>
                                <field name="discount"/>
                                <field name="quantity"/>
                                <field name="discount_amount"/>
                                <field name="price_subtotal"/>
                            </tree>
                        </field>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

