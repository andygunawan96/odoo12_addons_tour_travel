<odoo>
    <record id="tt_master_activity_view_filter" model="ir.ui.view">
        <field name="name">tt.master.activity.view.filter</field>
        <field name="model">tt.master.activity</field>
        <field name="arch" type="xml">
            <search string="Search Activity">
                <field name="name"/>
                <field name="uuid"/>
                <field name="provider_id"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_provider_id" string="Provider" domain="[]" context="{'group_by':'provider_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="tt_master_activity_view_form">
        <field name="name">tt.master.activity.view.form</field>
        <field name="model">tt.master.activity</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
<!--                    <button string="Update Activity UUID" name="update_activity_uuid_temp" type="object" groups="base.user_admin"/>-->
<!--                    <button string="Update Activity Lines UUID" name="update_activity_lines_uuid_temp" type="object" groups="base.user_admin"/>-->
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive"
                                groups="tt_base.group_tt_tour_travel_supervisor">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Activity Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="location_ids">
                                <tree>
                                    <field name="city_id"/>
                                    <field name="state_id"/>
                                    <field name="country_id"/>
                                </tree>
                            </field>
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <label for="businessHoursFrom" string="Business Hours"/>
                            <div>
                                <field name="businessHoursFrom" class="oe_inline"/> -
                                <field name="businessHoursTo" class="oe_inline"/>
                            </div>
                            <label for="minPax" string="Passenger Limit"/>
                            <div>
                                <field name="minPax" class="oe_inline"/> -
                                <field name="maxPax" class="oe_inline"/>
                            </div>
                            <label for="reviewAverageScore" string="Average Score"/>
                            <div>
                                <field name="reviewAverageScore" class="oe_inline"/> from
                                <field name="reviewCount" class="oe_inline"/> users
                            </div>
                            <field name="airportPickup"/>
                            <field name="hotelPickup"/>
                        </group>
                        <group>
                            <field name="provider_id" groups="tt_base.group_tt_tour_travel_operator"/>
                            <field name="uuid"/>
                            <field name="type_ids"/>
                            <field name="category_ids">
                                <tree>
                                    <field name="parent_id"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                            <field name="currency_id"/>
                            <field name="basePrice"/>
                            <field name="priceIncludes"/>
                            <field name="priceExcludes"/>
                        </group>
                    </group>
                    <separator string="Product Images"/>
                    <field name="image_ids">
                        <tree>
                            <field name="photos_path"/>
                        </tree>
                    </field>
                    <separator string="Product Videos"/>
                    <field name="video_ids">
                        <tree>
                            <field name="video_url"/>
                        </tree>
                    </field>
                    <separator string="Product Types"/>
                    <field name="line_ids">
                        <tree>
                            <field name="uuid"/>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="option_ids"/>
                            <field name="instantConfirmation"/>
                        </tree>
                        <form>
                            <div class="oe_button_box" name="button_box">
                                <button name="toggle_active" type="object"
                                        class="oe_stat_button" icon="fa-archive"
                                        groups="tt_base.group_tt_tour_travel_supervisor">
                                    <field name="active" widget="boolean_button"
                                           options='{"terminology": "archive"}'/>
                                </button>
                            </div>
                            <group>
                                <group>
                                    <field name="uuid"/>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <label for="durationDays" string="Duration"/>
                                    <div>
                                        <field name="durationDays" class="oe_inline"/> days
                                        <field name="durationHours" class="oe_inline"/> hours
                                        <field name="durationMinutes" class="oe_inline"/> minutes
                                    </div>
                                    <field name="advanceBookingDays"/>
                                </group>
                                <group>
                                    <field name="minimumSellingPrice"/>
                                    <label for="minPax" string="Booking Limit"/>
                                    <div>
                                        <field name="minPax" class="oe_inline"/> -
                                        <field name="maxPax" class="oe_inline"/> person(s)
                                    </div>
                                    <field name="isNonRefundable"/>
                                    <field name="timeslot_ids">
                                        <tree>
                                            <field name="startTime"/>
                                            <field name="endTime"/>
                                        </tree>
                                        <form>
                                            <group>
                                                <field name="uuid"/>
                                                <field name="startTime"/>
                                                <field name="endTime"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </group>
                            <group>
                                <field name="option_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="inputType"/>
                                        <field name="type"/>
                                        <field name="price"/>
                                        <field name="items"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <field name="voucherUse"/>
                                <field name="voucherRedemptionAddress"/>
                            </group>
                            <group>
                                <group>
                                    <field name="voucherRequiresPrinting"/>
                                    <field name="voucher_validity_type"/>
                                </group>
                                <group>
                                    <field name="voucher_validity_days"/>
                                    <field name="voucher_validity_date"/>
                                </group>
                            </group>
                            <group>
                                <field name="meetingLocation"/>
                                <field name="meetingAddress"/>
                                <field name="meetingTime"/>
                                <field name="cancellationPolicies"/>
                                <field name="instantConfirmation"/>
                            </group>
                            <separator string="Stock Keeping Units"/>
                            <field name="sku_ids">
                                <tree>
                                    <field name="sku_id"/>
                                    <field name="title"/>
                                    <field name="pax_type"/>
                                    <field name="minPax"/>
                                    <field name="maxPax"/>
                                    <field name="minAge"/>
                                    <field name="maxAge"/>
                                </tree>
                                <form>
                                    <div class="oe_button_box" name="button_box">
                                        <button name="toggle_active" type="object"
                                                class="oe_stat_button" icon="fa-archive"
                                                groups="tt_base.group_tt_tour_travel_supervisor">
                                            <field name="active" widget="boolean_button"
                                                   options='{"terminology": "archive"}'/>
                                        </button>
                                    </div>
                                    <group>
                                        <group>
                                            <field name="sku_id"/>
                                            <field name="title"/>
                                            <field name="pax_type"/>
                                            <field name="add_information"/>
                                        </group>
                                        <group>
                                            <field name="minPax"/>
                                            <field name="maxPax"/>
                                            <field name="minAge"/>
                                            <field name="maxAge"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </form>
                    </field>
                    <separator string="Details"/>
                    <notebook colspan="6">
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Highlights">
                            <field name="highlights"/>
                        </page>
                        <page string="Itinerary">
                            <field name="itinerary"/>
                        </page>
                        <page string="Additional Info">
                            <field name="additionalInfo"/>
                        </page>
                        <page string="Warnings">
                            <field name="warnings"/>
                        </page>
                        <page string="Safety">
                            <field name="safety"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="tt_master_activity_view_tree" >
        <field name="name">tt.master.activity.view.tree</field>
        <field name="model">tt.master.activity</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type_ids"/>
                <field name="currency_id"/>
                <field name="basePrice"/>
                <field name="provider_id" groups="tt_base.group_tt_tour_travel_operator"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="tt_master_activity_view_action">
        <field name="name">Master Activity</field>
        <field name="res_model">tt.master.activity</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">
            {
            'form_view_ref': 'tt_reservation_activity.tt_master_activity_view_form',
            'tree_view_ref': 'tt_reservation_activity.tt_master_activity_view_tree',
            }
        </field>
    </record>

    <menuitem id="submenu_tour_travel_activity_master" parent="tt_reservation_activity.menu_tour_travel_activity_master"
              name="Activity" action="tt_reservation_activity.tt_master_activity_view_action"/>
</odoo>