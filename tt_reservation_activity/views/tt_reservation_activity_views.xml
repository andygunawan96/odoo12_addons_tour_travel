<odoo>
    <record id="tt_reservation_activity_view_filter" model="ir.ui.view">
        <field name="name">tt.reservation.activity.view.filter</field>
        <field name="model">tt.reservation.activity</field>
        <field name="arch" type="xml">
            <search string="Search Activity Booking">
                <field name="name"/>
                <field name="pnr"/>
                <field name="agent_id" groups="tt_base.group_tt_tour_travel_operator"/>
                <field name="customer_parent_id" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                <field name="contact_id"/>
                <group>
                    <filter string="All" name="all"/>
                    <filter string="Issued" name="issued" domain="[('state','=','issued')]"/>
                    <filter string="Failed/Expired" name="failed_expired" domain="['|', ('state','=','failed'),('state','=','expired')]"/>
                    <filter string="Approved/Done" name="approved_done" domain="['|', ('state','=','approved'),('state','=','done')]"/>
                    <filter string="Cancelled/Rejected/Refunded" name="cancelled" domain="['|', ('state','=','cancelled'),('state','=','rejected'),('state','=','refunded')]"/>
                </group>
                <separator/>
                <filter name="today" string="Today" domain="[('date','&gt;=',time.strftime('%%Y-%%m-%%d'))]"/>
                <filter name="yesterday" string="Yesterday"
                        domain="[
                                ('date', '&lt;', (context_today()).strftime('%Y-%m-%d')),
                                ('date', '&gt;=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d'))
                        ]"/>
                <filter name="week" string="This Week"
                        domain="[
                                '&amp;',
                                ('date', '>=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),
                                ('date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d')),
                            ]"/>
                <filter string="This Month" name="thismonth" domain="[('date','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                <filter string="This Year" name="thisyear" domain="[('date','&gt;=',time.strftime('%%Y-01-01'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_agent_id" string="Agent" domain="[]" context="{'group_by':'agent_id'}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_agent_type_id" string="Agent Type" domain="[]" context="{'group_by':'agent_type_id'}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_customer_parent_id" string="Customer Parent" domain="[]" context="{'group_by':'customer_parent_id'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_customer_parent_type_id" string="Customer Parent Type" domain="[]" context="{'group_by':'customer_parent_type_id'}" groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                    <filter name="group_by_state" string="State" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="tt_reservation_activity_form_view">
        <field name="name">tt.reservation.activity.form.view</field>
        <field name="model">tt.reservation.activity</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="tt_reservation.tt_reservation_form_views"/>
        <field name="arch" type="xml">
            <!--            <header>-->
            <!--                <button string="Sync Status Booking" name="cron_update_status_booking" type="object"/>-->
            <!--                <button string="Reverse Ledger" name="action_cancelled" type="object" attrs="{'invisible': [('state', 'in', ['cancelled', 'done'])]}" groups="tt_base.group_tt_tour_travel_supervisor"/>-->
            <!--                <button string="Force Update Booking" name="force_update_booking" type="object" groups="base.group_no_one"/>-->
            <!--                <button string="Generate Ledger PNR" name="generate_ledger_pnr" type="object" groups="base.group_no_one"/>-->
            <!--            </header>-->
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="get_vouchers_button"
                            string="Get Vouchers"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-print"
                            attrs="{'invisible': ['|', ('state', '!=', 'approved'), ('provider_name', '=', 'klook')]}"/>
                    <button name="action_activity_print_invoice"
                            string="Print Invoice"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-print"/>
                    <button name="resend_voucher_button"
                            string="Resend Voucher"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-print"
                            attrs="{'invisible': ['|', '&amp;', ('state', '!=', 'approved'), ('state', '!=', 'done'), ('provider_name', '!=', 'klook')]}"/>
                </div>
            </xpath>
            <field name="adult" position="after">
                <field name="senior"/>
                <field name="child"/>
            </field>
            <field name="provider_name" position="after">
                <field name="voucher_url"/>
            </field>
            <xpath expr="//group[@name='paxgroup']" position="before">
                <separator string="Activity Information"/>
                <group>
                    <group>
                        <field name="activity_id" string="Activity" readonly="1"/>
                        <field name="activity_product" readonly="1"/>
                    </group>
                    <group>
                        <field name="visit_date" readonly="1"/>
                        <field name="booking_option" readonly="1"/>
                        <field name="information" readonly="1"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//page[@name='anchor']" position="before">
                <page string="Passengers">
                    <field name="passenger_ids" readonly="1">
                        <tree>
                            <field name="title"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                            <field name="nationality_id"/>
                            <field name="activity_sku_id" string="SKU"/>
                            <field name="api_data" string="Option Request"/>
                        </tree>
                        <form>
                            <group>
                                <group>
                                    <field name="title"/>
                                    <field name="first_name"/>
                                    <field name="last_name"/>
                                    <field name="gender"/>
                                    <field name="birth_date"/>
                                    <field name="nationality_id"/>
                                    <field name="pax_type"/>
                                    <field name="api_data" string="Option Request"/>
                                </group>
                                <group>
                                    <field name="customer_id" string="Name"/>
                                    <field name="booking_id" string="Order Number"/>
                                    <field name="activity_sku_id" string="SKU"/>
                                </group>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
            <xpath expr="//page[@name='anchor']" position="before">
                <page string="Prices" name="prices">
                    <!--                    <button name="calculate_service_charge" type="object" string="calc"/>-->
                    <!--                    <button name="test_error" type="object" string="test_error"/>-->
                    <field name="sale_service_charge_ids">
                        <tree>
                            <field name="charge_code"/>
                            <field name="charge_type"/>
                            <field name="pax_type"/>
                            <field name="pax_count"/>
                            <field name="amount"/>
                            <field name="total"/>
                            <field name="description"/>
                            <field name="currency_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//page[@name='anchor']" position="before">
                <page string="Vendor" name="vendor" groups="tt_base.group_tt_tour_travel_operator">
                    <field name="provider_booking_ids"/>
<!--                        &lt;!&ndash;<tree>&ndash;&gt;-->
<!--                        &lt;!&ndash;<field name="pnr"/>&ndash;&gt;-->
<!--                        &lt;!&ndash;<field name="direction"/>&ndash;&gt;-->
<!--                        &lt;!&ndash;<field name="provider" groups="tt_base.group_tt_tour_travel_operator"/>&ndash;&gt;-->
<!--                        &lt;!&ndash;<field name="origin"/>&ndash;&gt;-->
<!--                        &lt;!&ndash;<field name="destination"/>&ndash;&gt;-->
<!--                        &lt;!&ndash;<field name="departure_date"/>&ndash;&gt;-->
<!--                        &lt;!&ndash;<field name="return_date"/>&ndash;&gt;-->
<!--                        &lt;!&ndash;&lt;!&ndash;<field name="total"/>&ndash;&gt;&ndash;&gt;-->
<!--                        &lt;!&ndash;<field name="state"/>&ndash;&gt;-->
<!--                        &lt;!&ndash;</tree>&ndash;&gt;-->
<!--                    </field>-->
                </page>
            </xpath>
        </field>
    </record>

