<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

		<record model="mail.template" id="template_mail_reservation_issued_visa">
			<field name="name">Template Mail Reservation Issued</field>
			<field name="email_from">${object.agent_id.email}</field>
			<field name="subject">Reservation Issued: ${object.name}</field>
			<field name="email_to">${object.contact_email}</field>
            <field name="email_cc"/>
			<field name="model_id" ref="tt_reservation_visa.model_tt_reservation_visa"/>
			<field name="auto_delete" eval="False"/>
			<field name="lang"/>
			<field name="copyvalue"/>
			<field name="body_html">
<![CDATA[
<p>Dear ${object.contact_title} ${object.contact_name},</p>
<br/>
<p>Your ${object.provider_type_id.name} reservation at ${object.agent_id.name} has been issued with the following information:</p>
<p>Order Number: ${object.name}</p>
<p>Issued Date: ${object.issued_date}</p>
<p>Booker Name: ${object.booker_id.name}</p>
<br/>
<p>Your Invoice is attached in this E-mail. Thank you for your trust and support in using our service.</p>
<br/>
<p>Regards,</p>
<p>${object.agent_id.name}</p>
]]>
			</field>
		</record>

        <record model="mail.template" id="template_mail_visa_interview">
			<field name="name">Template Mail Visa Interview</field>
			<field name="email_from">${user.email}</field>
			<field name="subject">Jadwal Interview Visa</field>
			<field name="email_to">${object.customer_id.email}</field>
			<field name="email_cc"/>
			<field name="model_id" ref="tt_reservation_visa.model_tt_reservation_visa_order_passengers"/>
			<field name="auto_delete" eval="False"/>
			<field name="lang"/>
			<field name="copyvalue"/>
			<field name="body_html">
<![CDATA[
<p>Yth. ${object.title}. ${object.first_name} ${object.last_name},</p>

<p>
	Berikut jadwal untuk interview visa :
</p>

<p>Terima kasih.</p>
]]>
			</field>
		</record>

		<record model="mail.template" id="template_mail_visa_biometrics">
			<field name="name">Template Mail Visa Biometrics</field>
			<field name="email_from">${user.email}</field>
			<field name="subject">Jadwal Biometrics Visa</field>
			<field name="email_to">${object.customer_id.email}</field>
			<field name="email_cc"/>
			<field name="model_id" ref="tt_reservation_visa.model_tt_reservation_visa_order_passengers"/>
			<field name="auto_delete" eval="False"/>
			<field name="lang"/>
			<field name="copyvalue"/>
			<field name="body_html">
<![CDATA[
<p>Yth. ${object.title}. ${object.first_name} ${object.last_name},</p>

<p>
	Berikut jadwal untuk biometrics visa :
</p>

<p>Terima kasih.</p>
]]>
			</field>
		</record>

    </data>
</odoo>