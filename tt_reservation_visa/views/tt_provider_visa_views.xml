<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tt_provider_visa_form_view" model="ir.ui.view">
        <field name="name">tt.provider.visa.form.view</field>
        <field name="model">tt.provider.visa</field>
        <field name="arch" type="xml">
            <form edit="false" create="false">
                <header>
                    <button string="Set to Booked" name="action_set_to_booked" type="object" attrs="{'invisible': [('state', '!=', 'issued')]}" groups="tt_base.group_tt_ticketing_operator"/>
                    <button string="Sync Price" name="action_sync_price" type="object" attrs="{'invisible': [('state', '=', 'issued')]}" groups="tt_base.group_tt_ticketing_operator"/>
                    <field name="state_visa" readonly="1" invisible="1"/>
                    <field name="state" widget="statusbar" statusbar_visible="booked,issued"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_create_expenses_invoice"
                                class="oe_stat_button" icon="fa-file"
                                type="object" string="Expenses Invoice"/>
                    </div>
                    <group>
                        <group>
                            <field name="is_ledger_created" readonly="1"/>
                            <field name="booking_id" readonly="1"/>
                            <field name="pnr" readonly="1"/>
                            <field name="pnr2" readonly="1"/>
                            <field name="provider_id" readonly="1"/>
                            <field name="total_price"/>
                            <field name="reconcile_line_id"/>
                            <field name="reconcile_time"/>
                        </group>
                        <group>
                            <field name="booked_uid" readonly="1"/>
                            <field name="booked_date" readonly="1"/>
                            <field name="issued_uid" readonly="1"/>
                            <field name="issued_date" readonly="1"/>
                            <field name="hold_date" readonly="1"/>
                        </group>
                    </group>
                    <group string="Visa Information">
                        <group>
                            <field name="country_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="departure_date" readonly="1"/>
                        </group>
                    </group>
                    <group string="Expenses">
                        <field name="use_vendor"/>
                        <field name="vendor_ids" attrs="{'required': [('use_vendor', '=', True)], 'readonly': [('state_visa', 'in', ['delivered','done'])]}" groups="tt_base.group_tt_tour_travel_operator,account.group_account_user">
                            <tree editable="bottom">
                                <field name="visa_id" invisible="1"/>
                                <field name="provider_id" invisible="1"/>
                                <field name="vendor_id"/>
                                <field name="reference_number"/>
                                <field name="nta_amount"/>
                                <field name="amount"/>
                                <field name="passenger_ids" domain="[('visa_id.provider_booking_ids', 'in', provider_id)]" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="payment_date"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Passengers">
                        <field name="passenger_ids" readonly="1">
                            <tree>
                                <field name="passenger_id"/>
                                <field name="pax_type"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Service Charges">
                        <field name="cost_service_charge_ids" readonly="1" context="{'form_view_ref':'tt_reservation_visa.tt_service_charge_visa_inherit_form_view'}">
                            <tree>
                                <field name="charge_code"/>
                                <field name="charge_type"/>
                                <field name="pax_type"/>
                                <field name="pax_count"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="amount"/>
                                <field name="total"/>
                                <field name="provider_visa_booking_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tt_provider_visa_tree_view" model="ir.ui.view">
        <field name="name">tt.provider.visa.tree.view</field>
        <field name="model">tt.provider.visa</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="provider_id" groups="tt_base.group_tt_tour_travel_operator"/>
                <field name="pnr"/>
                <field name="pnr2"/>
                <field name="departure_date"/>
                <field name="state" string="Status"/>
            </tree>
        </field>
    </record>
</odoo>