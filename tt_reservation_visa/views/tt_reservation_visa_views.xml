<odoo>

    <!--Visa Document Filter-->
    <record id="tt_reservation_visa_view_filter" model="ir.ui.view">
        <field name="name">tt.reservation.visa.view.filter</field>
        <field name="model">tt.reservation.visa</field>
        <field name="arch" type="xml">
            <search string="Search Visa Booking">
                <field name="name"/>
                <field name="provider_name" groups="tt_base.group_tt_tour_travel_operator"/>
                <field name="carrier_name" groups="tt_base.group_tt_tour_travel_operator"/>
                <field name="agent_id" groups="tt_base.group_tt_tour_travel_operator"/>
                <field name="contact_id"/>
                <field name="country_id"/>
                <group>
                    <filter string="All" name="all"/>
                    <filter string="Open" name="draft" domain="[('state_visa','=','draft')]"/>
                    <filter string="Confirm to HO/Validated by HO" name="confirm_validate" domain="['|', ('state_visa','=','confirm'),('state_visa','=','validate')]"/>
                    <filter string="Send to Vendor/Proceed by Vendor" name="to_vendor_vendor_process" domain="['|', ('state_visa','=','to_vendor'),('state_visa','=','vendor_process')]"/>
                    <filter string="In Process/Payment" name="in_process_payment" domain="['|', ('state_visa','=','in_process'),('state_visa','=','payment')]"/>
                    <filter string="Partial Proceed/Proceed" name="partial_proceed_proceed" domain="['|', ('state_visa','=','partial_proceed'),('state_visa','=','proceed')]"/>
                    <filter string="Delivered/Done" name="delivered_done" domain="['|', ('state_visa','=','delivered'),('state_visa','=','done')]"/>
                    <!--                    <filter string="Ready" name="ready" domain="[('state_visa','=','ready')]"/>-->
                    <filter string="Canceled" name="cancel" domain="[('state_visa','=','cancel')]"/>
                </group>
                <separator/>
                <filter name="today" string="Today" domain="[('date','&gt;=',time.strftime('%%Y-%%m-%%d'))]"/>
                <filter name="yesterday" string="Yesterday"
                        domain="[
                                ('date', '&lt;', (context_today()).strftime('%Y-%m-%d')),
                                ('date', '&gt;=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d'))
                        ]"/>
                <filter name="week" string="This Week"
                        domain="[
                                '&amp;',
                                ('date', '>=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),
                                ('date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d')),
                            ]"/>
                <filter string="This Month" name="thismonth" domain="[('date','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                <filter string="This Year" name="thisyear" domain="[('date','&gt;=',time.strftime('%%Y-01-01'))]"/>

                <group expand="0" string="Group By">
                    <filter string="Agent" name="agent" domain="[]" context="{'group_by':'agent_id'}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <filter string="Agent Type" name="agent_type" domain="[]" context="{'group_by':'agent_type_id'}" groups="tt_base.group_tt_tour_travel_operator"/>
                    <filter string="State" name="state" domain="[]" context="{'group_by':'state_visa'}"/>
                </group>
            </search>
        </field>
    </record>

    <!--Visa Document Form-->
    <record model="ir.ui.view" id="tt_reservation_visa_view_form">
        <field name="name">tt.reservation.visa.view.form</field>
        <field name="model">tt.reservation.visa</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="tt_reservation.tt_reservation_form_views"/>
        <field name="arch" type="xml">
            <field name="state" position="replace">
                <field name="state" invisible="1"/>
                <field name="commercial_state" invisible="1"/>
                <field name="can_refund" invisible="1"/>
                <field name="state_visa" widget="statusbar" statusbar_visible="draft,confirm,validate,in_process,process_by_consulate,proceed,delivered,done"/> <!--statusbar_visible="" ,ready-->
            </field>
            <xpath expr="//button[@name='action_set_as_draft']" position="replace"/>
            <xpath expr="//button[@name='action_set_as_booked']" position="replace"/>
            <xpath expr="//button[@name='action_set_as_issued']" position="replace"/>
            <xpath expr="//button[@name='action_check_provider_state']" position="replace"/>
            <xpath expr="//button[@name='%(tt_accounting.tt_adjustment_wizard_action_view)d']" position="replace"/>
            <button name="action_cancel" position="replace">
                <button string="Set to Draft" name="action_draft_visa" type="object" attrs="{'invisible': ['|',('state_visa', '!=', 'cancel'), ('commercial_state', '=', 'Paid')]}" groups="tt_base.group_tt_tour_travel_manager"/>
                <button string="Confirm to HO" name="action_confirm_visa" type="object" attrs="{'invisible': [('state_visa', '!=', 'draft')]}" groups="tt_base.group_tt_agent_user_operator"/>
                <button string="Validate" name="action_validate_visa" type="object" attrs="{'invisible': [('state_visa', 'not in', ['confirm','partial_validate'])]}" groups="tt_base.group_tt_tour_travel_operator"/>
                <button string="To Vendor" name="action_to_vendor_visa" type="object" attrs="{'invisible': [('state_visa', '!=', 'validate')]}" groups="tt_base.group_tt_tour_travel_operator"/>
                <button string="Vendor Process" name="action_vendor_process_visa" type="object" attrs="{'invisible': [('state_visa', '!=', 'to_vendor')]}" groups="tt_base.group_tt_tour_travel_operator"/>
                <button string="In Process" name="action_in_process_visa" type="object" attrs="{'invisible': [('state_visa', 'not in', ['validate','vendor_process'])]}" groups="tt_base.group_tt_tour_travel_operator"/>
                <button string="Process to Consulate" name="action_in_process_consulate_visa" type="object" attrs="{'invisible': [('state_visa', '!=', 'payment')]}" groups="tt_base.group_tt_tour_travel_operator"/>
                <button string="Cancel All" name="action_cancel_visa" type="object" attrs="{'invisible': [('state_visa', 'in', ['cancel','process_by_consulate','partial_proceed','proceed','delivered','ready','done'])]}" groups="tt_base.group_tt_tour_travel_operator"/>
                <button string="Refund" name="action_refund_visa" type="object" attrs="{'invisible': [('can_refund', '!=', True)]}" groups="tt_base.group_tt_tour_travel_operator"/>
<!--                    <button string="Calc. Channel Prices" name="calc_channel_service_charge_visa" type="object"/>-->
<!--                    <button string="Pay Now" name="action_pay_now_visa" type="object" attrs="{'invisible': [('state_visa', 'not in', ['draft','confirm', 'validate'])]}"/>-->
<!--                    <button string="Proforma Invoice" name="action_proforma_invoice_visa" type="object"/>-->
<!--                    <button string="Recalculate Price" name="recalculate_price" type="object"/>-->
            </button>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="do_print_out_visa_ho"
                            string="HO"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-print"
                            groups="tt_base.group_tt_agent_user_operator,tt_base.group_tt_tour_travel_operator"/>
                    <button name="do_print_out_visa_cust"
                            string="Customer"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-print"/>
                    <button name="print_ho_invoice"
                            class="oe_stat_button" states="issued,done"
                            string="Print Invoice (HO)" type="object" icon="fa-print"
                            groups="tt_base.group_tt_tour_travel_operator"/>
                </div>
            </xpath>
            <field name="carrier_name" position="replace">
                <field name="document_to_ho_date"/>
                <field name="use_vendor"/>
                <field name="can_refund"/>
            </field>
            <field name="date" position="before">
                <field name="state" string="Status" readonly="1"/>
                <field name="commercial_state"/>
            </field>
            <xpath expr="//label[@for='issued_uid']" position="before">
                <label for="confirmed_uid" string="Confirmed"/>
                <div>
                    <field name="confirmed_uid" readonly="1" class="oe_inline"/> -
                    <field name="confirmed_date" readonly="1" class="oe_inline"/>
                </div>

                <label for="validate_uid" string="Validated"/>
                <div>
                    <field name="validate_uid" readonly="1" class="oe_inline"/> -
                    <field name="validate_date" readonly="1" class="oe_inline"/>
                </div>
            </xpath>
            <xpath expr="//label[@for='issued_uid']" position="before">
                <field name="to_vendor_date" readonly="1" attrs="{'invisible': [('use_vendor', '!=', True)]}"/>
                <field name="vendor_process_date" readonly="1" attrs="{'invisible': [('use_vendor', '!=', True)]}"/>
            </xpath>
            <field name="sid_booked" position="replace">
                <field name="in_process_date"/>
                <field name="estimate_date"/>
                <field name="done_date"/>
            </field>
            <xpath expr="//group[@name='paxgroup']" position="before">
                <group>
                    <group>
                        <field name="country_id" readonly="1"/>
                        <field name="immigration_consulate" string="Consulate"/>
                    </group>
                    <group>
                        <field name="departure_date" readonly="1"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//page[@name='anchor']" position="before">
                <page string="Passengers">
                    <field name="passenger_ids">
                        <tree create="false">
                            <field name="title"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                            <field name="nationality_id"/>
                            <field name="process_status"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//page[@name='anchor']" position="before">
                <page string="Prices" name="prices" >
                    <field name="sale_service_charge_ids" context="{'form_view_ref': 'tt_reservation_visa.tt_service_charge_visa_inherit_form_view'}" readonly="1">
                        <tree>
                            <field name="charge_code"/>
                            <field name="charge_type"/>
                            <field name="pax_type"/>
                            <field name="pax_count"/>
                            <field name="amount"/>
                            <field name="total"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="description"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//page[@name='anchor']" position="before">
                <page string="Vendor" name="vendor" groups="tt_base.group_tt_tour_travel_operator">
                    <field name="provider_booking_ids">
                        <tree create="false">
                            <field name="provider_id"/>
                            <field name="pnr"/>
                            <field name="departure_date"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <field name="total_fare" position="replace"/>
            <field name="total_tax" position="replace"/>
<!--            <field name="total_nta" position="replace"/>-->
        </field>
    </record>

    <!--Visa Document Tree-->
    <record model="ir.ui.view" id="tt_reservation_visa_view_tree">
        <field name="name">tt.reservation.visa.view.tree</field>
        <field name="model">tt.reservation.visa</field>
        <field name="arch" type="xml">
            <tree create="false">
<!--                <button type="object" string="Create Booking Visa" name="create_booking_visa_api"/>-->
<!--                <button type="object" string="Get Booking Visa" name="get_booking_visa_api"/>-->
                <field name="name"/>
                <field name="agent_id" groups="tt_base.group_tt_tour_travel_operator"/>
                <field name="agent_type_id" groups="tt_base.group_tt_tour_travel_operator"/>
                <field name="contact_id"/>
                <field name="country_id"/>
                <field name="immigration_consulate" string="Consulate"/>
                <field name="issued_uid"/>
                <field name="issued_date"/>
                <field name="state_visa"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>

