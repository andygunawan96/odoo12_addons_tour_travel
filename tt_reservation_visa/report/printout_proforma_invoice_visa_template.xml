<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_visa">
        <div class="container">
            <div class="article" style="font-family: Times New Roman, Georgia, Serif; font-size: 16px;">
                <t t-call="tt_reservation_visa.external_layout_header"/>
                <t t-raw="0"/>
                <t t-call="tt_report_common.external_layout_footer"/>
            </div>
        </div>
    </template>

    <template id="external_layout_header">
        <div class="row" style="height:100px;">
            <div class="col-4" style="margin-left: 30px">
                <img t-if="doc.agent_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(doc.agent_id.logo)" height="200" border="1" width="300" style="max-height:100px; max-width:165px; margin-bottom: 20px"/><br/>
            </div>
            <div class="col-2">

            </div>
            <div class="col-5 text-center">
                <t t-set="printout_icon" t-value="'/tt_report_common/static/images/airfreight-white.svg'"/>
                <span style="margin-top: 10px; margin-left: 10px; color: #DC5413; font-size: 20px;">Proforma Invoice</span><br/>
                <t t-set="printout_icon" t-value="'/tt_report_common/static/images/bill-white.png'"/>
                <div style="height: 105px; margin-left: 0px">
                    <div id="circle" style="width: 60px; height: 60px; background: #DC5413; border-radius: 100%; position: absolute; z-index: 1;">
                        <img t-att-src="printout_icon" style="max-height: 35px; max-width: 35px; margin: 12px 0px 0px 0px;"/>
                    </div>
                    <div id="rectangle" style="width: 100%; height: 50px; bottom: 15px; background-image:  url('/tt_report_common/static/images/background footer airline.jpg'); border-radius: 25px; position: absolute; z-index: 0;">
                        <div style="padding-left: 60px; padding-bottom: 10px; vertical-align: middle; text-align: center; border-radius: 25px; background-color: rgba(39,62,84,0.76); padding-top: 5px;">
                            <div style="vertical-align: middle; display: flex; letter-spacing: 0.05em; font-size: 24px; color: white; font-weight: 600; margin-top: 0px; margin-left: -10px;">
                                <span t-field="doc.name" style="margin-top: 5px;"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="width: 100%; border-bottom: 1px solid black; margin:20px 0px 0px 0px;"/>
    </template>

    <template id="external_layout_footer">
        <div class="footer" style="position: absolute; left: 0; right: 0; background-image: url('/tt_reservation_offline/static/images/background footer airline.jpg');">
            <div class="box-footer" style="padding: 0px; width: 100%; height: 120px; background: rgba(39,62,84,0.82);">  <!--rgba(70,70,70,0.8);-->
                <div>
                    <span style="font-weight: 500; color: white">Contact Customer Care</span>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div style="margin-top: 5px;">
                            <span style="color: white"><img t-att-src="'/tt_report_common/static/images/call-answer.png'" height="200" border="1" width="300" style="max-height:24px; max-width:24px;"/>
                                <t t-if="doc.agent_id.phone_ids">
                                    <span style="color: white; font-size: 14px" t-field="doc.agent_id.phone_ids[0].calling_code"/> <span style="color: white; font-size: 14px" t-field="doc.agent_id.phone_ids[0].calling_number"/>
                                </t>
                                <t t-else=""><span style="color: white; font-size: 14px">-</span></t>
                            </span>
                        </div>
                        <div style="margin-top: 5px;">
                            <span style="color: white"><img t-att-src="'/tt_report_common/static/images/whatsapp.png'" height="200" border="1" width="300" style="max-height:24px; max-width:24px;"/>
                                <t t-if="doc.agent_id.social_media_ids.filtered(lambda x: x.type_id.name == 'Whatsapp')">
                                    <span style="color: white; font-size: 14px" t-field="doc.agent_id.social_media_ids.filtered(lambda x: x.type_id.name == 'Whatsapp')[0].name"/>
                                </t>
                                <t t-else=""><span style="color: white; font-size: 14px">-</span></t>
                            </span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div style="margin-top: 5px;">
                            <span style="color: white"><img t-att-src="'/tt_report_common/static/images/telegram.png'" height="200" border="1" width="300" style="max-height:24px; max-width:24px;"/>
                                <t t-if="doc.agent_id.social_media_ids.filtered(lambda x: x.type_id.name == 'Telegram')">
                                    <span style="color: white; font-size: 14px" t-field="doc.agent_id.social_media_ids.filtered(lambda x: x.type_id.name == 'Telegram')[0].name"/>
                                </t>
                                <t t-else=""><span style="color: white; font-size: 14px">-</span></t>
                            </span>
                        </div>
                        <div style="margin-top: 5px;">
                            <span style="color: white"><img t-att-src="'/tt_report_common/static/images/line.png'" height="200" border="1" width="300" style="max-height:24px; max-width:24px;"/>
                                <t t-if="doc.agent_id.social_media_ids.filtered(lambda x: x.type_id.name == 'Line')">
                                    <span style="color: white; font-size: 14px" t-field="doc.agent_id.social_media_ids.filtered(lambda x: x.type_id.name == 'Line')[0].name"/>
                                </t>
                                <t t-else=""><span style="color: white; font-size: 14px">-</span></t>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="agent_invoice_content_view">
        <!-- Base Info Booker dkk -->
        <table style="margin: 1px; 1px; 15px;">
            <tr>
                <td style="width:50px;">To</td>
                <td style="width:10px;">:</td>
                <td style="width:400px; vertical-align: top;" rowspan="4">
                    <t t-set="o_addr" t-value="doc.booker_id"/>
                    <t t-call="tt_report_common.address_layout"/>
                </td>
                <td style="width:100px;"/>
                <td style="width:150px;">Invoice Date</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;text-align: right;">
                    <span t-field="doc.booked_date" t-options ='{"format": "dd/MM/yyyy"}'/>
                </td>
            </tr>
<!--            <tr>-->
<!--                <td style="width:50px;"/>-->
<!--                <td style="width:10px;"/>-->
<!--                <td style="width:100px;"/>-->
<!--                <td style="width:150px;">Due Date</td>-->
<!--                <td style="width:10px;">:</td>-->
<!--                <td style="width:400px;">-->
<!--                    <span t-field="doc.date_invoice" t-options ='{"format": "dd/MM/yyyy"}'/>-->
<!--                </td>-->
<!--            </tr>-->
            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Booker</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;text-align: right;">
                    <i t-field="doc.booker_id.name"/>
                </td>
            </tr>
            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Operator</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;text-align: right;">
                    <i t-field="doc.confirmed_uid.name"/>
                </td>
            </tr>
        </table>
    </template>

    <template id="printout_proforma_invoice_visa_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <t t-call="tt_reservation_visa.external_layout_visa">
                        <br/>
                        <div style="margin: 0 20px">
                            <t t-call="tt_reservation_visa.agent_invoice_content_view"/>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>

    <template id="printout_proforma_invoice_visa">
        <t t-set="data_report_header_spacing" t-value="0"/>
        <t t-set="data_report_margin_top" t-value="10"/>
        <t t-set="data_report_margin_bottom" t-value="26"/>
        <t t-call="tt_reservation_visa.printout_proforma_invoice_visa_template"/>
    </template>
</odoo>