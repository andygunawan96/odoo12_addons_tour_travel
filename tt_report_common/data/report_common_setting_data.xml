        <record id="itinerary_signature_footer" model="tt.report.common.setting">
            <field name="name">Itinerary Signature</field>
            <field name="code">itinerary_signature</field>
            <field name="html" type="html">
                <div class="row">
                    <div class="col-11">
                        I, the undersigned, declare that the reservations I have made correspond to my true IDs and I made this statement consciously without any
                        enforcement from anyone.
                    </div>
                </div>
                <br/><br/>
                <table width="100%">
                    <tr>
                        <td width="70%"/>
                        <td width="25%" style="text-align:center">
                            Surabaya, <t t-esc="date_now"/><br/>
                            <p>Buyer</p>
                            <p style="color: white;">.</p>
                            <p style="color: white;">.</p>
                            <p style="color: white;">.</p>
                            <p>(.................................)</p>
                            <p style="border-top: 1px solid black">Representative Signature</p>
                        </td>
                    </tr>
                </table>
            </field>
            <field name="active" eval="True"/>
        </record>

        <record id="price_n_sign_footer" model="tt.report.common.setting">
            <field name="name">Price n Sign</field>
            <field name="code">price_n_sign</field>
            <field name="html" type="html">
                <span style="font-size: 24px; font-weight: 730">IMPORTANT NOTES</span><br/>
                    <ol style="margin: 0 25px;">
                        <li>Payment by transfer/cheque/giro is valid after being credited &amp; confirmed by the bank in full amount.</li>
                        <li>
                            Please transfer to the following account:
                            <ul>
                                <!-- <t t-set="limit" t-value="3"/>-->
                                <t t-set="current" t-value="0"/>
                                <t t-foreach="doc.agent_id.payment_acquirer_ids" t-as="payment_id">
                                    <!-- <t t-if="payment_id.type == 'transfer' and payment_id.account_number and payment_id.account_name and current &lt; limit">-->
                                    <t t-if="payment_id.type == 'transfer' and payment_id.account_number and payment_id.account_name and payment_id.website_published">
                                        <li style="font-size: 14px;"><span t-field="payment_id.bank_id.name"/> (IDR) <span t-field="payment_id.account_number"/> A/N <span t-field="payment_id.account_name"/></li>
                                        <t t-set="current" t-value="current + 1"/>
                                    </t>
                                </t>
                                <t t-if="current == 0">
                                    <li>Direct payment (cash) at <span t-field="doc.agent_id.name"/></li>
                                </t>
                            </ul>
                        </li>
                        <li>This invoice is generated by computer system and is considered as a legal invoice of <t t-esc="doc.agent_id.name"/></li>
                    </ol>
            </field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>
