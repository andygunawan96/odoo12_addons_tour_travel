<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout">
        <div class="container">
            <div class="article" style="margin: 0px !important; padding: 0px !important">
                <t t-call="tt_report_common.external_layout_header"/>
                <t t-raw="0"/>
                <t t-if="doc_model == 'tt.agent.invoice'">
                    <t t-call="tt_report_common.price_and_sign"/>
                </t>
                <t t-call="tt_report_common.external_layout_footer"/>
            </div>
        </div>
    </template>

    <template id="address_layout">
            <!--USAGE : <t t-set="o_addr" t-value="o.partner_id"/> =-->
            <!--partner_id is a pertner instance class from res.partner-->
            <address t-ignore="true" class="mb0" itemscope="itemscope" itemtype="http://schema.org/Organization">
                <div>
                    <strong><span t-esc="o_addr.name"/></strong>
                    <t t-if="o_addr.customer_parent_ids">
                        (<span t-esc="o_addr.customer_parent_ids[0].name"/>)
                    </t>
                </div>

                <t t-if="o_addr.address_ids">
                    <div>
                        <div>
                            <!--<i t-if="not options.get('no_marker')" class='fa fa-map-marker'/> -->
                            <t t-set="add_obj" t-value="o_addr.address_ids[0]"/>
                            <span t-esc="add_obj.address"/>
                            <!--<t t-if="o_addr.street2">-->
                            <!--, <span t-esc="o_addr.street2"/>-->
                            <!--</t>-->
                            <t t-if="add_obj.city_id">
                                , <span t-esc="add_obj.city_id.name"/>
                            </t>
                        </div>

                        <div>
                            <t t-if="add_obj.state_id">
                                <span t-esc="add_obj.state_id.name"/>
                            </t>
                            <t t-if="add_obj.country_id">
                                <t t-if="add_obj.state_id">
                                    -
                                </t>
                                <span t-esc="add_obj.country_id.name"/>
                            </t>

                        </div>

                        <div>
                            <t t-if="o_addr.phone_ids">
                                <span>Phone: </span>
                                <span t-esc="o_addr.phone_ids[0].phone_number"/>
                            </t>
                        </div>
                    </div>
                </t>
            </address>
        </template>

    <!-- Versi before 12 sept 2019 -->
    <template id="external_layout_header_1">
        <table width="100%">
            <tr>
                <td width="20%"><img t-if="doc.agent_id.logo" t-attf-src="data:image/png;base64,#{doc.agent_id.logo}" style="max-width: 110px; max-height: 85px;"/></td>
                <td width="50%" style="font-size:16px;">
                    <strong style="font-size:16px;"><span t-field="doc.agent_id.name"/></strong>
                    <br/>
                    <div style="margin-bottom:2px;">
                        <t t-if="doc.agent_id.address_ids">
                            <t t-set="add_obj" t-value="doc.agent_id.address_ids[0]"/>
                            <span t-field="add_obj.address"/>
                            <!--<span t-if="add_obj.street2" t-field="add_obj.street2"/>-->

                            <t t-if="'city_id' not in add_obj.fields_get()">
                                '
                                <span t-field="add_obj.city_id.name"/>
                            </t>

                            <t t-if="add_obj.state_id">
                                ,
                                <span t-field="add_obj.state_id.name"/>
                            </t>
                            <t t-if="add_obj.country_id">
                                ,
                                <span t-field="add_obj.country_id.name"/>
                            </t>
                        </t>
                        <t t-else="">

                        </t>
                    </div>
                    <div>
                        <t t-if="doc.agent_id.phone_ids">Phone: <span t-field="doc.agent_id.phone_ids[0].phone_number"/>; </t>

                        <t t-if="doc.agent_id.email">&amp;bull;</t>
                        <t t-if="doc.agent_id.email">Email: <span t-field="doc.agent_id.email"/>; </t>

                        <t t-if="doc.agent_id.website">&amp;bull;</t>
                        <t t-if="doc.agent_id.website">Website: <span t-field="doc.agent_id.website"/>; </t>
                    </div>
                </td>
                <td width="30%" style="font-size:16px;">
                    <div class="list-inline" style="float:right; margin-bottom:0;">
                        <t t-if="doc_model == 'tt.agent.invoice' ">
                            <b>Date: </b><span t-field="doc.date_invoice" t-options ='{"format": "dd/MM/yyyy"}'/>
                        </t>
                        <t t-elif="'tt.reservation' in doc_model">
                            <b>Date: </b><span t-field="doc.date" t-options ='{"format": "dd/MM/yyyy"}'/>
                        </t>
                        <t t-else="">
                            <b>Date: </b><span>-</span>
                        </t>
                        <h4><strong><span t-field="doc.name"/></strong></h4>
                    </div>
                </td>
            </tr>
        </table>
        <!-- Border Judul-->
        <div style="width: 100%; border-bottom: 1px solid black; margin:0;"/>
        <!-- Base Info Booker dkk -->
        <table style="margin: 1px;">
            <tr>
                <td style="width:50px;">To</td>
                <td style="width:10px;">:</td>
                <td style="width:400px; vertical-align: top;" rowspan="5">
                    <t t-set="o_addr" t-value="doc.booker_id"/>
                    <t t-call="tt_report_common.address_layout"/>
                </td>
                <td style="width:100px;"/>
                <td style="width:150px;">Booker</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;">
                    <t t-if="doc.booker_id">
                        <i>
                            <span t-field="doc.booker_id.first_name"/>
                            <span/>
                            <span t-field="doc.booker_id.last_name"/>
                        </i>
                    </t>
                    <t t-if="not doc.booker_id">
                        <i style="color: white;">...</i>
                    </t>
                </td>
            </tr>

            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Operator</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;">
                    <t t-if="doc_model == 'tt.agent.invoice'">
                        <t t-if="doc.confirmed_uid">
                            <i>
                                <span t-field="doc.confirmed_uid.name"/>
                            </i>
                        </t>
                    </t>
                    <t t-else="">
                        <t t-if="doc.issued_uid">
                            <i>
                                <span t-field="doc.issued_uid.name"/>
                            </i>
                        </t>
                        <t t-if="not doc.issued_uid and doc.booked_uid">
                            <i>
                                <span t-field="doc.booked_uid.name"/>
                            </i>
                        </t>
                        <t t-if="not doc.issued_uid and not doc.booked_uid">
                            <i style="color: white;">...</i>
                        </t>
                    </t>
                </td>
            </tr>
            <t t-if="'hold_date' in doc.fields_get()">
                <tr>
                    <td style="width:50px;"/>
                    <td style="width:10px;"/>
                    <td style="width:100px;"/>
                    <td style="width:150px;">Due Date</td>
                    <td style="width:10px;">:</td>
                    <td style="width:400px;">
                        <t t-if="doc.hold_date">
                            <i t-field="doc.hold_date" t-options ='{"format": "dd/MM/yyyy"}'/>
                        </t>
                        <t t-if="not doc.hold_date">
                            <i style="color: white;">...</i>
                        </t>
                    </td>
                </tr>
            </t>
            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Status</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;">
                    <i t-field="doc.state"/>
                </td>
            </tr>
            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Notes</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;">
                    <t t-if="'description' in doc.fields_get()">
                        <i><span t-field="doc.description"/></i>
                    </t>
                    <t t-else="">
                        <i><span>-</span></i>
                    </t>
                </td>
            </tr>
        </table>
    </template>

    <template id="external_layout_header">
        <div class="row" style="height:100px;">
            <div class="col-4">
                <img t-if="doc.agent_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(doc.agent_id.logo)" height="200" border="1" width="300" style="max-height:100px; max-width:165px; margin-bottom: 20px"/><br/>
                <!--<span style="margin-top: 10px; margin-left: 10px; color: #DC5413; font-size: 20px;">eTicket Itinerary</span>-->
            </div>
            <div class="col-2">

            </div>
            <div class="col-5 text-center">
                <t t-if="doc_model == 'tt.agent.invoice'">
                    <span style="margin-top: 10px; margin-left: 10px; color: #DC5413; font-size: 20px;">Invoice</span><br/>
                </t><t t-elif="doc_model == 'tt.billing.statement'">
                    <span style="margin-top: 10px; margin-left: 10px; color: #DC5413; font-size: 20px;">Billing</span><br/>
                </t><t t-elif="doc_model == 'tt.top.up'">
                    <t t-if="doc.state in ['draft','request']">
                        <span style="margin-top: 10px; margin-left: 10px; color: #DC5413; font-size: 20px;">Proforma HO Invoice</span><br/>
                    </t>
                    <t t-if="doc.state in ['valid','done']">
                        <span style="margin-top: 10px; margin-left: 10px; color: #DC5413; font-size: 20px;">HO Invoice</span><br/>
                    </t>
                </t><t t-else="">
                    <span style="margin-top: 10px; margin-left: 10px; color: #DC5413; font-size: 20px;">Other</span><br/>
                </t>
                <div style="height: 105px; margin-left: 0px">
                    <div id="circle" style="width: 60px; height: 60px; background: #DC5413; border-radius: 100%; position: absolute; z-index: 1;">
                        <img t-att-src="'/tt_report_common/static/images/airfreight-white.svg'" style="max-height: 35px; max-width: 35px; margin: 12px 0px 0px 0px;"/>
                    </div>
                    <div id="rectangle" style="width: 100%; height: 50px; bottom: 15px; background-image:  url('/tt_report_common/static/images/background footer airline.jpg'); border-radius: 25px; position: absolute; z-index: 0;">
                        <div style="padding-left: 60px; padding-bottom: 10px; vertical-align: middle; text-align: center; border-radius: 25px; background-color: rgba(39,62,84,0.76); padding-top: 5px;">
                            <div style="vertical-align: middle; display: flex; letter-spacing: 0.05em; font-size: 24px; color: white; font-weight: 600; margin-top: 0px; margin-left: -10px;">
                                <span t-field="doc.name" style="margin-top: 5px;"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="width: 100%; border-bottom: 1px solid black; margin:0 -15px;"/>
    </template>

    <template id="external_layout_footer">
        <div class="footer" style="position: absolute; left: 0; right: 0; background-image: url('/tt_reservation_offline/static/images/background footer airline.jpg');">
            <div class="box-footer" style="padding: 0px; width: 100%; height: 120px; background: rgba(39,62,84,0.82);">  <!--rgba(70,70,70,0.8);-->
                <div class="row">
                    <div class="col-2" style="margin-top:20px; margin-left: 15px;">
                         <img t-if="doc.agent_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(doc.agent_id.logo)" height="200" border="1" width="300" style="max-height:80px; max-width:150px;"/>
                    </div>
                    <div class="col-4" style="margin-top:10px; margin-left: 15px;">
                        <div>
                            <span style="font-weight: 600; color: white" t-field="doc.agent_id.name"/>
                        </div>
                        <div>
                            <t t-if="doc.agent_id.address_ids">
                                <span style="color: white" t-field="doc.agent_id.address_ids[0].address"/>
                            </t>
                            <t t-else="">
                                <span style="color: white">-</span>
                            </t>
                        </div>
                    </div>
                    <div class="col-5" style="margin-top:10px;">
                        <div>
                            <span style="font-weight: 500; color: white">Contact Customer Care</span>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div style="margin-top: 5px;">
                                    <t t-if="doc.agent_id.phone_ids">
                                        <span style="color: white"><img t-att-src="'/tt_report_common/static/images/24-hours-phone-service.png'" height="200" border="1" width="300" style="max-height:24px; max-width:24px;"/> <span style="color: white; font-size: 14px" t-field="doc.agent_id.phone_ids[0].calling_code"/> <span style="color: white; font-size: 14px" t-field="doc.agent_id.phone_ids[0].calling_number"/></span>
                                    </t>
                                </div>
                                <div style="margin-top: 5px;">
                                    <span style="color: white"><img t-att-src="'/tt_report_common/static/images/mail.png'" height="200" border="1" width="300" style="max-height:24px; max-width:24px;"/> <span style="color: white; font-size: 14px" t-field="doc.agent_id.email"/></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div style="margin-top: 5px;">
                                    <span style="color: white"><img t-att-src="'/tt_report_common/static/images/telegram.png'" height="200" border="1" width="300" style="max-height:24px; max-width:24px;"/>
                                        <t t-if="doc.agent_id.social_media_ids.filtered(lambda x: x.type_id.name == 'Telegram')">
                                            <span style="color: white; font-size: 14px" t-field="doc.agent_id.social_media_ids.filtered(lambda x: x.type_id.name == 'Telegram')[0].name"/>
                                        </t>
                                    </span>
                                </div>
                                <div style="margin-top: 5px;">
                                    <span style="color: white"><img t-att-src="'/tt_report_common/static/images/line.png'" height="200" border="1" width="300" style="max-height:24px; max-width:24px;"/>
                                        <t t-if="doc.agent_id.social_media_ids.filtered(lambda x: x.type_id.name == 'Line')">
                                            <span style="color: white; font-size: 14px" t-field="doc.agent_id.social_media_ids.filtered(lambda x: x.type_id.name == 'Line')[0].name"/>
                                        </t>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="price_and_sign">
        <br/>
        <div class="row">
            <!--No Rekening-->
            <div class="col-11">
                <t t-if="doc.agent_id.payment_acquirer_ids">
                    <span style="font-size: 28px; font-weight: 730">IMPORTANT NOTES</span><br/>
                    <ol style="margin: 0 25px;">
                        <li>Payment by transfer/cheque/giro is valid after being credited &amp; confirmed by the bank in full amount.</li>
                        <li>
                            Please transfer to the following account:
                            <ul>
                                <t t-set="limit" t-value="3"/>
                                <t t-set="current" t-value="0"/>
                                <t t-foreach="doc.agent_id.payment_acquirer_ids" t-as="payment_id">
                                    <t t-if="payment_id.account_number and payment_id.account_name and current &lt; limit">
                                        <li><span t-field="payment_id.bank_id.name"/> (IDR) <span t-field="payment_id.account_number"/> A/N <span t-field="payment_id.account_name"/></li>
                                        <t t-set="current" t-value="current + 1"/>
                                    </t>
                                </t>
                            </ul>
                        </li>
                        <li>This is invoice is generated by computer system and is considered as a legal invoice of <t t-esc="doc.agent_id.name"/></li>
                    </ol>
                </t>
            </div>
            <div class="col-1"/>
        </div>
    </template>

    <template id="agent_invoice_content_view">
        <!-- Base Info Booker dkk -->
        <table style="margin: 1px; 1px; 15px;">
            <tr>
                <td style="width:50px;">To</td>
                <td style="width:10px;">:</td>
                <td style="width:400px; vertical-align: top;" rowspan="4">
                    <t t-set="o_addr" t-value="doc.booker_id"/>
                    <t t-call="tt_report_common.address_layout"/>
                </td>
                <td style="width:100px;"/>
                <td style="width:150px;">Invoice Date</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;">
                    <span t-field="doc.date_invoice" t-options ='{"format": "dd/MM/yyyy"}'/>
                </td>
            </tr>
            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Due Date</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;">
                    <span t-field="doc.date_invoice" t-options ='{"format": "dd/MM/yyyy"}'/>
                </td>
            </tr>
            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Booker</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;">
                    <i t-field="doc.booker_id.name"/>
                </td>
            </tr>
            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Operator</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;">
                    <i t-field="doc.confirmed_uid.name"/>
                </td>
            </tr>
        </table>
        <!-- Issued Code + Line Info -->
        <div style="margin-bottom: 10px; margin-top: 20px;">
            <span style="font-size: 28px; font-weight: 730">INVOICE DETAILS</span><br/>
        </div>
        <div class="box" style="margin: 0px">
            <div class="title" style="background-color: #DC5413; border-radius: 20px 20px 0 0; border-color: #CCC; padding-top: 5px; padding-bottom: 5px">
                <div class="row" style="padding-left: 20px; color: white; font-weight: 600; font-size: 18px">
                    <div class="col-2">Ref.Number</div>
                    <div class="col-4">Passenger(s)</div>
                    <div class="col-4">Detail</div>
                    <div class="col-2">Amount</div>
                </div>
            </div>
            <t t-foreach="inv_lines[doc.id].keys()" t-as="line_idx">
                <t t-set="line" t-value="inv_lines[doc.id][line_idx]"/>
                <t t-set="col_len" t-value="len(line['descs'])"/>
                <div class="row" style="margin: 0px; border: 1px solid #BBB; border-radius: 0 0 20px 20px;">
                    <div class="col-2" style="background: #F0F0F0; border-radius: 0 0 0px 20px; padding: 10px 10px 10px 20px;">
                        <span t-esc="line_idx"/>
                    </div>
                    <div class="col-4">
                        <ul style="padding-left:15px;">
                            <t t-foreach="line['paxs']" t-as="pax">
                                <li><span t-field="pax.first_name"/> <span t-field="pax.last_name"/></li>
                            </t>
                        </ul>
                    </div>
                    <div class="col-4">
                        <t t-foreach="line['descs']" t-as="desc">
                            <span t-esc="desc"/>
                        </t>
                    </div>
                    <div class="col-2" style="border-radius: 0 0 20px 0px; padding: 10px 25px;">
                        <span t-esc="line['total']" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                    </div>
                </div>
            </t>
        </div>
        <!-- SubTotal -->
        <div class="row mt4 mb2">
            <div class="col-8">
                <table style="width:80%;">
                    <tr>
                        <td style="width:100px;">In Word</td>
                        <td style="width:20px;">:</td>
                        <td style=""><t t-esc="terbilang[doc.name]"/></td>
                    </tr>
                    <tr>
                        <td>Remarks</td>
                        <td>:</td>
                        <td></td>
                    </tr>
                </table>
            </div>
            <div class="col-4">
                <table style="width:100%">
                    <tr>
                        <td><strong>Subtotal</strong></td>
                        <td class="text-right">
                            <span t-field="doc.total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Discount</strong></td>
                        <td class="text-right">
                            <span t-esc="0" t-esc-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Tax</strong></td>
                        <td class="text-right">
                            <span t-esc="0" t-esc-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                        </td>
                    </tr>
                    <tr class="border-black">
                        <td><strong>Grand Total</strong></td>
                        <td class="text-right">
                            <span t-field="doc.total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </template>

    <template id="reservation_hotel_content_view">
        <!-- Main Params -->
        <div class="row mt32">
            <div class="col-6">
                <div class="row">
                    <div class="col-2">Hotel</div><div class="col-1">:</div><div class="col-9"><span t-field="doc.hotel_name"/></div>
                </div>
                <div class="row">
                    <div class="col-2">Phone</div><div class="col-1">:</div><div class="col-9"><span t-field="doc.hotel_phone"/></div>
                </div>
                <div class="row">
                    <div class="col-2">Address</div><div class="col-1">:</div><div class="col-9"><span t-field="doc.hotel_address"/></div>
                </div>
            </div>
            <div class="col-6" style="border: 1px solid black">
                <div class="row">
                    <div class="col-4">Check In</div><div class="col-1">:</div><div class="col-7"><span t-field="doc.checkin_date"/></div>
                </div>
                <div class="row">
                    <div class="col-4">Check Out</div><div class="col-1">:</div><div class="col-7"><span t-field="doc.checkout_date"/></div>
                </div>
                <div class="row">
                    <div class="col-4">Rooms</div><div class="col-1">:</div><div class="col-7"><span t-field="doc.room_count"/></div>
                </div>
                <div class="row">
                    <div class="col-4">Extra Beds</div><div class="col-1">:</div><div class="col-7"><span>0</span></div>
                </div>
                <div class="row">
                    <div class="col-4">Adult</div><div class="col-1">:</div><div class="col-7"><span t-field="doc.adult"/></div>
                </div>
                <div class="row">
                    <div class="col-4">Child</div><div class="col-1">:</div><div class="col-7"><span t-field="doc.child"/></div>
                </div>
            </div>
        </div>
        <!-- Rooms -->
        <div class="row mt32 mb32">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Voucher Code</th>
                        <th>Room Name</th>
                        <th class="text-right">Qty</th>
                        <th class="text-right">Amount</th>
                        <th class="text-right">Disc</th>
                        <th class="text-right">Total</th>
                        <th>Spc. Request</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="doc.room_detail_ids" t-as="line">
                        <td><span t-field="line.issued_name"/></td>
                        <td><span t-field="line.room_name"/></td>
                        <td class="text-right">1</td>
                        <td class="text-right"><span t-field="line.sale_price" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/></td>
                        <td class="text-center"><t t-set="zero" t-value="0"/><span t-esc="zero" t-esc-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/></td>
                        <td class="text-right"><span t-field="line.sale_price" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/></td>
                        <td>
                            <t t-if="line.special_request">
                                <span t-field="line.special_request"/>
                            </t>
                            <t t-else="">
                                <span>-</span>
                            </t>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="reservation_airline_content_view">
        <!-- Main Params -->
        <div class="row mt32">
            <h2>Itinerary Details</h2>
            <t t-foreach="doc.provider_booking_ids" t-as="provider_itin_id">
                <table class="table table-sm" style="text-align:center;">
                    <thead>
                        <tr>
                            <th>PNR</th>
                            <th>Origin</th>
                            <th>Destination</th>
                            <th>Carrier</th>
                            <th>Flight</th>
                            <th>Departure Date</th>
                            <th>Arrival Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.segment_ids.filtered(lambda x:x.pnr == provider_itin_id.pnr)" t-as="provider_segment_id">
                            <tr>
                                <td><span t-field="provider_segment_id.pnr"/></td>
                                <td><span t-field="provider_segment_id.origin_id.name"/></td>
                                <td><span t-field="provider_segment_id.destination_id.name"/></td>
                                <td><span t-field="provider_segment_id.carrier_id.name"/></td>
                                <td><span t-field="provider_segment_id.name"/></td>
                                <td><span t-field="provider_segment_id.departure_date" t-options ='{"format": "dd/MM/yyyy HH:mm:ss"}'/></td>
                                <td><span t-field="provider_segment_id.arrival_date" t-options ='{"format": "dd/MM/yyyy HH:mm:ss"}'/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <h5>Passenger Details</h5>
                <table class="table table-sm" style="text-align:center;">
                    <thead>
                        <tr>
                            <th width="200px">Ticket Number</th>
                            <th width="400px">Name</th>
                            <th width="100px">Pax Type</th>
                            <th width="300px">Baggage</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="provider_itin_id.ticket_ids" t-as="psg_rec">
                            <td><span t-field="psg_rec.ticket_number"/></td>
                            <td>
                                <span t-field="psg_rec.passenger_id.title"/>
                                <span/>
                                <span t-field="psg_rec.passenger_id.first_name"/>
                                <span/>
                                <span t-field="psg_rec.passenger_id.last_name"/>
                            </td>
                            <td><span t-field="psg_rec.pax_type"/></td>
                            <td>No Additional Baggage</td>
                        </tr>
                    </tbody>
                </table>
            </t>
        </div>
    </template>

    <template id="reservation_airline_footer_view">
        <div class="">
            <h4 class="sub-table">Important Notes</h4>
            <div class="space">
                <p>- Mohon tiba di Bandara selambat - lambatnya 90 menit sebelum keberangkatan untuk domestik atau 2 jam untuk internasional</p>
            </div>
            <div class="space">
                <p class="space">- Penumpang / pemegang tiket ini tunduk kepada syarat dan ketentuan penerbangan yang ditetapkan oleh Maskapai</p>
            </div>
        </div>
    </template>

    <template id="reservation_train_content_view">
        TRAIN
    </template>

    <template id="printout_invoice">
        <t t-set="data_report_header_spacing" t-value="20"/>
        <t t-set="data_report_margin_top" t-value="2"/>
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <t t-if="doc_model == 'tt.reservation.airline'">
                        <t t-call="tt_report_common.printout_ticket_airline_template"/>
                    </t>
                    <t t-if="doc_model != 'tt.reservation.airline'">
                        <t t-call="tt_report_common.external_layout">
                            <br/>
                            <t t-if="doc_model == 'tt.agent.invoice'">
                                <t t-call="tt_report_common.agent_invoice_content_view"/>
                            </t>
                            <t t-elif="doc_model == 'tt.reservation.hotel'">
                                <t t-call="tt_report_common.reservation_hotel_content_view"/>
                            </t>
                            <t t-elif="doc_model == 'tt.reservation.train'">
                                <t t-call="tt_report_common.reservation_train_content_view"/>
                            </t>
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>
