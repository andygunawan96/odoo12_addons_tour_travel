    <template id="external_layout_header">
        <div class="row" style="height:100px;">
            <t t-if="doc_type == 'itin'">
                <t t-if="doc['agent_id']">
                    <div class="col-4" style="margin-left: 30px">
                        <img t-att-src="'data:image/png;base64,%s' % to_text(doc['agent_id'].logo)" height="200" border="1" width="300" style="max-height:100px; max-width:165px; margin-bottom: 20px"/><br/>
                    </div>
                </t>
                <t t-else="">
                    <!--Pakai nama agent-->
                    <div class="col-4" style="margin-left: 30px; text-align: center; display: inline-flex; align-items: center;">
                        <span t-field="doc.agent_id.name" style="font-size: 28px;"/>
                    </div>
                </t>
            </t>
            <t t-else="">
                <t t-if="doc.agent_id.logo">
                    <div class="col-4" style="margin-left: 30px">
                        <img t-att-src="'data:image/png;base64,%s' % to_text(doc.agent_id.logo)" height="200" border="1" width="300" style="max-height:100px; max-width:165px; margin-bottom: 20px"/><br/>
                    </div>
                </t>
                <t t-else="">
                    <div class="col-4" style="margin-left: 30px; text-align: center; display: inline-flex; align-items: center;">
                        <span t-field="doc.agent_id.name" style="font-size: 28px;"/>
                    </div>
                </t>
                <!--<span style="margin-top: 10px; margin-left: 10px; color: #DC5413; font-size: 20px;">eTicket Itinerary</span>-->
            </t>
            <div class="col-2">

            </div>
            <div class="col-5 text-center">
                <t t-set="printout_icon" t-value="'/tt_report_common/static/images/airfreight-white.svg'"/>
                <t t-if="doc_model == 'tt.agent.invoice'">
                    <span t-att-style="'margin-top: 10px; margin-left: 10px; color: '+ base_color +'; font-size: 20px;'">Invoice</span><br/>
                    <t t-set="printout_icon" t-value="'/tt_report_common/static/images/bill-white.png'"/>
                </t><t t-elif="doc_model == 'tt.billing.statement'">
                <span t-att-style="'margin-top: 10px; margin-left: 10px; color: '+ base_color +'; font-size: 20px;'">Billing</span><br/>
                <t t-set="printout_icon" t-value="'/tt_report_common/static/images/bill-white.png'"/>
            </t><t t-elif="doc_model == 'tt.top.up'">
                <t t-if="doc.state in ['draft','request','confirm']">
                    <span t-att-style="'margin-top: 10px; margin-left: 10px; color: '+ base_color +'; font-size: 20px;'">Proforma Top Up</span><br/>  <!--Proforma HO Invoice-->
                    <t t-set="printout_icon" t-value="'/tt_report_common/static/images/bill-white.png'"/>
                </t>
                <t t-if="doc.state in ['validated','approved']">  <!--['valid','done']-->
                    <span t-att-style="'margin-top: 10px; margin-left: 10px; color: '+ base_color +'; font-size: 20px;'">Top Up</span><br/>  <!--HO Invoice-->
                    <t t-set="printout_icon" t-value="'/tt_report_common/static/images/bill-white.png'"/>
                </t>
            </t><t t-elif="doc_model == 'tt.refund'">
                <span t-att-style="'margin-top: 10px; margin-left: 10px; color: '+ base_color +'; font-size: 20px;'">Refund</span><br/>
                <t t-set="printout_icon" t-value="'/tt_report_common/static/images/refund-white.png'"/>
            </t><t t-elif="doc_model == 'tt.reschedule'">
                <span t-att-style="'margin-top: 10px; margin-left: 10px; color: '+ base_color +'; font-size: 20px;'">After Sales</span><br/>
                <t t-set="printout_icon" t-value="'/tt_report_common/static/images/refund-white.png'"/>
                <!--</t><t t-elif="doc_model == 'tt.reservation.activity'">-->
                <!--<span style="margin-top: 10px; margin-left: 10px; color: #DC5413; font-size: 20px;">Itinerary</span><br/>-->
                <!--<t t-set="printout_icon" t-value="'/tt_report_common/static/images/activity-white.png'"/>-->
            </t><t t-elif="doc_type == 'expenses'">
                <span t-att-style="'margin-top: 10px; margin-left: 10px; color: '+ base_color +'; font-size: 20px;'">Expenses</span><br/>
                <t t-set="printout_icon" t-value="'/tt_report_common/static/images/bill-white.png'"/>
            </t><t t-elif="doc_type == 'itin'">
                <span t-att-style="'margin-top: 10px; margin-left: 10px; color: '+ base_color +'; font-size: 20px;'">Itinerary Form</span><br/>
                <t t-set="printout_icon" t-value="'/tt_report_common/static/images/bill-white.png'"/>
            </t><t t-elif="doc_model == 'tt.reservation.hotel'">
                <span t-att-style="'margin-top: 10px; margin-left: 10px; color: '+ base_color +'; font-size: 20px;'">Hotel Voucher</span><br/>
                <t t-set="printout_icon" t-value="'/tt_report_common/static/images/hotel-white.png'"/>
            </t><t t-elif="doc_model == 'tt.reservation.ppob'">
                <span t-att-style="'margin-top: 10px; margin-left: 10px; color: '+ base_color +'; font-size: 20px;'">Bills</span><br/>
                <t t-set="printout_icon" t-value="'/tt_report_common/static/images/bill-white.png'"/>
            </t><t t-else="">
                <span t-att-style="'margin-top: 10px; margin-left: 10px; color: '+ base_color +'; font-size: 20px;'">Other</span><br/>
            </t>
                <div style="height: 105px; margin-left: 0px">
                    <div id="circle" t-att-style="'width: 60px; height: 60px; background: '+ base_color +'; border-radius: 100%; position: absolute; z-index: 1;'">
                        <img t-att-src="printout_icon" style="max-height: 35px; max-width: 35px; margin: 12px 0px 0px 0px;"/>
                    </div>
                    <div id="rectangle" style="width: 100%; height: 50px; bottom: 15px; background-image:  url('/tt_report_common/static/images/background footer airline.jpg'); border-radius: 25px; position: absolute; z-index: 0;">
                        <div style="padding-left: 60px; padding-bottom: 10px; vertical-align: middle; text-align: center; border-radius: 25px; background-color: rgba(39,62,84,0.76); padding-top: 5px;">
                            <div style="vertical-align: middle; display: flex; letter-spacing: 0.05em; font-size: 24px; color: white; font-weight: 600; margin-top: 0px; margin-left: -10px;">
                                <t t-if="doc_type == 'itin'">
                                    <t t-if="doc.pnr">
                                        <span t-field="doc.pnr" style="margin-top: 5px;"/>
                                    </t><t t-else="">
                                    <span t-esc="'Itinerary'" style="margin-top: 5px;"/>
                                </t>
                                </t>
                                <t t-elif="doc_model == 'tt.reservation.hotel'">
                                    <span t-field="doc.pnr" style="margin-top: 5px;"/>
                                </t>
                                <t t-elif="doc_model == 'tt.reservation.ppob'">
                                    <t t-if="doc.provider_booking_ids">
                                        <span t-field="doc.provider_booking_ids[0].customer_number" style="margin-top: 5px;"/>
                                    </t>
                                    <t t-else="">
                                        <span style="margin-top: 5px;">-</span>
                                    </t>
                                </t>
                                <t t-elif="doc_type == 'expenses'">
                                    <span style="margin-top: 5px;">Expenses Form</span>
                                </t>
                                <t t-else="">
                                    <span t-field="doc.name" style="margin-top: 5px;"/>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="width: 100%; border-bottom: 1px solid black; margin:20px 0px 0px 0px;"/>  <!---15px -15px-->
    </template>

