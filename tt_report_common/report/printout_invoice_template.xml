<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout">
        <t t-call="tt_report_common.external_layout_header"/>
        <t t-raw="0"/>
        <t t-call="tt_report_common.external_layout_footer"/>
    </template>

    <template id="address_layout">
            <!--USAGE : <t t-set="o_addr" t-value="o.partner_id"/> =-->
            <!--partner_id is a pertner instance class from res.partner-->
            <address t-ignore="true" class="mb0" itemscope="itemscope" itemtype="http://schema.org/Organization">
                <div>
                    <strong><span t-esc="o_addr.name"/></strong>
                    <t t-if="o_addr.customer_parent_ids">
                        (<span t-esc="o_addr.customer_parent_ids[0].name"/>)
                    </t>
                </div>

                <t t-if="o_addr.agent_id.address_ids">
                    <div>
                        <div>
                            <!--<i t-if="not options.get('no_marker')" class='fa fa-map-marker'/> -->
                            <t t-set="add_obj" t-value="o_addr.agent_id.address_ids[0]"/>
                            <span t-esc="add_obj.address"/>
                            <!--<t t-if="o_addr.street2">-->
                            <!--, <span t-esc="o_addr.street2"/>-->
                            <!--</t>-->
                            <t t-if="add_obj.city_id">
                                , <span t-esc="add_obj.city_id.name"/>
                            </t>
                        </div>

                        <div>
                            <t t-if="add_obj.state_id">
                                <span t-esc="add_obj.state_id.name"/>
                            </t>
                            <t t-if="add_obj.country_id">
                                <t t-if="add_obj.state_id">
                                    -
                                </t>
                                <span t-esc="add_obj.country_id.name"/>
                            </t>

                        </div>

                        <div>
                            <t t-if="o_addr.phone_ids">
                                <span>Phone: </span>
                                <span t-esc="o_addr.phone_ids[0].phone_number"/>
                            </t>
                        </div>
                    </div>
                </t>
            </address>
        </template>

    <template id="external_layout_header">
        <br/>
        <div class="header row" style="margin-bottom:0;">
            <div class="col-2">
                <img t-if="doc.agent_id.logo" t-attf-src="data:image/png;base64,#{doc.agent_id.logo}" style="max-width: 110px; max-height: 85px;"/>
            </div>
            <div class="col-6" style="margin-bottom:2px; font-size:14px;">
                <ul class="list-inline" style="margin-bottom:2px;">
                    <li style="vertical-align: bottom;">
                        <strong style="font-size:16px;"><span t-field="doc.agent_id.name"/></strong>
                        <br/>
                        <div>
                            <t t-if="doc.agent_id.address_ids">
                                <t t-set="add_obj" t-value="doc.agent_id.address_ids[0]"/>
                                <span t-field="add_obj.address"/>
                                <!--<span t-if="add_obj.street2" t-field="add_obj.street2"/>-->

                                <t t-if="'city_id' not in add_obj.fields_get()">
                                    '
                                    <span t-field="add_obj.city_id.name"/>
                                </t>

                                <t t-if="add_obj.state_id">
                                    ,
                                    <span t-field="add_obj.state_id.name"/>
                                </t>
                                <t t-if="add_obj.country_id">
                                    ,
                                    <span t-field="add_obj.country_id.name"/>
                                </t>
                            </t>
                            <t t-else="">

                            </t>
                        </div>
                    </li>
                </ul>
                <div>
                    <t t-if="doc.agent_id.phone_ids">Phone: <span t-field="doc.agent_id.phone_ids[0].phone_number"/>; </t>

                    <t t-if="doc.agent_id.email">&amp;bull;</t>
                    <t t-if="doc.agent_id.email">Email: <span t-field="doc.agent_id.email"/>; </t>

                    <t t-if="doc.agent_id.website">&amp;bull;</t>
                    <t t-if="doc.agent_id.website">Website: <span t-field="doc.agent_id.website"/>; </t>
                </div>
            </div>

            <div class="col-4" style="margin-bottom:2px; font-size:14px;">
                <div>
                    <ul class="list-inline" style="float:right; margin-bottom:0;">
                        <t t-if="doc_model == 'tt.agent.invoice' ">
                            <li><b>Date: </b><span t-field="doc.date_invoice" t-options ='{"format": "dd/MM/yyyy"}'/></li>
                        </t>
                        <t t-elif="'tt.reservation' in doc_model">
                            <li><b>Date: </b><span t-field="doc.date" t-options ='{"format": "dd/MM/yyyy"}'/></li>
                        </t>
                        <t t-else="">
                            <li><b>Date: </b><span>-</span></li>
                        </t>
                        <li><h4><strong><span t-field="doc.name"/></strong></h4></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Border Judul-->
        <div style="width: 100%; border-bottom: 1px solid black; margin:0;"/>
        <!-- Base Info Booker dkk -->
        <table style="margin: 1px;">
            <tr>
                <td style="width:50px;">To</td>
                <td style="width:10px;">:</td>
                <td style="width:400px; vertical-align: top;" rowspan="5">
                    <t t-set="o_addr" t-value="doc.booker_id"/>
                    <t t-call="tt_report_common.address_layout"/>
                </td>
                <td style="width:100px;"/>
                <td style="width:150px;">Booker</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;">
                    <t t-if="doc.booker_id">
                        <i>
                            <span t-field="doc.booker_id.first_name"/>
                            <span/>
                            <span t-field="doc.booker_id.last_name"/>
                        </i>
                    </t>
                    <t t-if="not doc.booker_id">
                        <i style="color: white;">...</i>
                    </t>
                </td>
            </tr>
            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Operator</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;">
                    <t t-if="doc.create_uid">
                        <i>
                            <span t-field="doc.create_uid.name"/>
                        </i>
                    </t>
                    <t t-if="not doc.create_uid">
                        <i style="color: white;">...</i>
                    </t>
                </td>
            </tr>
            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Due Date</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;">
                    <t  t-if="doc.expired_date">
                        <i t-field="doc.expired_date" t-options ='{"format": "dd/MM/yyyy"}'/>
                    </t>
                    <t t-if="not doc.expired_date">
                        <i style="color: white;">...</i>
                    </t>
                </td>
            </tr>
            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Status</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;">
                    <i t-field="doc.state"/>
                </td>
            </tr>
            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Notes</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;">
                    <t t-if="'description' in doc.fields_get()">
                        <i><span t-field="doc.description"/></i>
                    </t>
                    <t t-else="">
                        <i><span>-</span></i>
                    </t>
                </td>
            </tr>
        </table>
    </template>

    <template id="external_layout_footer">
        <div class="footer">
            <div class="row text-center" style="border-top: 1px solid black;">
                <div class="col col-3 offset-9 text-right">
                    <ul class="list-inline mt-2">
                        <li class="list-inline-item">Page:</li>
                        <li class="list-inline-item">
                            <span class="page"/>
                        </li>
                        <li class="list-inline-item">/</li>
                        <li class="list-inline-item">
                            <span class="topage"/>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </template>

    <template id="agent_invoice_content_view">
        <!-- Issued Code + Line Info -->
        <div class="row">
            <table class="table table-condensed mt32">
                <thead>
                    <tr>
                        <th>Service Type</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th class="text-right">Qty</th>
                        <th class="text-right">Amount</th>
                        <th class="text-center">Disc</th>
                        <th class="text-right">Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="doc.invoice_line_ids" t-as="line">
                        <td><span t-field="line.model_type_id.name"/></td>
                        <td><span t-field="line.name"/></td>
                        <td><span t-field="line.desc"/></td>
                        <td class="text-right">1</td>
                        <td class="text-right"><span t-field="line.total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/></td>
                        <td class="text-center"><span t-esc="0" t-esc-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/></td>
                        <td class="text-right"><span t-field="line.total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!-- SubTotal -->
        <div class="row mt4 mb2">
            <div class="col-8"/>
            <div class="col-4">
                <table class="table table-condensed">
                    <tr>
                        <td><strong>Subtotal</strong></td>
                        <td class="text-right">
                            <span t-field="doc.total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Tax</strong></td>
                        <td class="text-right">
                            <span t-esc="0" t-esc-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Service Charge</strong></td>
                        <td class="text-right">
                            <span t-esc="0" t-esc-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Discount</strong></td>
                        <td class="text-right">
                            <span t-esc="0" t-esc-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                        </td>
                    </tr>
                    <tr class="border-black">
                        <td><strong>Grand Total</strong></td>
                        <td class="text-right">
                            <span t-field="doc.total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </template>

    <template id="reservation_hotel_content_view">
        <!-- Main Params -->
        <div class="row mt32">
            <div class="col-6">
                <div class="row">
                    <div class="col-2">Hotel</div><div class="col-1">:</div><div class="col-9"><span t-field="doc.hotel_name"/></div>
                </div>
                <div class="row">
                    <div class="col-2">Phone</div><div class="col-1">:</div><div class="col-9"><span t-field="doc.hotel_phone"/></div>
                </div>
                <div class="row">
                    <div class="col-2">Address</div><div class="col-1">:</div><div class="col-9"><span t-field="doc.hotel_address"/></div>
                </div>
            </div>
            <div class="col-6" style="border: 1px solid black">
                <div class="row">
                    <div class="col-4">Check In</div><div class="col-1">:</div><div class="col-7"><span t-field="doc.checkin_date"/></div>
                </div>
                <div class="row">
                    <div class="col-4">Check Out</div><div class="col-1">:</div><div class="col-7"><span t-field="doc.checkout_date"/></div>
                </div>
                <div class="row">
                    <div class="col-4">Rooms</div><div class="col-1">:</div><div class="col-7"><span t-field="doc.room_count"/></div>
                </div>
                <div class="row">
                    <div class="col-4">Extra Beds</div><div class="col-1">:</div><div class="col-7"><span>0</span></div>
                </div>
                <div class="row">
                    <div class="col-4">Adult</div><div class="col-1">:</div><div class="col-7"><span t-field="doc.adult"/></div>
                </div>
                <div class="row">
                    <div class="col-4">Child</div><div class="col-1">:</div><div class="col-7"><span t-field="doc.child"/></div>
                </div>
            </div>
        </div>
        <!-- Rooms -->
        <div class="row mt32 mb32">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Voucher Code</th>
                        <th>Room Name</th>
                        <th class="text-right">Qty</th>
                        <th class="text-right">Amount</th>
                        <th class="text-right">Disc</th>
                        <th class="text-right">Total</th>
                        <th>Spc. Request</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="doc.room_detail_ids" t-as="line">
                        <td><span t-field="line.issued_name"/></td>
                        <td><span t-field="line.room_name"/></td>
                        <td class="text-right">1</td>
                        <td class="text-right"><span t-field="line.sale_price" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/></td>
                        <td class="text-center"><t t-set="zero" t-value="0"/><span t-esc="zero" t-esc-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/></td>
                        <td class="text-right"><span t-field="line.sale_price" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/></td>
                        <td>
                            <t t-if="line.special_request">
                                <span t-field="line.special_request"/>
                            </t>
                            <t t-else="">
                                <span>-</span>
                            </t>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="reservation_airline_content_view">
        <!-- Main Params -->
        <div class="row mt32">
            <h2>Itinerary Details</h2>
            <t t-foreach="doc.provider_booking_ids" t-as="provider_itin_id">
                <table class="table table-sm" style="text-align:center;">
                    <thead>
                        <tr>
                            <th>PNR</th>
                            <th>Origin</th>
                            <th>Destination</th>
                            <th>Carrier</th>
                            <th>Flight</th>
                            <th>Departure Date</th>
                            <th>Arrival Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.segment_ids.filtered(lambda x:x.pnr == provider_itin_id.pnr)" t-as="provider_segment_id">
                            <tr>
                                <td><span t-field="provider_segment_id.pnr"/></td>
                                <td><span t-field="provider_segment_id.origin_id.name"/></td>
                                <td><span t-field="provider_segment_id.destination_id.name"/></td>
                                <td><span t-field="provider_segment_id.carrier_id.name"/></td>
                                <td><span t-field="provider_segment_id.name"/></td>
                                <td><span t-field="provider_segment_id.departure_date" t-options ='{"format": "dd/MM/yyyy HH:mm:ss"}'/></td>
                                <td><span t-field="provider_segment_id.arrival_date" t-options ='{"format": "dd/MM/yyyy HH:mm:ss"}'/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <h5>Passenger Details</h5>
                <table class="table table-sm" style="text-align:center;">
                    <thead>
                        <tr>
                            <th width="200px">Ticket Number</th>
                            <th width="400px">Name</th>
                            <th width="100px">Pax Type</th>
                            <th width="300px">Baggage</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="provider_itin_id.ticket_ids" t-as="psg_rec">
                            <td><span t-field="psg_rec.ticket_number"/></td>
                            <td>
                                <span t-field="psg_rec.passenger_id.title"/>
                                <span/>
                                <span t-field="psg_rec.passenger_id.first_name"/>
                                <span/>
                                <span t-field="psg_rec.passenger_id.last_name"/>
                            </td>
                            <td><span t-field="psg_rec.pax_type"/></td>
                            <td>No Additional Baggage</td>
                        </tr>
                    </tbody>
                </table>
            </t>
        </div>
        <div class="">
                <h4 class="sub-table">Important Notes</h4>
                <div class="space">
                    <p>- Mohon tiba di Bandara selambat - lambatnya 90 menit sebelum keberangkatan untuk domestik atau 2 jam untuk internasional</p>
                </div>
                <div class="space">
                    <p class="space">- Penumpang / pemegang tiket ini tunduk kepada syarat dan ketentuan penerbangan yang ditetapkan oleh Maskapai</p>
                </div>
            </div>
    </template>

    <template id="reservation_train_content_view">
        TRAIN
    </template>

    <template id="printout_invoice">
        <t t-set="data_report_header_spacing" t-value="20"/>
        <t t-set="data_report_margin_top" t-value="22"/>
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <t t-call="tt_report_common.external_layout">
                        <t t-if="doc_model == 'tt.agent.invoice'">
                            <t t-call="tt_report_common.agent_invoice_content_view"/>
                        </t>
                        <t t-elif="doc_model == 'tt.reservation.hotel'">
                            <t t-call="tt_report_common.reservation_hotel_content_view"/>
                        </t>
                        <t t-elif="doc_model == 'tt.reservation.airline'">
                            <t t-call="tt_report_common.reservation_airline_content_view"/>
                        </t>
                        <t t-elif="doc_model == 'tt.reservation.train'">
                            <t t-call="tt_report_common.reservation_train_content_view"/>
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>