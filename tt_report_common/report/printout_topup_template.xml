<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="printout_topup_content">
        <!-- Base Info Booker dkk -->
        <table style="margin: 1px; 1px; 15px;">
            <tr>
                <td style="width:50px;">To</td>
                <td style="width:10px;">:</td>
                <td style="width:400px; vertical-align: top;" rowspan="6">
                    <t t-set="o_addr" t-value="doc.agent_id"/>
                    <t t-call="tt_report_common.address_layout"/>
                </td>
                <td style="width:100px;"/>
                <td style="width:200px;">Request Date</td>
                <td style="width:2%;">:</td>
                <td style="width:350px;"><span t-field="doc.request_date" t-options ='{"format": "dd/MM/yyyy"}'/></td>
            </tr>
            <tr>
                <td/>
                <td/>
                <td/>
                <td>Request By</td>
                <td>:</td>
                <td><span t-field="doc.request_uid"/></td>
            </tr>
            <tr>
                <td/>
                <td/>
                <td/>
                <td>Due Date</td>
                <td>:</td>
                <td><b t-field="doc.due_date" t-options ='{"format": "dd/MM/yyyy HH:mm:ss"}'/></td>
            </tr>
            <tr>
                <td/>
                <td/>
                <td/>
                <td>Status</td>
                <td>:</td>
                <td>
                    <span t-field="doc.state"/>
                </td>
            </tr>
        </table>
        <!-- Line Info -->
        <br/>
        <div class="box" style="margin: 0px 0px 20px; text-align:center;">
            <div class="title" t-att-style="'background-color: '+base_color+'; border-radius: 20px 20px 0 0; border-color: #CCC; padding-top: 5px; padding-bottom: 5px'">
                <div class="row" style="padding-left: 20px; color: white; font-weight: 600; font-size: 18px">
                    <div class="col-3">Amount</div>
                    <div class="col-2">Code</div>
                    <div class="col-2">Total</div>
                    <div class="col-2">Fee(s)</div>
                    <div class="col-3">Total Payment</div>
                </div>
            </div>
            <div class="row" style="margin-left: 0px; margin-right: 0px; border: 1px solid #BBB; border-radius: 0 0 20px 20px;">
                <div class="col-3 text-right" style="padding: 10px 25px;"><span t-field="doc.amount" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></div>
                <div class="col-2 text-right" style="padding: 10px 25px;"><span t-field="doc.unique_amount" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></div>
                <div class="col-2 text-right" style="padding: 10px 25px;"><span t-field="doc.total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></div>
                <div class="col-2 text-right" style="padding: 10px 25px;"><span t-field="doc.fees" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></div>
                <div class="col-3 text-right" style="padding: 10px 25px;">
                    <span t-field="doc.total_with_fees" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                </div>
            </div>
        </div>
        <!-- SubTotal -->
        <div class="row mt4 mb2">
            <div class="col-8">
                <table style="width:80%;">
                    <tr>
                        <td style="width:100px;">In Words</td>
                        <td style="width:20px;">:</td>
                        <td style=""><t t-esc="terbilang[doc.name]"/></td>
                    </tr>
                    <tr>
                        <td>Remarks</td>
                        <td>:</td>
                        <td></td>
                    </tr>
                </table>
            </div>
            <div class="col-4">

            </div>
        </div>
        <!-- Price and Sign -->
        <div class="row">
            <!--No Rekening-->
            <div class="col-11">
                <br/>
                <span style="font-size: 28px; font-weight: 730">IMPORTANT NOTES</span><br/>
                <ol style="margin: 0 25px;">
                    <li>Payment by transfer/cheque/giro is valid after being credited &amp; confirmed by the bank in full amount.</li>
                    <li>Please transfer to the following account:<br/>
                        <ul>
                            <t t-if="doc.payment_id">
                                <li>
                                    <t t-if="doc.payment_id.acquirer_id.bank_id">
                                        <span t-field="doc.payment_id.acquirer_id.bank_id.name"/> (IDR) <span t-field="doc.payment_id.acquirer_id.account_number"/>
                                        <t t-if="doc.payment_id.acquirer_id.account_name">
                                            A/N <span t-field="doc.payment_id.acquirer_id.account_name"/>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <span t-field="doc.payment_id.acquirer_id.name"/> (IDR)
                                    </t>
                                </li>
                            </t>
                            <t t-else="">
                                <li>-</li>
                            </t>
                        </ul>
                    </li>
                </ol>
            </div>
            <div class="col-1"/>
        </div>
    </template>

    <template id="printout_topup">
        <t t-set="data_report_header_spacing" t-value="20"/>
        <t t-set="data_report_margin_top" t-value="10"/>
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <t t-call="tt_report_common.external_layout_ho">
                        <br/>
                        <t t-call="tt_report_common.printout_topup_content"/>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>