<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="printout_refund">
        <t t-set="data_report_header_spacing" t-value="0"/>
        <t t-set="data_report_margin_top" t-value="10"/>
        <t t-set="data_report_margin_bottom" t-value="26"/>
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <t t-if="is_ho == true">
                        <t t-call="tt_report_common.external_layout">
                            <div style="margin: 0 20px; font-family: 'Liberation Sans'">
                                <t t-call="tt_report_common.refund_ho_content_view"/>
                            </div>
                        </t>
                    </t>
                    <t t-if="is_agent == true">
                        <t t-call="tt_report_common.external_layout">
                            <div style="margin: 0 20px; font-family: 'Liberation Sans'">
                                <t t-call="tt_report_common.refund_ho_agent_content_view"/>
                            </div>
                        </t>
                    </t>
                    <t t-if="is_est == true">
                        <t t-call="tt_report_common.external_layout">
                            <div style="margin: 0 20px; font-family: 'Liberation Sans'">
                                <t t-call="tt_report_common.refund_est_content_view"/>
                            </div>
                        </t>
                    </t>
                    <t t-if="not is_est == true and not is_ho == true and not is_agent == true">
                        <t t-call="tt_report_common.external_layout">
                            <div style="margin: 0 20px; font-family: 'Liberation Sans'">
                                <t t-call="tt_report_common.refund_content_view"/>
                            </div>
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>

