<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout">
        <div class="container">
            <div class="article" style="margin: 0px !important; padding: 0px !important">
                <t t-call="tt_report_common.external_layout_header"/>
                <t t-raw="0"/>
<!--                <t t-if="doc_model == 'tt.agent.invoice'">-->
<!--                    <div style="margin: 0 20px">-->
<!--                    <t t-call="tt_report_common.price_and_sign"/>-->
<!--                    </div>-->
<!--                </t>-->
                <t t-call="tt_report_common.external_layout_footer"/>
            </div>
        </div>
    </template>

    <template id="external_layout_header">
        <div class="row" style="height:100px;">
            <div class="col-4" style="margin-left: 30px">
                <img t-if="doc.agent_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(doc.agent_id.logo)" height="200" border="1" width="300" style="max-height:100px; max-width:165px; margin-bottom: 20px"/><br/>
            </div>
            <div class="col-2">

            </div>
            <div class="col-5 text-center">
                <t t-set="printout_icon" t-value="'/tt_report_common/static/images/bill-white.png'"/>
                <span style="margin-top: 10px; margin-left: 10px; color: #DC5413; font-size: 20px;">HO Invoice</span><br/>
                <div style="height: 105px; margin-left: 0px">
                    <div id="circle" style="width: 60px; height: 60px; background: #DC5413; border-radius: 100%; position: absolute; z-index: 1;">
                        <img t-att-src="printout_icon" style="max-height: 35px; max-width: 35px; margin: 12px 0px 0px 0px;"/>
                    </div>
                    <div id="rectangle" style="width: 100%; height: 50px; bottom: 15px; background-image:  url('/tt_report_common/static/images/background footer airline.jpg'); border-radius: 25px; position: absolute; z-index: 0;">
                        <div style="padding-left: 60px; padding-bottom: 10px; vertical-align: middle; text-align: center; border-radius: 25px; background-color: rgba(39,62,84,0.76); padding-top: 5px;">
                            <div style="vertical-align: middle; display: flex; letter-spacing: 0.05em; font-size: 24px; color: white; font-weight: 600; margin-top: 0px; margin-left: -10px;">
                                <t t-if="doc_type == 'itin'">
                                    <span style="margin-top: 5px;">Itinerary Form</span>
                                </t>
                                <t t-else="">
                                    <span t-field="doc.name" style="margin-top: 5px;"/>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="width: 100%; border-bottom: 1px solid black; margin:20px 0px 0px 0px;"/>  <!---15px -15px-->
    </template>

    <template id="ho_invoice_content_view">
        <!-- Base Info Booker dkk -->
        <table style="margin: 1px; 1px; 15px;">
            <tr>
                <td style="width:50px;">To</td>
                <td style="width:10px;">:</td>
                <td style="width:400px; vertical-align: top;" rowspan="5">
                    <!--<t t-set="o_addr" t-value="doc.booker_id"/>-->
                    <!--<t t-call="tt_report_common.address_layout"/>-->
                    <span t-field="doc.agent_id.name"/><br/>
                    <t t-if="doc.agent_id.address_ids">
                        <span t-field="doc.agent_id.address_ids[0].address"/><span>, </span>
                        <t t-if="doc.agent_id.address_ids[0].district_id">
                            <span t-field="doc.agent_id.address_ids[0].district_id.name"/><span>, </span>
                        </t>
                        <t t-if="doc.agent_id.address_ids[0].sub_district_id">
                            <span t-field="doc.agent_id.address_ids[0].sub_district_id.name"/><span>, </span>
                        </t>
                        <t t-if="doc.agent_id.address_ids[0].city_id">
                            <span t-field="doc.agent_id.address_ids[0].city_id.name"/><span>, </span>
                        </t>
                        <t t-if="doc.agent_id.address_ids[0].zip">
                            <span t-field="doc.agent_id.address_ids[0].zip"/>
                        </t>
                    </t><br/>
                    <t t-if="doc.agent_id.address_ids[0].state_id">
                        <span t-field="doc.agent_id.address_ids[0].state_id.name"/><span> - </span>
                    </t>
                    <t t-if="doc.agent_id.address_ids[0].country_id">
                        <span t-field="doc.agent_id.address_ids[0].country_id.name"/>
                    </t>
                </td>
                <td style="width:100px;"/>
                <td style="width:150px;">Invoice Date</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;text-align: right;">
                    <span t-field="doc.date" t-options ='{"format": "dd/MM/yyyy"}'/>
                </td>
            </tr>
            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Issued Date</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;text-align: right;">
                    <i t-field="doc.issued_date"/>
                </td>
            </tr>
            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Issued By</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;text-align: right;">
                    <i t-field="doc.issued_uid.name"/>
                </td>
            </tr>
            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Customer</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;text-align: right;">
                    <i t-field="doc.customer_parent_id.name"/>
                </td>
            </tr>
            <tr>
                <td style="width:50px;"/>
                <td style="width:10px;"/>
                <td style="width:100px;"/>
                <td style="width:150px;">Booker</td>
                <td style="width:10px;">:</td>
                <td style="width:400px;text-align: right;">
                    <i t-field="doc.booker_id.name"/>
                </td>
            </tr>
        </table>

        <!-- Issued Code + Line Info -->
        <div style="margin-bottom: 10px; margin-top: 20px;">
            <span style="font-size: 28px; font-weight: 730">INVOICE DETAILS</span><br/>
        </div>
        <table style="width: 100%; line-height: normal; border-collapse: separate; border-spacing: 0;">  <!--border-radius: 20px; border: 1px solid #CCC; border-spacing: 0; margin-bottom: 30px; padding: 5px 0px 5px 0px;-->
            <tr style="background-color: #DC5413; padding-top: 5px; padding-bottom: 5px">
                <th style="width: 16.667%; padding: 7px 7px 7px 20px; border-left: 1px solid #CCC; border-top-left-radius: 20px; color: white; font-weight: 800; font-size: 18px">
                    <span>Ref. Number</span>
                </th>
                <th style="width: 25%; padding: 7px 7px 7px 20px; color: white; font-weight: 800; font-size: 18px">
                    <span>Details</span>
                </th>
                <th style="width: 25%; padding: 7px 7px 7px 20px; color: white; font-weight: 800; font-size: 18px">
                    <span>Descriptions</span>
                </th>
                <th style="width: 16.667%; padding: 7px 7px 7px 20px; border-right: 1px solid #CCC; border-top-right-radius: 20px; color: white; font-weight: 800; font-size: 18px">
                    <span>Amount</span>
                </th>
            </tr>
            <t t-set="row_idx" t-value="0"/>
            <t t-foreach="inv_lines[doc.id]" t-as="line2_idx">
                <t t-foreach="line2_idx.keys()" t-as="line_idx">
                    <t t-set="line" t-value="line2_idx[line_idx]"/>
                    <t t-set="col_len" t-value="len(line['descs'])"/>
                    <t t-set="pax_count" t-value="0"/>
                    <t t-foreach="line['pax_data']" t-as="pax">
                        <tr valign="top" style="padding-top: 5px; padding-bottom: 5px;">
                            <t t-if="pax_count == 0">
                                <t t-if="row_idx == len(inv_lines[doc.id])-1">
                                    <td t-att-rowspan="len(line['pax_data'])" style="background: #F0F0F0; width: 16.667%; border-left: 1px solid #ccc; border-bottom: 1px solid #ccc; border-right: 1px solid #ccc; border-radius: 0px 0px 0px 20px; border-color: #CCC; padding: 7px 7px 7px 20px;">
                                        <span t-esc="line_idx"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td t-att-rowspan="len(line['pax_data'])" style="background: #F0F0F0; width: 16.667%; border-left: 1px solid #ccc; border-bottom: 1px solid #ccc; border-right: 1px solid #ccc; border-radius: 0px 0px 0px 0px; border-color: #CCC; padding: 7px 7px 7px 20px;">
                                        <span t-esc="line_idx"/>
                                    </td>
                                </t>
                            </t>
                            <td style="width: 30.555667%; padding: 7px 7px 7px 20px; border-bottom: 1px solid #CCC; border-right: 1px solid #ccc;">  <!--width: 25%; padding: 7px 7px 7px 20px; border-bottom: 1px solid #ccc;-->
                                <ul style="padding-left:15px;">
                                    <li><span t-esc="pax['name']"/></li>
                                </ul>
                            </td>
                            <td t-att-rowspan="len(line['pax_data'])" style="width: 25%; padding: 7px 7px 7px 20px; border-bottom: 1px solid #ccc; border-right: 1px solid #ccc;">
                                <t t-foreach="line['descs']" t-as="desc">
                                    <span t-esc="desc"/>
                                    <br/>
                                </t>
                            </td>
                            <t t-if="row_idx == len(inv_lines[doc.id])-1 and pax_count == len(line['pax_data'])-1">
                                <td style="width: 16.667%; border-color: #CCC; padding: 7px 20px 7px 7px; border-bottom: 1px solid #ccc; border-right: 1px solid #ccc; border-bottom-right-radius: 20px; text-align: right">
                                    <ul style="list-style-type: none;">
                                        <li><span t-esc="pax['total']" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></li>
                                    </ul>
                                </td>
                            </t>
                            <t t-else="">
                                <td style="width: 16.667%; border-color: #CCC; padding: 7px 20px 7px 7px; border-bottom: 1px solid #ccc; border-right: 1px solid #ccc; text-align: right">
                                    <ul style="list-style-type: none;">
                                        <li><span t-esc="pax['total']" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></li>
                                    </ul>
                                </td>
                            </t>
                        </tr>
                        <t t-set="pax_count" t-value="pax_count+1"/>
                    </t>
                    <t t-set="row_idx" t-value="row_idx+1"/>
                </t>
            </t>
<!--            <td style="width: 30.555667%; padding: 7px 7px 7px 20px; border-bottom: 1px solid #CCC; border-right: 1px solid #ccc;">-->

<!--            </td>-->
<!--            <td style="width: 30.555667%; padding: 7px 7px 7px 20px; border-bottom: 1px solid #CCC; border-right: 1px solid #ccc;">-->
<!--                <span t-esc="values['desc']"/>-->
<!--            </td>-->
        </table>

        <!-- SubTotal -->
        <div class="row mt4 mb2" style="padding-top: 20px; page-break-inside: avoid">
            <div class="col-8">
                <br/>
                <table style="width:80%;">
                    <tr valign="top">
                        <td style="width:100px;">In Words</td>
                        <td style="width:20px;">:</td>
                        <td style=""><t t-esc="terbilang[doc.name]"/></td>
                    </tr>
                    <tr>
                        <td>Remarks</td>
                        <td>:</td>
                        <td/>
                    </tr>
                </table>
            </div>
            <div class="col-4">
                <table style="width:100%">
                    <tr>
                        <td><strong>Commission</strong></td>
                        <td class="text-right">
                            <span style="padding: 10px 25px;" t-field="doc.total_commission" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>NTA</strong></td>
                        <td class="text-right">
                            <span style="padding: 10px 25px;" t-field="doc.agent_nta" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                        </td>
                    </tr>
                    <tr>
                        <td/>
                        <td>
                            <br/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Total Fare</strong></td>
                        <td class="text-right">
                            <span style="padding: 10px 25px;" t-field="doc.total_fare" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Total Discount</strong></td>
                        <td class="text-right">
                            <span style="padding: 10px 25px;" t-field="doc.total_discount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Total Tax</strong></td>
                        <td class="text-right">
                            <span style="padding: 10px 25px;" t-field="doc.total_tax" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Total</strong></td>
                        <td class="text-right">
                            <span style="padding: 10px 25px;" t-field="doc.total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </template>

