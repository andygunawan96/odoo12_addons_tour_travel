<odoo>
    <record id="rule_event_for_external_user" model="ir.rule">
        <field name="name">Master Event for External User</field>
        <field name="model_id" ref="model_tt_master_event"/>
        <field name="domain_force">[('event_vendor_id','=',user.vendor_id.id)]</field>
        <field name="groups" eval="[(4,ref('tt_base.group_tt_external_user'))]"/>
    </record>

    <record id="rule_event_reservation_for_external_user" model="ir.rule">
        <field name="name">Event Reservation for External User</field>
        <field name="model_id" ref="model_tt_event_reservation"/>
        <field name="domain_force">[('event_id.event_vendor_id', '=', user.vendor_id.id)]</field>
        <field name="groups" eval="[(4,ref('tt_base.group_tt_external_user'))]"/>
    </record>

    <record id="tt_reservation_event_for_ho_user" model="ir.rule">
        <field name="name">Reservation Event For HO User</field>
        <field name="model_id" ref="model_tt_reservation_event"/>
        <field name="domain_force">[('ho_id','=',user.ho_id.id)]</field>
        <field name="groups" eval="[(4,ref('tt_base.group_tt_tour_travel'))]"/>
    </record>

    <record id="tt_reservation_event_for_agent_user" model="ir.rule">
        <field name="name">Reservation Event For Agent User</field>
        <field name="model_id" ref="model_tt_reservation_event"/>
        <field name="domain_force">[('agent_id','=',user.agent_id.id)]</field>  <!--['|',('agent_id','=',user.agent_id.id),('sub_agent_id','=',user.agent_id.id)]-->  <!--[('agent_id','=',user.agent_id.id)]-->
        <field name="groups" eval="[(4,ref('tt_base.group_tt_agent_user'))]"/>  <!--,(4,ref('tt_base.group_tt_sub_agent_user_operator'))-->
    </record>

    <record id="tt_reservation_event_for_corpor_user" model="ir.rule">
        <field name="name">Reservation Event For Corporate User</field>
        <field name="model_id" ref="model_tt_reservation_event"/>
        <field name="domain_force">[('agent_id','=',user.agent_id.id),'|',('customer_parent_id','=',user.customer_parent_id.id),('customer_parent_id','=',user.customer_parent_id.child_customer_parent_ids.ids)]</field>  <!--['|',('agent_id','=',user.agent_id.id),('sub_agent_id','=',user.agent_id.id)]-->  <!--[('agent_id','=',user.agent_id.id)]-->
        <field name="groups" eval="[(4,ref('tt_base.group_tt_corpor_user'))]"/>  <!--,(4,ref('tt_base.group_tt_sub_agent_user_operator'))-->
    </record>

    <record id="tt_master_event_for_ho_user" model="ir.rule">
        <field name="name">Master Event For HO User</field>
        <field name="model_id" ref="model_tt_master_event"/>
        <field name="domain_force">[('ho_id','=',user.ho_id.id)]</field>
        <field name="groups" eval="[(4,ref('tt_base.group_tt_tour_travel'))]"/>
    </record>
</odoo>
