<odoo>
    <record id="api_connector_view_tree" model="ir.ui.view">
        <field name="name">api.connector.view.tree</field>
        <field name="model">tt.api.connector</field>
        <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="provider"/>
            <field name="provider_type"/>
            <field name="promotion_code"/>
            <field name="vendor_id"/>
            <field name="international_flight"/>
            <field name="is_no_busy"/>
            <field name="environment"/>
            <field name="api_key" invisible="1"/>
            <field name="active"/>
        </tree>
        </field>
    </record>

    <record id="api_connector_view_form" model="ir.ui.view">
        <field name="name">api.connector.view.form</field>
        <field name="model">tt.api.connector</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group name="general" string="General">
                            <field name="provider"/>
                            <field name="provider_type"/>
                            <field name="vendor_id"/>
                            <field name="environment"/>
                            <!--<field name="active"/>-->
                            <field name="is_no_busy"/>
                            <field name="international_flight"/>
                        </group>
                        <group  name="credential" string="Credential">
                            <field name="login"/>
                            <field name="passwd" password="True"/>
                            <field name="api_key" password="True"/>
                            <field name="email"/>
                            <field name="domain_code"/>
                            <field name="contract_version"/>
                            <field name="host_url"/>
                            <field name="image_url"/>
                            <field name="description"/>
                        </group>
                    </group>
                    <group name="Pricing">
                        <field name="promotion_code"/>
                        <field name="pricing_python_code"/>
                    </group>
                    <separator string="Login User List"/>
                    <field name="user_login_ids">
                        <tree>
                            <field name="username"/>
                            <field name="is_active"/>
                            <field name="write_date"/>
                        </tree>
                        <form>
                            <header>
                                <button string="Show/Hide Password" name="action_show_password" type="object"/>
                            </header>
                            <sheet>
                                <!--<div class="oe_button_box" name="button_box">-->
                                    <!--<button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">-->
                                        <!--<field name="is_active" widget="boolean_button" options='{"terminology": "archive"}'/>-->
                                    <!--</button>-->
                                <!--</div>-->
                                <group>
                                    <field name="is_active"/>
                                    <field name="name"/>
                                    <field name="username"/>
                                    <field name="password" password="1" attrs="{'invisible': [('is_visible', '=', True)]}"/>
                                    <field name="display_password" attrs="{'invisible': [('is_visible', '=', False)]}"/>
                                    <field name="is_visible" invisible="1"/>
                                </group>
                                <group>
                                    <field name="message"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                    <separator string="Promotion Codes"/>
                    <field name="promotion_code_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="fare_class"/>
                            <field name="notes"/>
                            <field name="is_active"/>
                        </tree>
                        <form>
                            <sheet>
                                <group>
                                    <field name="is_active"/>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="fare_class"/>
                                </group>
                                <group>
                                    <field name="notes"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="api_connector_view_search" model="ir.ui.view">
        <field name="name">api.connector.view.search</field>
        <field name="model">tt.api.connector</field>
        <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="provider"/>
            <field name="provider_type"/>
            <filter name="inactive" string="Archived" domain="[('active','=',False)]"/>
        </search>
        </field>
    </record>

    <record id="api_connector_action" model="ir.actions.act_window">
        <field name="name">API Connector</field>
        <field name="res_model">tt.api.connector</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <!--<field name="context">{'search_default_current':1, 'default_product_id': active_id}</field>-->
        <field name="domain">['|',('active', '=', 1),('active', '=', 0)]</field>
        <!--<field name="search_view_id" ref="api_connector_view_search"/>-->
    </record>

    <menuitem id="api_connector_menu" parent="tt_gateway.tt_gateway_menu"
              name="API Connector" action="api_connector_action" sequence="10"/>
</odoo>