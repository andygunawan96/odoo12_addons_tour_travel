        <field name="res_model">tt.reservation.tour</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">
            {
            'form_view_ref': 'tt_reservation_tour.tt_reservation_tour_form_view',
