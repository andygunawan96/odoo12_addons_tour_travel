<odoo>
    <record id="tt_master_tour_view_filter" model="ir.ui.view">
        <field name="name">tt.master.tour.view.filter</field>
        <field name="model">tt.master.tour</field>
        <field name="arch" type="xml">
            <search string="Search Tour Package">
                <field name="name"/>
                <field name="tour_code"/>
                <field name="duration"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_tour_category" string="Tour Category" domain="[]" context="{'group_by':'tour_category'}"/>
                    <filter name="group_by_tour_type" string="Tour Type" domain="[]" context="{'group_by':'tour_type'}"/>
                    <filter name="group_by_tour_route" string="Tour Route" domain="[]" context="{'group_by':'tour_route'}"/>
                    <filter name="group_by_country_str" string="Countries" domain="[]" context="{'group_by':'country_str'}"/>
                    <filter name="group_by_provider_id" string="Provider" domain="[]" context="{'group_by':'provider_id'}"/>
                    <filter name="group_by_state" string="State" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="tt_master_tour_view_form">
        <field name="name">tt.master.tour.view.form</field>
        <field name="model">tt.master.tour</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <!--STATE BUTTON-->
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,on_going,done,closed"/>
                    <button string="Validate" name="action_validate" type="object" attrs="{'invisible': [('state', '!=', 'draft')]}" groups="tt_base.group_tt_tour_division_operator"/>  <!--groups="tt_base.group_tt_tour_travel_manager"-->
                    <button string="Calculate Adjustment" name="action_adjustment" type="object" attrs="{'invisible': [('state', '!=', 'done')]}" groups="tt_base.group_tt_tour_division_operator"/>  <!--groups="tt_base.group_tt_tour_travel_manager"-->
                    <button string="Cancel" name="action_cancel" type="object" attrs="{'invisible': [('state', 'not in', ['draft','open'])]}" groups="tt_base.group_tt_tour_division_operator" confirm="Are you sure you want to cancel this tour?"/>  <!--groups="tt_base.group_tt_tour_travel_operator"-->
                    <button string="Sold Out" name="action_sold" type="object" attrs="{'invisible': [('state', 'not in', ['draft','open','definite'])]}" groups="tt_base.group_tt_tour_division_operator" confirm="Are you sure you want to set this tour as sold out?"/>  <!--groups="tt_base.group_tt_tour_travel_operator"-->
                    <button string="Re-Open" name="action_reopen" type="object" attrs="{'invisible': [('state', '!=', 'cancelled')]}" groups="tt_base.group_tt_tour_division_operator" confirm="Are you sure you want to re-open this tour?"/>  <!--groups="tt_base.group_tt_tour_travel_manager"-->
<!--                    <button string="Generate Room Codes" name="generate_all_room_codes" type="object" groups="base.user_admin"/>-->
                </header>
                <sheet>
                    <!--PRINT REPORT BUTTON-->
                    <!--                    <div class="oe_button_box" name="button_box">-->
                    <!--                        <button name="print_report"-->
                    <!--                                class="oe_stat_button"-->
                    <!--                                groups="tt_base.group_tt_tour_travel_operator"-->
                    <!--                                string="Print Report" type="object" icon="fa-print"-->
                    <!--                                attrs="{'invisible':[('state','in',('draft','open'))]}"/>-->
                    <!--                    </div>-->
                    <!--TITLE-->
                    <div class="oe_button_box" name="button_box">
                        <button name="%(tt_base.tt_upload_center_wizard_action_view)d" string="Upload Image" type="action"
                                class="oe_stat_button" icon="fa-upload" groups="tt_base.group_tt_tour_travel_operator"
                                context="{'default_target_field_name': 'image_ids'}"/>
                        <button name="%(tt_base.tt_upload_center_wizard_action_view)d" string="Upload Itinerary" type="action"
                                class="oe_stat_button" icon="fa-upload" groups="tt_base.group_tt_tour_travel_operator"
                                context="{'default_target_field_name': 'document_url'}"/>
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive"
                                groups="tt_base.group_tt_tour_travel_supervisor">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Tour Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="location_ids">
                                <tree>
                                    <field name="city_id"/>
                                    <field name="state_id"/>
                                    <field name="country_id"/>
                                </tree>
                            </field>
                            <field name="tour_route"/>
                            <field name="sequence"/>
                            <field name="is_can_hold"/>
                            <field name="document_url"/>
                        </group>
                        <group>
                            <field name="tour_code"/>
                            <field name="provider_id" groups="tt_base.group_tt_tour_travel_operator"/>
                            <field name="provider_fare_code" groups="tt_base.group_tt_tour_travel_operator"/>
                            <field name="currency_id"/>
                            <field name="description"/>
                            <field name="tour_category"/>
                            <field name="tour_type" attrs="{'invisible': [('tour_category', '=', 'private')], 'required': [('tour_category', '!=', 'private')]}"/>
                            <field name="departure_date"/>
                            <field name="arrival_date"/>
<!--                            <field name="departure_date" attrs="{'invisible': [('tour_category', '=', 'private')], 'required': [('tour_category', '!=', 'private')]}"/>-->
<!--                            <field name="arrival_date" attrs="{'invisible': [('tour_category', '=', 'private')], 'required': [('tour_category', '!=', 'private')]}"/>-->
<!--                            <field name="start_period" attrs="{'invisible': [('tour_category', '!=', 'private')], 'required': [('tour_category', '=', 'private')]}"/>-->
<!--                            <field name="end_period" attrs="{'invisible': [('tour_category', '!=', 'private')], 'required': [('tour_category', '=', 'private')]}"/>-->
                            <field name="agent_id" attrs="{'invisible': [('tour_category', '!=', 'private')], 'required': [('tour_category', '=', 'private')]}"/>
                            <field name="duration"/>
                            <field name="guiding_days"/>
                            <field name="driving_times"/>
                            <field name="survey_date"/>
                            <label for="seat" string="Available Seat"/>
                            <div>
                                <field name="seat" class="oe_inline"/> /
                                <field name="quota" class="oe_inline"/>
                            </div>
                            <field name="visa"/>
                            <field name="flight"/>
                        </group>
                    </group>

                    <!--Visa Pricelist Segment-->
                    <separator string="Visa Pricelist" attrs="{'invisible':[('visa','!=', 'exclude')]}"/>
                    <!--                    <field name="visa_pricelist_ids" context="" attrs="{'invisible':[('visa','!=', 'exclude')]}">-->
                    <!--                        <tree edit="false">-->
                    <!--                            <field name="name"/>-->
                    <!--                            <field name="pax_type"/>-->
                    <!--                            <field name="entry_type"/>-->
                    <!--                            <field name="visa_type"/>-->
                    <!--                            <field name="process_type"/>-->
                    <!--                            <field name="commercial_duration"/>-->
                    <!--                            <field name="immigration_consulate"/>-->
                    <!--                            <field name="sale_price"/>-->
                    <!--                            <field name="currency_id" invisible="1"/>-->
                    <!--                        </tree>-->
                    <!--                    </field>-->

                    <!--Flight Segment-->
                    <separator string="Segments Flight" attrs="{'invisible':[('flight','!=', 'include')]}"/>
                    <field name="flight_segment_ids" attrs="{'invisible':[('flight','!=', 'include')]}">
                        <tree>
                            <field name="journey_type"/>
                            <field name="carrier_id"/>
                            <field name="carrier_number"/>
                            <field name="origin_id"/>
                            <field name="origin_terminal"/>
                            <field name="destination_id"/>
                            <field name="destination_terminal"/>
                            <field name="departure_date"/>
                            <field name="arrival_date"/>
                        </tree>
                        <form>
                            <sheet>
                                <group>
                                    <group>
                                        <field name="carrier_number"/>
                                        <field name="carrier_id"/>
                                    </group>
                                    <group>
                                        <field name="journey_type"/>
                                        <field name="class_of_service"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="origin_id"/>
                                        <field name="departure_date"/>
                                        <field name="origin_terminal"/>
                                    </group>
                                    <group>
                                        <field name="destination_id"/>
                                        <field name="arrival_date"/>
                                        <field name="destination_terminal"/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>

                    <!--Pricing Segment-->
                    <separator string="Pricing"/>
                    <notebook colspan="4">
                        <page string="Tour Price">
                            <group col="3">
                                <field name="currency_id" invisible="1"/>
                                <group>
                                    <field name="adult_fare" groups="tt_base.group_tt_tour_travel_operator"/>
                                    <field name="adult_commission" groups="tt_base.group_tt_tour_travel_operator"/>
                                </group>
                                <group>
                                    <field name="child_fare" groups="tt_base.group_tt_tour_travel_operator"/>
                                    <field name="child_commission" groups="tt_base.group_tt_tour_travel_operator"/>
                                </group>
                                <group>
                                    <field name="infant_fare" groups="tt_base.group_tt_tour_travel_operator"/>
                                    <field name="infant_commission" groups="tt_base.group_tt_tour_travel_operator"/>
                                </group>
                            </group>
                        </page>
                        <page string="Additional Charge">
                            <group>
                                <field name="airport_tax"/>
                            </group>
                            <group col="3">
                                <group>
                                    <field name="tipping_guide"/>
                                    <field name="tipping_tour_leader" attrs="{'invisible': [('tour_type', '=', 'sic')]}"/>
                                    <field name="tipping_driver"/>
                                </group>
                                <group>
                                    <field name="tipping_guide_child"/>
                                    <field name="tipping_tour_leader_child" attrs="{'invisible': [('tour_type', '=', 'sic')]}"/>
                                    <field name="tipping_driver_child"/>
                                </group>
                                <group>
                                    <field name="tipping_guide_infant"/>
                                    <field name="tipping_tour_leader_infant" attrs="{'invisible': [('tour_type', '=', 'sic')]}"/>
                                    <field name="tipping_driver_infant"/>
                                </group>
                            </group>
                        </page>
                        <!--                        <page string="Discount" attrs="{'invisible': [('tour_category', '!=', 'private')]}">-->
                        <!--                            <field name="discount_ids">-->
                        <!--                                <tree>-->
                        <!--                                    <field name="pax_amount"/>-->
                        <!--                                    <field name="discount_per_pax"/>-->
                        <!--                                    <field name="discount_total"/>-->
                        <!--                                    <field name="currency_id" invisible="1"/>-->
                        <!--                                </tree>-->
                        <!--                                <form>-->
                        <!--                                    <group>-->
                        <!--                                        <field name="tour_id" invisible="1"/>-->
                        <!--                                        <field name="min_pax"/>-->
                        <!--                                        <field name="max_pax"/>-->
                        <!--                                        <field name="pax_amount" invisible="1"/>-->
                        <!--                                        <field name="discount_per_pax"/>-->
                        <!--                                        <field name="discount_total"/>-->
                        <!--                                        <field name="currency_id" invisible="1"/>-->
                        <!--                                    </group>-->
                        <!--                                </form>-->
                        <!--                            </field>-->
                        <!--                        </page>-->
                        <page string="Installment Payment Rules">
                            <group>
                                <group>
                                    <field name="down_payment"/>
                                </group>
                                <group>

                                </group>
                            </group>
                            <field name="payment_rules_ids" string="Payment Rules">
                                <tree>
                                    <field name="name"/>
                                    <field name="payment_percentage"/>
                                    <field name="description"/>
                                    <field name="due_date"/>
                                    <field name="pricelist_id" invisible="1"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                                <field name="payment_percentage"/>
                                            </group>
                                            <group>
                                                <field name="description"/>
                                                <field name="due_date"/>
                                                <field name="pricelist_id" invisible="1"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Tour Quotation" groups="tt_base.group_tt_tour_travel_operator">
                            <field name="quotation_ids"/>
                        </page>
                    </notebook>

                    <!--Tour Details Segment-->
                    <separator string="Tour Details"/>
                    <notebook colspan="4">
                        <page string="Accommodation">
                            <field name="room_ids" string="Rooms">
                                <tree>
                                    <field name="room_code"/>
                                    <field name="hotel"/>
                                    <field name="name" string="Room"/>
                                    <field name="bed_type"/>
                                    <field name="description"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="additional_charge"/>
                                    <field name="pax_limit"/>
                                    <!--<field name="is_extra_bed"/>-->
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="room_code"/>
                                                <field name="hotel"/>
                                                <field name="star"/>
                                                <field name="address"/>
                                                <field name="name" string="Room"/>
                                                <field name="bed_type"/>
                                                <field name="description"/>
                                                <field name="currency_id" invisible="1"/>
                                                <field name="tour_pricelist_id" invisible="1"/>
                                            </group>
                                            <group>
                                                <field name="pax_minimum"/>
                                                <field name="pax_limit"/>
                                                <field name="adult_limit"/>
                                                <field name="extra_bed_limit"/>
                                                <field name="adult_surcharge"/>
                                                <field name="child_surcharge"/>
                                                <field name="single_supplement"/>
                                                <field name="additional_charge"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Itinerary">
                            <field name="itinerary_ids">
                                <tree>
                                    <field name="day"/>
                                    <field name="name"/>
                                    <field name="date"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="day"/>
                                                <field name="name"/>
                                            </group>
                                            <group>
                                                <field name="date"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="item_ids">
                                                <tree>
                                                    <field name="sequence" widget="handle"/>
                                                    <field name="timeslot"/>
                                                    <field name="name"/>
                                                    <field name="description"/>
                                                </tree>
                                                <form>
                                                    <sheet>
                                                        <group>
                                                            <group>
                                                                <field name="sequence"/>
                                                                <field name="name"/>
                                                                <field name="description"/>
                                                            </group>
                                                            <group>
                                                                <field name="timeslot"/>
                                                                <field name="image_id"/>
                                                            </group>
                                                        </group>

                                                    </sheet>
                                                </form>
                                            </field>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Other Information">
                            <separator string="Input"/>
                            <group>
                                <group>
                                    <field name="import_other_info" filename="file_name"/>
                                    <button name="import_other_info_json" type="object" string="Import"/>
                                </group>
                                <group>
                                    <field name="export_other_info" filename="file_name"/>
                                    <button name="export_other_info_json" type="object" string="Export"/>
                                </group>
                            </group>
                            <field name="other_info_ids"/>
                            <separator string="Preview"/>
                            <button name="generate_other_info_preview" type="object" string="Generate"/>
                            <separator/>
                            <field name="other_info_preview"/>
                        </page>
                        <page string="Images">
                            <field name="image_ids">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="seq_id"/>
                                    <field name="file_reference"/>
                                    <field name="create_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <!--Tour Participants Segment-->
                    <separator string="Tour Participants"/>  <!--groups="tt_base.group_tt_tour_travel_operator"-->
                    <field name="passengers_ids">  <!--groups="tt_base.group_tt_tour_travel_operator"-->
                        <tree create="false">  <!--Diisi dari frontend-->
                            <field name="title"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                            <field name="nationality_id"/>
                            <field name="tour_room_id"/>
                            <field name="tour_room_seq"/>
                            <field name="booking_id"/>
                        </tree>
                    </field>

                    <!--Tour Surveys Segment-->
                    <separator string="Tour Surveys"/>  <!--groups="tt_base.group_tt_tour_travel_operator"-->
                    <field name="survey_title_ids">  <!--groups="tt_base.group_tt_tour_travel_operator"-->
                        <tree>
                            <field name="title"/>
                            <field name="description"/>
                            <!--                            <field name="date"/>-->
                        </tree>
                    </field>

                    <!--Tour Leader and Checklist Segment-->
                    <separator string="Tour Leader and Checklist"/>
                    <group>
                        <group>
                            <field name="tour_leader_ids">
                                <tree edit="false">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="tour_checklist_ids">  <!--groups="tt_base.group_tt_tour_travel_operator"-->
                                <tree editable="bottom">
                                    <field name="item"/>
                                    <field name="is_checked"/>
                                </tree>
                            </field>
                        </group>
                    </group>

                    <separator string="Tour Adjustment"/>  <!--attrs="{'invisible': [('state', 'not in', ['on_going', 'done'])]}"-->
                    <field name="adjustment_ids">  <!--attrs="{'invisible': [('state', 'not in', ['on_going', 'done'])]}"-->
                        <tree>
                            <field name="description"/>
                            <field name="type"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount"/>
                            <field name="price"/>
                            <field name="total"/>
                        </tree>
                        <form>
                            <group>
                                <group>
                                    <field name="description"/>
                                    <field name="type"/>
                                </group>
                                <group>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="amount"/>
                                    <field name="price"/>
                                    <field name="total"/>
                                </group>
                            </group>
                        </form>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="tt_master_tour_view_tree" >
        <field name="name">tt.master.tour.view.tree</field>
        <field name="model">tt.master.tour</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="tour_type"/>
                <field name="tour_route"/>
                <field name="departure_date"/>
                <field name="arrival_date"/>
                <field name="country_str"/>
                <field name="duration"/>
                <field name="seat" string="Seat Available"/>
                <field name="state"/>
                <field name="create_uid"/>
                <field name="provider_id" groups="tt_base.group_tt_tour_travel_operator"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="tt_master_tour_view_action">
        <field name="name">Tour Packages</field>
        <field name="res_model">tt.master.tour</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">
            {
            'form_view_ref': 'tt_reservation_tour.tt_master_tour_view_form',
            'tree_view_ref': 'tt_reservation_tour.tt_master_tour_view_tree',
            }
        </field>
    </record>

    <menuitem id="submenu_tour_pricelist" parent="tt_reservation_tour.menu_tour_travel_tour_master"
              name="Tour" action="tt_master_tour_view_action"/>
</odoo>