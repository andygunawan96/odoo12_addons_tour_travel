<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="tt_accounting_history_filter" model="ir.ui.view">
        <field name="name">tt.accounting.history.filter</field>
        <field name="model">tt.accounting.history</field>
        <field name="arch" type="xml">
            <search string="Search Accounting History">
                <field name="request"/>
                <field name="response"/>
                <separator/>
                <filter name="today" string="Today" domain="[('create_date','&gt;=',time.strftime('%%Y-%%m-%%d'))]"/>
                <filter name="yesterday" string="Yesterday"
                        domain="[
                                ('create_date', '&lt;', (context_today()).strftime('%Y-%m-%d')),
                                ('create_date', '&gt;=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d'))
                        ]"/>
                <filter name="week" string="This Week"
                        domain="[
                                '&amp;',
                                ('create_date', '>=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),
                                ('create_date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d')),
                            ]"/>
                <filter string="This Month" name="thismonth" domain="[('create_date','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                <filter string="This Year" name="thisyear" domain="[('create_date','&gt;=',time.strftime('%%Y-01-01'))]"/>

                <separator/>
                <group expand="0" string="Group By">
                    <filter name="state" string="State" domain="[]" context="{'group_by':'state'}"/>
                    <filter name="transport_type" string="Transport Type" domain="[]" context="{'group_by':'transport_type'}"/>
                    <filter name="res_model" string="Res Model" domain="[]" context="{'group_by':'res_model'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="tt_accounting_history_form_view" model="ir.ui.view">
        <field name="name">tt.accounting.history.form.view</field>
        <field name="model">tt.accounting.history</field>
        <field name="arch" type="xml">
            <form create="false">
                <header>
                    <button name="action_retry" states="failed"
                            groups="tt_base.group_tt_tour_travel_operator,account.group_account_user"
                            string="Retry" type="object" icon="fa-exchange" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="request"/>
                            <field name="transport_type"/>
                            <field name="res_model"/>
                            <field name="state"/>
                            <field name="parent_id" attrs="{'invisible':[('parent_id','=', False)]}"/>
                        </group>
                        <group>
                            <field name="response"/>
                            <label for="create_uid" string="Created By"/>
                            <div>
                                <field name="create_uid" class="oe_inline" readonly="True"/> -
                                <field name="create_date" class="oe_inline" readonly="True"/>
                            </div>
                            <label for="resend_uid" string="Last Retried By"/>
                            <div>
                                <field name="resend_uid" class="oe_inline" readonly="True"/> -
                                <field name="resend_date" class="oe_inline" readonly="True"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <field name="child_ids"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="tt_accounting_history_tree_view" model="ir.ui.view">
        <field name="name">tt.accounting.history.tree.view</field>
        <field name="model">tt.accounting.history</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="create_date"/>
                <field name="transport_type"/>
                <field name="res_model"/>
                <field name="parent_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="tt_accounting_history_action" model="ir.actions.act_window">
        <field name="name">Accounting (JasaWeb Sync Log)</field>
        <field name="res_model">tt.accounting.history</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="tt_accounting_history_filter"/>
        <field name="context">
            {
            'form_view_ref': 'tt_accounting_connector.tt_accounting_history_form_view',
            'tree_view_ref': 'tt_accounting_connector.tt_accounting_history_tree_view'
            }
        </field>
    </record>

    <menuitem id="menu_tour_travel_accounting" parent="tt_base.main_tour_travel"
              name="Accounting" sequence="9"
              groups="tt_base.group_tt_accounting_operator"/>

    <menuitem id="submenu_tour_travel_accounting_log" name="JasaWeb Sync Log" sequence="1"
              parent="tt_accounting_connector.menu_tour_travel_accounting" action="tt_accounting_history_action"
              groups="tt_base.group_tt_accounting_operator"/>

</odoo>