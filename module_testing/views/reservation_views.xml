<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="reservation_form_view" model="ir.ui.view">
        <field name="name">reservation.reservation.view</field>
        <field name="model">reservation.reservation</field>
        <field name="arch" type="xml">
            <sheet>
                <form>
                    <group>
                        <field name="name"/>
                        <field name="book_date"/>
                        <field name="total_amount"/>
                    </group>
                </form>
            </sheet>
        </field>
    </record>

    <record id="reservation_train_form_view" model="ir.ui.view">
        <field name="name">reservation.train.view</field>
        <field name="model">reservation.train</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="book_date"/>
                            <field name="total_amount"/>
                            <field name="pnr"/>
                        </group>
                        <group>
                        </group>
                        <button name="create_invoice" type="object" string="Create Invoice"/>
                        <field name="invoice_line_ids">
                            <tree>
                                <field name="res_model"/>
                                <field name="res_id"/>
                                <field name="invoice_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="reservation_hotel_form_view" model="ir.ui.view">
        <field name="name">reservation.hotel.view</field>
        <field name="model">reservation.hotel</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="book_date"/>
                            <field name="total_amount"/>
                            <field name="resv_code"/>
                        </group>
                        <group>
                        </group>
                        <button name="create_invoice" type="object" string="Create Invoice"/>
                        <field name="invoice_line_ids">
                            <tree>
                                <field name="res_model"/>
                                <field name="res_id"/>
                                <field name="invoice_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

