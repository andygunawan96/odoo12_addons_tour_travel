<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="animal_form_view" model="ir.ui.view">
        <field name="name">testing.animal.view</field>
        <field name="model">testing.animal</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="habitat"/>
                    <field name="owner_id"/>
                    <field name="state"/>
                    <field name="wing_swing" attrs="{'invisible':[('state','!=','flying')]}"/>
                    <field name="steps" attrs="{'invisible':[('state','!=','walking')]}"/>
                    <field name="thrust" attrs="{'invisible':[('state','!=','swimming')]}"/>
                    <field name="same_field"/>
                    <!--<field name="wing_swing"/>-->
                    <!--<field name="steps"/>-->
                    <!--<field name="thrust"/>-->
                    <button type="object" name="move_forward_animal" string="Move Forward"/>
                    <button type="object" name="report_animal" string="Report"/>
                </group>
            </form>
        </field>
    </record>

