<odoo>
    <record id="tt_reservation_train_segment_form_view" model="ir.ui.view">
        <field name="name">tt.transport.train.segment.form.view</field>
        <field name="model">tt.tb.segment.train</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="pnr"/>
                            <!--<field name="booking_id" invisible="1"/>-->
                            <field name="booking_id"/>
                            <field name="journey_id"/>
                            <field name="segment_code"/>
                            <field name="fare_code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="carrier_code"/>
                            <!--<field name="train_name" invisible="1"/>-->
                            <field name="carrier_name"/>
                            <field name="carrier_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <!--<field name="agent_id"/>-->
                            <field name="name"/>
                            <field name="journey_type"/>
                            <field name="provider"/>
                        </group>
                        <group>

                        </group>
                    </group>
                    <group>
                        <separator colspan="6" string="Booking"/>
                        <group>
                            <field name="origin_id"/>
                            <field name="departure_date"/>
                        </group>
                        <group>
                            <field name="destination_id"/>
                            <field name="arrival_date"/>
                        </group>
                    </group>
                    <group>
                        <group>
                        </group>
                        <group>
                            <field name="cabin_class"/>
                            <field name="class_of_service"/>
                            <field name="subclass"/>
                        </group>
                    </group>
                    <separator colspan="6" string="Legs"/>
                    <field name="leg_ids">
                        <tree>
                            <field name="id" groups="base.group_no_one"/>
                            <field name="pnr"/>
                            <field name="journey_type"/>
                            <field name="carrier_id"/>
                            <field name="carrier_name"/>
                            <field name="origin_id"/>
                            <field name="destination_id"/>
                            <field name="departure_date_fmt"/>
                            <field name="arrival_date_fmt"/>
                            <field name="arrival_date" invisible="1"/>
                            <field name="provider" invisible="1"/>
                        </tree>
                    </field>
                    <separator colspan="6" string="Service Charge"/>
                    <!--<field name="additional_service_charge_ids">-->
                        <!--<tree>-->
                            <!--<field name="segment_id"/>-->
                            <!--<field name="sequence"/>-->
                            <!--<field name="charge_code"/>-->
                            <!--<field name="pax_type"/>-->
                            <!--<field name="total"/>-->
                            <!--<field name="pax_count"/>-->
                        <!--</tree>-->
                    <!--</field>-->
                    <separator colspan="6" string="Seats"/>
                    <field name="seat_ids">
                        <tree>
                            <field name="passenger_id"/>
                            <field name="seat"/>
                            <field name="seat_code"/>
                        </tree>


                    </field>
                </sheet>
            </form>
        </field>
    </record>

