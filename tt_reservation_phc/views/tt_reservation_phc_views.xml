<odoo>
    <record id="tt_reservation_phc_filter_views" model="ir.ui.view">
        <field name="name">tt.reservation.phc.filter.view</field>
        <field name="model">tt.reservation.phc</field>
        <field name="arch" type="xml">
            <search string="Search phc Booking">
                <field name="name"/>
                <field name="pnr"/>
                <field name="carrier_name" groups="tt_base.group_tt_tour_travel"/>
                <field name="state_vendor" groups="tt_base.group_tt_tour_travel,tt_base.group_tt_external_user"/>
                <field name="agent_id" groups="tt_base.group_tt_tour_travel"/>
                <field name="agent_type_id" groups="tt_base.group_tt_tour_travel"/>
                <field name="customer_parent_id" groups="tt_base.group_tt_agent_user,tt_base.group_tt_tour_travel"/>
                <field name="customer_parent_type_id" groups="tt_base.group_tt_agent_user,tt_base.group_tt_tour_travel"/>
                <field name="contact_id"/>
                <group>
                    <filter string="All" name="all"/>
                    <filter string="Booked" name="booked" domain="[('state','=','booked')]"/>
                    <filter string="Issued" name="issued" domain="[('state','=','issued')]"/>
                    <filter string="Done" name="done" domain="[('state','=','done')]"/>
                    <filter string="Failed/Expired" name="failed_expired" domain="['|', '|', '|', ('state','=','fail_booked'),('state','=','fail_issued'),('state','=','fail_refunded'),('state','=','cancel2')]"/>
                    <filter string="Cancelled/Refunded" name="cancel" domain="['|', ('state','=','cancel'),('state','=','refund')]"/>
                </group>
                <separator/>
                <group>
                    <filter string="Not Reconciled" name="reconciled" domain="[('reconcile_state','=','not_reconciled')]"/>
                    <filter string="Partial Reconciled" name="reconciled" domain="[('reconcile_state','=','partial')]"/>
                    <filter string="Reconciled" name="reconciled" domain="[('reconcile_state','=','reconciled')]"/>
                </group>
                <separator/>
                <filter name="today" string="Today" domain="[('date','&gt;=',time.strftime('%%Y-%%m-%%d'))]"/>
                <filter name="yesterday" string="Yesterday"
                        domain="[
                                ('date', '&lt;', (context_today()).strftime('%Y-%m-%d')),
                                ('date', '&gt;=', (context_today() - datetime.timedelta(days=1)).strftime('%Y-%m-%d'))
                        ]"/>
                <filter name="week" string="This Week"
                        domain="[
                                '&amp;',
                                ('date', '>=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),
                                ('date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d')),
                            ]"/>
                <filter string="This Month" name="thismonth" domain="[('date','&gt;=',time.strftime('%%Y-%%m-01'))]"/>
                <filter string="This Year" name="thisyear" domain="[('date','&gt;=',time.strftime('%%Y-01-01'))]"/>

                <group expand="0" string="Group By">
                    <filter name="group_by_agent_id" string="Agent" domain="[]" context="{'group_by':'agent_id'}" groups="tt_base.group_tt_tour_travel"/>
                    <filter name="group_by_agent_type_id" string="Agent Type" domain="[]" context="{'group_by':'agent_type_id'}" groups="tt_base.group_tt_tour_travel"/>
                    <filter name="group_by_customer_parent_id" string="Customer Parent" domain="[]" context="{'group_by':'customer_parent_id'}" groups="tt_base.group_tt_agent_user,tt_base.group_tt_tour_travel"/>
                    <filter name="group_by_customer_parent_type_id" string="Customer Parent Type" domain="[]" context="{'group_by':'customer_parent_type_id'}" groups="tt_base.group_tt_agent_user,tt_base.group_tt_tour_travel"/>
                    <filter name="group_by_state" string="State" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="tt_reservation_phc_form_views" model="ir.ui.view">
        <field name="name">tt.reservation.phc.form.view</field>
        <field name="model">tt.reservation.phc</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="tt_reservation.tt_reservation_form_views"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="edit">false</attribute>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button string="Confirm Order" name="%(tt_reservation_phc.confirm_order_phc_wizard_action_view)d" type="action" states="issued"
                        groups="tt_base.group_external_vendor_phc_level_2,tt_base.group_reservation_level_4"
                        context="{
                        'default_booking_id': id,
                   }"/>
                <button string="No Show Order" name="action_set_state_vendor_as_no_show" type="object" attrs="{'invisible': [('state_vendor','!=', 'confirmed_order')]}" groups="tt_base.group_external_vendor_phc_level_2,tt_base.group_reservation_level_4"/>
                <button string="Refund Order" name="action_set_state_vendor_as_refund" type="object" attrs="{'invisible': [('state_vendor','!=', 'confirmed_order')]}" groups="tt_base.group_external_vendor_phc_level_2,tt_base.group_reservation_level_4"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,booked,issued,done"/>
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="print_eticket"
                        class="oe_stat_button" states="issued,done"
                        string="Print E-Ticket" type="object" icon="fa-print"/>

                <button name="print_eticket_original"
                        class="oe_stat_button" states="issued,done"
                        string="Get Original Ticket" type="object" icon="fa-print"/>
                <button name="print_eticket_with_price"
                        class="oe_stat_button" states="issued,done"
                        string="Print E-Ticket (Price)" type="object" icon="fa-print"/>
                <button name="print_ho_invoice"
                        class="oe_stat_button" states="issued,done"
                        string="Print Invoice (HO)" type="object" icon="fa-print"
                        groups="tt_base.group_tt_tour_travel,tt_base.group_tt_agent_user"/>
                <button name="print_itinerary"
                        class="oe_stat_button" states="booked,issued,done"
                        string="Print Itinerary" type="object" icon="fa-print"/>
            </xpath>
            <xpath expr="//field[@name='date']" position="before">
                <field name="state_vendor"/>
            </xpath>
            <xpath expr="//group[@name='paxgroup']" position="before">
                <separator string="Test Information"/>
                <field name="timeslot_ids"/>
                <group>
                    <field name="timeslot_type"/>
                    <field name="picked_timeslot_id"/>
                    <field name="test_datetime"/>
                    <field name="test_address"/>
                    <field name="test_address_map_link"/>
                </group>
                <separator string="Analyst(s)"/>
                <field name="analyst_ids"/>
            </xpath>


            <xpath expr="//page[@name='anchor']" position="before">
                <page string="Passengers">
                    <field name="passenger_ids">
                        <tree>
                            <field name="title"/>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                            <field name="nationality_id"/>
                            <field name="identity_type"/>
                            <field name="identity_number"/>
                            <field name="email"/>
                            <field name="phone_number"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//page[@name='anchor']" position="before">
                <page string="Prices" name="prices">
                    <field name="sale_service_charge_ids" context="{'form_view_ref':'tt_reservation_airline.tt_service_charge_airline_inherit_form_view'}">
                        <tree>
                            <field name="charge_code"/>
                            <field name="charge_type"/>
                            <field name="pax_type"/>
                            <field name="pax_count"/>
                            <field name="amount"/>
                            <field name="total"/>
                            <field name="description"/>
                            <field name="currency_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//page[@name='anchor']" position="before">
                <page string="Vendor" name="vendor" groups="tt_base.group_tt_tour_travel">
                    <field name="provider_booking_ids"/>
                </page>
            </xpath>
        </field>
    </record>

    <record id="tt_reservation_phc_form_external_views" model="ir.ui.view">
        <field name="name">tt.reservation.phc.form.external.view</field>
        <field name="model">tt.reservation.phc</field>
        <field name="priority">5</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <header>
                    <button string="Confirm Order" name="%(tt_reservation_phc.confirm_order_phc_wizard_action_view)d" type="action" states="issued"
                            groups="tt_base.group_external_vendor_phc_level_2"
                            context="{
                        'default_booking_id': id,
                   }"/>
                    <button string="No Show Order" name="action_set_state_vendor_as_no_show" type="object" attrs="{'invisible': [('state_vendor','!=', 'confirmed_order')]}" groups="tt_base.group_external_vendor_phc_level_2,tt_base.group_reservation_level_4"/>
                    <button string="Refund Order" name="action_set_state_vendor_as_refund" type="object" attrs="{'invisible': [('state_vendor','!=', 'confirmed_order')]}" groups="tt_base.group_external_vendor_phc_level_2,tt_base.group_reservation_level_4"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,booked,issued,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="id" invisible="1"/>
                            <field name="pnr"/>
                            <field name="agent_id"/>
                            <field name="agent_type_id"/>
                            <field name="customer_parent_id"/>
                            <field name="customer_parent_type_id"/>
                            <field name="provider_type_id"/>
                            <field name="provider_name"/>
                            <field name="carrier_name"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="res_model" invisible="1"/>
                        </group>
                        <group>
                            <field name="state_vendor"/>
                            <field name="date"/>
                            <field name="hold_date"/>
                            <!--CANDY: delete expired date & is_manual-->
                            <!--<field name="expired_date"/>-->
                            <!--<field name="is_manual"/>-->
                            <label for="user_id" string="Created by"/>
                            <div>
                                <field name="user_id" readonly="1" class="oe_inline"/> /
                                <field name="create_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="booked_uid" string="Booked By"/>
                            <div>
                                <field name="booked_uid" readonly="1" class="oe_inline"/> /
                                <field name="booked_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="issued_uid" string="Issued By"/>
                            <div>
                                <field name="issued_uid" readonly="1" class="oe_inline"/> /
                                <field name="issued_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="cancel_uid" string="Cancel By"/>
                            <div>
                                <field name="cancel_uid" readonly="1" class="oe_inline"/> /
                                <field name="cancel_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="refund_uid" string="Refund By"/>
                            <div>
                                <field name="refund_uid" readonly="1" class="oe_inline"/> /
                                <field name="refund_date" readonly="1" class="oe_inline"/>
                            </div>
                            <label for="reschedule_uid" string="Rescheduled By"/>
                            <div>
                                <field name="reschedule_uid" readonly="1" class="oe_inline"/>
                                <field name="reschedule_date" readonly="1" class="oe_inline"/>
                            </div>
                            <field name="penalty_amount" readonly="1"/>
                            <field name="voucher_code" readonly="1"/>
                        </group>
                    </group>
                    <separator string="Test Information"/>
                    <field name="timeslot_ids"/>
                    <group>
                        <field name="picked_timeslot_id"/>
                        <field name="test_datetime"/>
                    </group>
                    <separator string="Analyst(s)"/>
                    <field name="analyst_ids"/>
                    <group name="paxgroup">
                        <group string="Booker Information">
                            <field name="booker_id"/>
                        </group>
                        <group string="Contact Information">
                            <field name="contact_id"/>
                            <label for="contact_title" string="Contact Name"/>
                            <div>
                                <field name="contact_title" class="oe_inline"/>.
                                <field name="contact_name" class="oe_inline"/>
                            </div>
                            <field name="contact_email"/>
                            <field name="contact_phone"/>
                        </group>
                    </group>
                    <group string="Paxs">
                        <field name="adult"/>
                        <field name="child"/>
                        <field name="infant"/>
                    </group>
                    <notebook colspan="4" name="notebooks">
                        <page string="Passengers">
                            <field name="passenger_ids">
                                <tree>
                                    <field name="title"/>
                                    <field name="first_name"/>
                                    <field name="last_name"/>
                                    <field name="gender"/>
                                    <field name="birth_date"/>
                                    <field name="nationality_id"/>
                                    <field name="identity_type"/>
                                    <field name="identity_number"/>
                                    <field name="email"/>
                                    <field name="phone_number"/>
                                </tree>
                            </field>
                        </page>
                        <page string="anchor" name="anchor" invisible="1"/>
                        <page string="Refund" name="refund_page" attrs="{'invisible':[('refund_ids','=', [])]}">
                            <field name="refund_ids"/>
                        </page>
                    </notebook>
                    <footer>
                        <group string="Total Information" class="oe_subtotal_footer oe_right">
                            <field name="total_fare" class="oe_subtotal_footer_separator"/>
                            <field name="total_tax" class="oe_subtotal_footer_separator"/>
                            <field name="total" class="oe_subtotal_footer_separator"/>
                            <field name="total_discount" class="oe_subtotal_footer_separator"/>
                        </group>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

