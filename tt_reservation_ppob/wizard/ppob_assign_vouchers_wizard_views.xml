<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="ppob_assign_vouchers_wizard" model="ir.ui.view">
			<field name="name">PPOB Assign Vouchers Wizard</field>
			<field name="model">ppob.assign.vouchers.wizard</field>
			<field name="arch" type="xml">
				<form string="Message">
					<group>
                        <group>
                            <field name="provider_id"/>
                        </group>
                        <group>
                            <field name="ho_ids" groups="base.group_erp_manager"/>
                        </group>
					</group>
					<footer>
						<button string="Assign to Selected HO(s)" name="assign_to_multiple_hos" type="object" class="btn-primary" groups="base.group_erp_manager"/>
						<button string="Assign to All HO(s)" name="assign_to_all_hos" type="object" class="btn-primary" groups="base.group_erp_manager"/>
						<button string="Cancel" class="btn-default" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_ppob_assign_vouchers_wizard" model="ir.actions.act_window">
			<field name="name">PPOB Assign Vouchers Wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">ppob.assign.vouchers.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="ppob_assign_vouchers_wizard"/>
			<field name="target">new</field>
		</record>

		<menuitem
				id="sub_menu_ppob_assign_vouchers_wizard"
				name="PPOB Master Voucher Management"
				parent="tt_reservation_ppob.menu_tour_travel_ppob_config"
				action="action_ppob_assign_vouchers_wizard"
				sequence="5"
				groups="base.group_erp_manager"
		/>

	</data>
</odoo>
