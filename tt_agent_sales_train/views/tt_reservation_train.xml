<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tt_reservation_train_sales_form_view" model="ir.ui.view">
        <field name="name">tt.reservation.train.sales.form.view</field>
        <field name="model">tt.reservation.train</field>
        <field name="inherit_id" ref="tt_reservation_train.tt_reservation_train_form_views"/>
        <field name="arch" type="xml">

            <field name="display_mobile" position="after">
                <field name="state_invoice"/>
            </field>
            <xpath expr="//button[@name='action_sync_date']" position="after">
                <button string="CREATE INVOICE" name="action_create_invoice" states="booked,issued" type="object"/>
            </xpath>
            <xpath expr="//page[@name='prices']" position="after">
                <page string="Agent Invoice" name="agent_invoice">
                    <field name="invoice_names" invisible="1"/>
                    <field name="invoice_line_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="state"/>
                            <field name="total"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>